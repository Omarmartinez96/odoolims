<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- ========== GRUPO BÁSICO PARA ANALISTAS PORTAL ========== -->
        <record id="group_portal_analyst" model="res.groups">
            <field name="name">Portal Analyst</field>
            <field name="comment">Analistas de laboratorio con acceso al portal básico</field>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!-- ========== REGLA BÁSICA DE ACCESO ========== -->
        
        <!-- Los analistas solo pueden ver sus parámetros asignados -->
        <record id="rule_parameter_analyst_own" model="ir.rule">
            <field name="name">Portal Analyst: Only Own Parameters</field>
            <field name="model_id" ref="lims_analysis_v2.model_lims_parameter_analysis_v2"/>
            <field name="domain_force">[('analyst_assigned_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_portal_analyst'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Los analistas pueden ver análisis relacionados (solo lectura) -->
        <record id="rule_analysis_analyst_readonly" model="ir.rule">
            <field name="name">Portal Analyst: Related Analysis Read-Only</field>
            <field name="model_id" ref="lims_analysis_v2.model_lims_analysis_v2"/>
            <field name="domain_force">[('parameter_analysis_ids.analyst_assigned_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_portal_analyst'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>