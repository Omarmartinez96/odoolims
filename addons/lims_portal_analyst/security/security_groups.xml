<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- ========== GRUPO BÁSICO PARA ANALISTAS PORTAL ========== -->
        <record id="group_portal_analyst" model="res.groups">
            <field name="name">Portal Analyst</field>
            <field name="comment">Analistas de laboratorio con acceso al portal básico</field>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!-- ========== REGLAS DE ACCESO PARA PARÁMETROS ========== -->
        
        <!-- Los analistas pueden ver TODOS los parámetros -->
        <record id="rule_parameter_analyst_all" model="ir.rule">
            <field name="name">Portal Analyst: All Parameters Read Access</field>
            <field name="model_id" ref="lims_analysis_v2.model_lims_parameter_analysis_v2"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_portal_analyst'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Los analistas solo pueden ESCRIBIR en sus parámetros asignados o sin asignar -->
        <record id="rule_parameter_analyst_write" model="ir.rule">
            <field name="name">Portal Analyst: Write Own or Unassigned</field>
            <field name="model_id" ref="lims_analysis_v2.model_lims_parameter_analysis_v2"/>
            <field name="domain_force">['|', ('analyst_assigned_id', '=', user.id), ('analyst_assigned_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('group_portal_analyst'))]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- ========== REGLAS DE ACCESO PARA ANÁLISIS ========== -->
        
        <!-- Los analistas pueden ver TODOS los análisis (solo lectura) -->
        <record id="rule_analysis_analyst_all_readonly" model="ir.rule">
            <field name="name">Portal Analyst: All Analysis Read-Only</field>
            <field name="model_id" ref="lims_analysis_v2.model_lims_analysis_v2"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_portal_analyst'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>