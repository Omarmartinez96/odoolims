<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    
    <!-- MEN√ö PRINCIPAL PRIMERO -->
    <menuitem id="lims_custody_menu_root" name="üìã Cadenas de Custodia" sequence="10"/>
    
    <!-- VISTAS PARA TIPOS DE MUESTRA -->
    <record id="view_lims_sample_type_list" model="ir.ui.view">
      <field name="name">lims.sample.type.list</field>
      <field name="model">lims.sample.type</field>
      <field name="arch" type="xml">
        <list string="Tipos de Muestra" editable="top">
