          <field name="description"/>
          <field name="active"/>
        </list>
      </field>
    </record>

    <record id="view_lims_sample_type_form" model="ir.ui.view">
      <field name="name">lims.sample.type.form</field>
      <field name="model">lims.sample.type</field>
      <field name="arch" type="xml">
        <form string="Tipo de Muestra">
          <sheet>
            <group>
              <field name="name"/>
              <field name="active"/>
            </group>
            <group string="Descripci√≥n">
              <field name="description" nolabel="1"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- VISTAS PARA TIPOS DE RECIPIENTE -->
    <record id="view_lims_container_type_list" model="ir.ui.view">
