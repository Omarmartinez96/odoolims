    <!-- VISTA DE FORMULARIO COMPLETA PARA PLANTILLAS DE PAR√ÅMETROS -->
    <record id="view_lims_parameter_template_form" model="ir.ui.view">
      <field name="name">lims.parameter.template.form</field>
      <field name="model">lims.parameter.template</field>
      <field name="arch" type="xml">
        <form string="Plantilla de Par√°metro">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="name" placeholder="Ej: Coliformes totales en alimento (NOM-113)" required="1"/>
              </h1>
            </div>

            <!-- Informaci√≥n b√°sica -->
            <group>
              <group string="üìã Informaci√≥n General">
                <field name="category" required="1"/>
                <field name="microorganism" placeholder="Ej: Coliformes totales, E. coli"/>
                <field name="active"/>
              </group>
              <group string="üî¨ M√©todo y Unidades">
                <field name="method" placeholder="Ej: NOM-113, ASTM D1293, EPA 200.8"/>
                <field name="unit" placeholder="Ej: UFC/g, mg/L, ¬µg/g"/>
              </group>
            </group>

            <!-- Descripci√≥n completa -->
            <group string="üìù Descripci√≥n del An√°lisis">
              <field name="description" nolabel="1" 
                    placeholder="Descripci√≥n detallada del procedimiento, condiciones especiales, materiales necesarios, etc..."/>
            </group>

            <!-- Aqu√≠ puedes agregar m√°s campos seg√∫n necesites -->
            <notebook>
              <page string="üß™ Condiciones T√©cnicas">
                <group>
                  <group string="Condiciones de Incubaci√≥n">
                    <!-- Agrega campos adicionales aqu√≠ si los necesitas -->
                  </group>
                  <group string="Condiciones de Preservaci√≥n">
                    <!-- Agrega campos adicionales aqu√≠ si los necesitas -->
                  </group>
                </group>
              </page>
              
              <page string="üìã Informaci√≥n Adicional">
                <group>
                  <!-- Agrega todos los campos t√©cnicos que necesites aqu√≠ -->
                </group>
              </page>
            </notebook>

          </sheet>
        </form>
      </field>
    </record>

    <!-- ACCIONES -->
    <record id="action_lims_sample_types" model="ir.actions.act_window">
      <field name="name">Tipos de Muestra</field>
      <field name="res_model">lims.sample.type</field>
