<odoo>
    <data>
        <!-- Vista Formulario -->
        <record id="view_lims_sample_form" model="ir.ui.view">
            <field name="name">lims.sample.form</field>
            <field name="model">lims.sample</field>
            <field name="arch" type="xml">
                <form string="RecepciÃ³n de Muestra">
                    <sheet>
                        <group>
                            <separator string="DATOS DEL CLIENTE" colspan="4"/>
                            <field name="cliente_id" required="1" options="{'no_create': True}">
                                <help>Si el cliente no aparece, debe registrarlo en la plataforma de clientes.</help>
                            </field>
                            <field name="client_code" readonly="1"/>
                            <field name="sucursal_id" required="1" options="{'no_create': True}"/>
                            <field name="departamento_id" options="{'no_create': True}"/>
                        </group>

                        <group>
                            <separator string="DATOS DE LA MUESTRA" colspan="4"/>
                            <field name="sample_identifier" required="1"/>
                            <field name="sample_type"/>
                            <field name="date_received" required="1"/>
                            <field name="state"/>
                        </group>

                        <group>
                            <separator string="CADENA DE CUSTODIA" colspan="4"/>
                            <field name="custody_chain_id" required="0"/>
                        </group>

                        <group>
                            <separator string="ADJUNTOS" colspan="4"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </group>

                        <group>
                            <button name="action_register_sample" type="object" string="Registrar Muestra"
                                    class="btn-primary" icon="fa-flask"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
