<odoo>
    <data>
        <!-- Vista Lista -->
        <record id="view_lims_sample_list" model="ir.ui.view">
            <field name="name">lims.sample.list</field>
            <field name="model">lims.sample</field>
            <field name="arch" type="xml">
                <list string="Muestras">
                    <field name="sample_code"/>
                    <field name="cliente_id"/>
                    <field name="id"/>
                    <field name="sample_type"/>
                    <field name="state"/>
                    <field name="date_received"/>
                </list>
            </field>
        </record>

        <!-- Vista Formulario -->
        <record id="view_lims_sample_form" model="ir.ui.view">
            <field name="name">lims.sample.form</field>
            <field name="model">lims.sample</field>
            <field name="arch" type="xml">
                <form string="Recepción de Muestra">
                    <sheet>
                        <group>
                            <field name="sample_code" readonly="1"/>
                            <field name="cliente_id" required="1"/>
                            <field name="sample_type"/>
                            <field name="date_received" required="1"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción -->
        <record id="action_lims_samples" model="ir.actions.act_window">
            <field name="name">Muestras</field>
            <field name="res_model">lims.sample</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_lims_sample_list"/> <!-- Abre primero la lista -->
        </record>

        <!-- Botón de Crear -->
        <record id="action_create_lims_sample" model="ir.actions.act_window">
            <field name="name">Registrar Nueva Muestra</field>
            <field name="res_model">lims.sample</field>
            <field name="view_mode">form</field>
            <field name="target">new</field> <!-- Ventana modal -->
            <field name="context">{'default_state': 'draft'}</field> <!-- Contexto inicial -->
        </record>

        <!-- Menú Principal -->
        <menuitem id="lims_menu" 
                  name="Recepción de Muestras" 
                  sequence="10"/>

        <!-- Submenú -->
        <menuitem id="lims_sample_menu" 
                  name="Muestras" 
                  parent="lims_menu" 
                  action="action_lims_samples"/>

        <!-- Botón para Agregar Muestra -->
        <record id="view_lims_sample_list_inherit" model="ir.ui.view">
            <field name="name">lims.sample.list.inherit</field>
            <field name="model">lims.sample</field>
            <field name="inherit_id" ref="view_lims_sample_list"/>
            <field name="arch" type="xml">
                <xpath expr="//list" position="before">
                    <header>
                        <button name="%(action_create_lims_sample)d" type="action" string="Agregar Nueva Muestra" class="btn-primary"/>
                    </header>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
