<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista Dashboard Pantalla Completa -->
        <record id="view_lims_dashboard_kanban" model="ir.ui.view">
            <field name="name">lims.analysis.dashboard.kanban</field>
            <field name="model">lims.analysis.v2</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard_graph" create="false" sample="0" default_group_by="">
                    <field name="id"/>
                    <field name="sample_reception_id"/>
                    <field name="total_samples_count"/>
                    <field name="samples_all_ready_count"/>
                    <field name="samples_in_process_count"/>
                    <field name="samples_reported_count"/>
                    <field name="samples_signed_count"/>
                    <field name="samples_pending_count"/>
                    <field name="samples_this_week_count"/>
                    <field name="samples_today_count"/>
                    <field name="samples_with_revisions_count"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="o_dashboard_container" style="margin: -40px -24px 0 -24px; padding: 0; width: calc(100vw - 0px); min-height: 100vh;">
                                <style>
                                    .o_kanban_view .o_kanban_renderer {
                                        max-width: none !important;
                                        width: 100% !important;
                                        margin: 0 !important;
                                    }
                                    .o_content {
                                        max-width: none !important;
                                    }
                                    .o_kanban_renderer .o_kanban_record {
                                        width: 100% !important;
                                        margin: 0 !important;
                                    }
                                    .o_action_manager {
                                        max-width: 100% !important;
                                    }
                                </style>

                                <!-- Container Principal -->
                                <div style="padding: 40px 60px;">
                                    
                                    <!-- Primera Fila - M√©tricas Principales -->
                                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 180px)); gap: 15px; margin-bottom: 30px; justify-content: center;">
                                        
                                        <!-- Total de Muestras -->
                                        <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 10px; padding: 15px; text-align: center; color: white; box-shadow: 0 5px 15px rgba(102, 126, 234, 0.2); transition: transform 0.3s; cursor: pointer;">
                                            <div style="font-size: 1.8em; font-weight: bold; margin-bottom: 5px;">
                                                <field name="total_samples_count"/>
                                            </div>
                                            <div style="font-size: 0.85em; margin-bottom: 10px;">üìä Total de Muestras</div>
                                            <button name="action_view_all_samples" type="object" style="background: white; color: #667eea; border: none; padding: 6px 15px; border-radius: 20px; font-weight: 500; font-size: 0.85em; cursor: pointer;">
                                                Ver Todas
                                            </button>
                                        </div>

                                        <!-- Muestras Listas -->
                                        <div style="background: linear-gradient(135deg, #0ba360 0%, #3cba92 100%); border-radius: 10px; padding: 15px; text-align: center; color: white; box-shadow: 0 5px 15px rgba(60, 186, 146, 0.2); transition: transform 0.3s; cursor: pointer;">
                                            <div style="font-size: 1.8em; font-weight: bold; margin-bottom: 5px;">
                                                <field name="samples_all_ready_count"/>
                                            </div>
                                            <div style="font-size: 0.85em; margin-bottom: 10px;">‚úÖ Par√°metros Listos</div>
                                            <button name="action_view_samples_all_ready" type="object" style="background: white; color: #0ba360; border: none; padding: 6px 15px; border-radius: 20px; font-weight: 500; font-size: 0.85em; cursor: pointer;">
                                                Ver Listas
                                            </button>
                                        </div>

                                        <!-- En Proceso -->
                                        <div style="background: linear-gradient(135deg, #f2994a 0%, #f2c94c 100%); border-radius: 10px; padding: 15px; text-align: center; color: white; box-shadow: 0 5px 15px rgba(242, 201, 76, 0.2); transition: transform 0.3s; cursor: pointer;">
                                            <div style="font-size: 1.8em; font-weight: bold; margin-bottom: 5px;">
                                                <field name="samples_in_process_count"/>
                                            </div>
                                            <div style="font-size: 0.85em; margin-bottom: 10px;">‚è≥ En Proceso</div>
                                            <button name="action_view_samples_in_process" type="object" style="background: white; color: #f2994a; border: none; padding: 6px 15px; border-radius: 20px; font-weight: 500; font-size: 0.85em; cursor: pointer;">
                                                Ver Proceso
                                            </button>
                                        </div>

                                        <!-- Sin Procesar -->
                                        <div style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); border-radius: 10px; padding: 15px; text-align: center; color: white; box-shadow: 0 5px 15px rgba(220, 53, 69, 0.2); transition: transform 0.3s; cursor: pointer;">
                                            <div style="font-size: 1.8em; font-weight: bold; margin-bottom: 5px;">
                                                <field name="samples_pending_count"/>
                                            </div>
                                            <div style="font-size: 0.85em; margin-bottom: 10px;">üìã Sin Procesar</div>
                                            <button name="action_view_samples_pending" type="object" style="background: white; color: #dc3545; border: none; padding: 6px 15px; border-radius: 20px; font-weight: 500; font-size: 0.85em; cursor: pointer;">
                                                Ver Sin Procesar
                                            </button>
                                        </div>
                                        
                                        <!-- Reportadas -->
                                        <div style="background: linear-gradient(135deg, #89d4cf 0%, #6c86b8 100%); border-radius: 10px; padding: 15px; text-align: center; color: white; box-shadow: 0 5px 15px rgba(108, 134, 184, 0.2); transition: transform 0.3s; cursor: pointer;">
                                            <div style="font-size: 1.8em; font-weight: bold; margin-bottom: 5px;">
                                                <field name="samples_reported_count"/>
                                            </div>
                                            <div style="font-size: 0.85em; margin-bottom: 10px;">üìß Reportadas</div>
                                            <button name="action_view_samples_reported" type="object" style="background: white; color: #6c86b8; border: none; padding: 6px 15px; border-radius: 20px; font-weight: 500; font-size: 0.85em; cursor: pointer;">
                                                Ver Reportadas
                                            </button>
                                        </div>

                                        <!-- Firmadas -->
                                        <div style="background: linear-gradient(135deg, #434343 0%, #000000 100%); border-radius: 10px; padding: 15px; text-align: center; color: white; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2); transition: transform 0.3s; cursor: pointer;">
                                            <div style="font-size: 1.8em; font-weight: bold; margin-bottom: 5px;">
                                                <field name="samples_signed_count"/>
                                            </div>
                                            <div style="font-size: 0.85em; margin-bottom: 10px;">‚úçÔ∏è Firmadas</div>
                                            <button name="action_view_samples_signed" type="object" style="background: white; color: #434343; border: none; padding: 6px 15px; border-radius: 20px; font-weight: 500; font-size: 0.85em; cursor: pointer;">
                                                Ver Firmadas
                                            </button>
                                        </div>
                                        
                                        <!-- Listos Sin Reportar -->
                                        <div style="background: linear-gradient(135deg, #ff9800 0%, #ff5722 100%); border-radius: 10px; padding: 15px; text-align: center; color: white; box-shadow: 0 5px 15px rgba(255, 152, 0, 0.2); transition: transform 0.3s; cursor: pointer;">
                                            <div style="font-size: 1.8em; font-weight: bold; margin-bottom: 5px;">
                                                <field name="samples_ready_not_reported_count"/>
                                            </div>
                                            <div style="font-size: 0.85em; margin-bottom: 10px;">üìù Listos Sin Reportar</div>
                                            <button name="action_view_samples_ready_not_reported" type="object" style="background: white; color: #ff9800; border: none; padding: 6px 15px; border-radius: 20px; font-weight: 500; font-size: 0.85em; cursor: pointer;">
                                                Ver Pendientes
                                            </button>
                                        </div>

                                        <!-- Vencidas/Urgentes -->
                                        <div style="background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%); border-radius: 10px; padding: 15px; text-align: center; color: white; box-shadow: 0 5px 15px rgba(211, 47, 47, 0.2); transition: transform 0.3s; cursor: pointer;">
                                            <div style="font-size: 1.8em; font-weight: bold; margin-bottom: 5px;">
                                                <field name="samples_overdue_count"/>
                                            </div>
                                            <div style="font-size: 0.85em; margin-bottom: 10px;">‚ö†Ô∏è Vencidas/Urgentes</div>
                                            <button name="action_view_samples_overdue" type="object" style="background: white; color: #d32f2f; border: none; padding: 6px 15px; border-radius: 20px; font-weight: 500; font-size: 0.85em; cursor: pointer;">
                                                Ver Urgentes
                                            </button>
                                        </div>

                                    </div>
                                    
                                    <!-- Estad√≠sticas R√°pidas -->
                                    <div style="background: white; border-radius: 10px; padding: 20px; box-shadow: 0 3px 10px rgba(0,0,0,0.05);">
                                        <h4 style="text-align: center; margin-bottom: 20px; color: #333; font-weight: 400; font-size: 1.2em;">
                                            üìà Estad√≠sticas R√°pidas
                                        </h4>
                                        <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 15px; max-width: 450px; margin: 0 auto;">
                                            
                                            <div style="text-align: center;">
                                                <div style="color: #666; margin-bottom: 8px; font-size: 0.85em;">Esta Semana</div>
                                                <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 10px; border-radius: 8px; font-size: 1.5em; font-weight: bold;">
                                                    <field name="samples_this_week_count"/>
                                                </div>
                                            </div>
                                            
                                            <div style="text-align: center;">
                                                <div style="color: #666; margin-bottom: 8px; font-size: 0.85em;">Recibidas Hoy</div>
                                                <div style="background: linear-gradient(135deg, #0ba360 0%, #3cba92 100%); color: white; padding: 10px; border-radius: 8px; font-size: 1.5em; font-weight: bold;">
                                                    <field name="samples_today_count"/>
                                                </div>
                                            </div>
                                            
                                            <div style="text-align: center;">
                                                <div style="color: #666; margin-bottom: 8px; font-size: 0.85em;">Sin Procesar</div>
                                                <div style="background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%); color: white; padding: 10px; border-radius: 8px; font-size: 1.5em; font-weight: bold;">
                                                    <field name="samples_pending_count"/>
                                                </div>
                                            </div>
                                            
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- ACCI√ìN PRINCIPAL DEL DASHBOARD -->
        <record id="action_lims_dashboard" model="ir.actions.act_window">
            <field name="name">Dashboard de Muestras</field>
            <field name="res_model">lims.analysis.v2</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_lims_dashboard_kanban"/>
            <field name="limit">1</field>
            <field name="context">{'create': False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay datos para mostrar en el Dashboard
                </p>
                <p>
                    El dashboard requiere al menos una muestra en el sistema.
                </p>
            </field>
        </record>
        
        <!-- MEN√ö DEL DASHBOARD -->
        <menuitem id="menu_lims_dashboard" 
                  name="üìä Dashboard de Muestras" 
                  parent="menu_lims_analysis_v2_root" 
                  action="action_lims_dashboard" 
                  sequence="1"/>
        
    </data>
</odoo>