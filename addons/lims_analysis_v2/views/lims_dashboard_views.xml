<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista Dashboard usando Kanban simple -->
        <record id="view_lims_dashboard_kanban" model="ir.ui.view">
            <field name="name">lims.analysis.dashboard.kanban</field>
            <field name="model">lims.analysis.v2</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard" create="false" sample="0">
                    <field name="id"/>
                    <field name="sample_reception_id"/>
                    <field name="total_samples_count"/>
                    <field name="samples_all_ready_count"/>
                    <field name="samples_in_process_count"/>
                    <field name="samples_completed_count"/>
                    <field name="samples_reported_count"/>
                    <field name="samples_signed_count"/>
                    <field name="samples_pending_count"/>
                    <field name="samples_this_week_count"/>
                    <field name="samples_today_count"/>
                    <field name="samples_with_revisions_count"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click container-fluid">
                                <div class="row">
                                    <div class="col-12 text-center mb-3">
                                        <h2>üìä Dashboard de An√°lisis LIMS</h2>
                                    </div>
                                </div>
                                
                                <!-- M√©tricas principales -->
                                <div class="row">
                                    
                                    <!-- Total de Muestras -->
                                    <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                        <div class="text-center p-3 rounded" style="background-color: #007bff; color: white;">
                                            <div style="font-size: 2em; font-weight: bold;">
                                                <field name="total_samples_count"/>
                                            </div>
                                            <div>üìä Total de Muestras</div>
                                            <button name="action_view_all_samples" type="object" class="btn btn-light btn-sm mt-2">Ver Todas</button>
                                        </div>
                                    </div>
                                    
                                    <!-- Muestras Listas -->
                                    <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                        <div class="text-center p-3 rounded" style="background-color: #28a745; color: white;">
                                            <div style="font-size: 2em; font-weight: bold;">
                                                <field name="samples_all_ready_count"/>
                                            </div>
                                            <div>‚úÖ Todos los Par√°metros Listos</div>
                                            <button name="action_view_samples_all_ready" type="object" class="btn btn-light btn-sm mt-2">Ver Listas</button>
                                        </div>
                                    </div>
                                    
                                    <!-- En Proceso -->
                                    <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                        <div class="text-center p-3 rounded" style="background-color: #ffc107; color: #212529;">
                                            <div style="font-size: 2em; font-weight: bold;">
                                                <field name="samples_in_process_count"/>
                                            </div>
                                            <div>‚è≥ En Proceso</div>
                                            <button name="action_view_samples_in_process" type="object" class="btn btn-dark btn-sm mt-2">Ver En Proceso</button>
                                        </div>
                                    </div>
                                    
                                    <!-- Completadas -->
                                    <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                        <div class="text-center p-3 rounded" style="background-color: #17a2b8; color: white;">
                                            <div style="font-size: 2em; font-weight: bold;">
                                                <field name="samples_completed_count"/>
                                            </div>
                                            <div>üéØ Par√°metros Terminados</div>
                                            <button name="action_view_samples_completed" type="object" class="btn btn-light btn-sm mt-2">Ver Completadas</button>
                                        </div>
                                    </div>
                                    
                                    <!-- Reportadas -->
                                    <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                        <div class="text-center p-3 rounded" style="background-color: #6c757d; color: white;">
                                            <div style="font-size: 2em; font-weight: bold;">
                                                <field name="samples_reported_count"/>
                                            </div>
                                            <div>üìß Reportadas</div>
                                            <button name="action_view_samples_reported" type="object" class="btn btn-light btn-sm mt-2">Ver Reportadas</button>
                                        </div>
                                    </div>
                                    
                                    <!-- Firmadas -->
                                    <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                                        <div class="text-center p-3 rounded" style="background-color: #343a40; color: white;">
                                            <div style="font-size: 2em; font-weight: bold;">
                                                <field name="samples_signed_count"/>
                                            </div>
                                            <div>‚úçÔ∏è Firmadas</div>
                                            <button name="action_view_samples_signed" type="object" class="btn btn-light btn-sm mt-2">Ver Firmadas</button>
                                        </div>
                                    </div>
                                    
                                </div>
                                
                                <!-- Estad√≠sticas adicionales -->
                                <div class="row mt-3">
                                    <div class="col-12">
                                        <div class="p-3 rounded" style="background-color: #f8f9fa;">
                                            <h5 class="text-center mb-3">üìà Estad√≠sticas R√°pidas</h5>
                                            <div class="row text-center">
                                                <div class="col-md-3 col-sm-6">
                                                    <strong>Esta Semana</strong><br/>
                                                    <span style="font-size: 1.5em; color: #007bff;">
                                                        <field name="samples_this_week_count"/>
                                                    </span>
                                                </div>
                                                <div class="col-md-3 col-sm-6">
                                                    <strong>Hoy</strong><br/>
                                                    <span style="font-size: 1.5em; color: #28a745;">
                                                        <field name="samples_today_count"/>
                                                    </span>
                                                </div>
                                                <div class="col-md-3 col-sm-6">
                                                    <strong>Sin Procesar</strong><br/>
                                                    <span style="font-size: 1.5em; color: #dc3545;">
                                                        <field name="samples_pending_count"/>
                                                    </span>
                                                </div>
                                                <div class="col-md-3 col-sm-6">
                                                    <strong>Con Revisiones</strong><br/>
                                                    <span style="font-size: 1.5em; color: #ffc107;">
                                                        <field name="samples_with_revisions_count"/>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- ACCI√ìN PRINCIPAL DEL DASHBOARD -->
        <record id="action_lims_dashboard" model="ir.actions.act_window">
            <field name="name">Dashboard LIMS</field>
            <field name="res_model">lims.analysis.v2</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_lims_dashboard_kanban"/>
            <field name="limit">1</field>
            <field name="context">{'create': False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay datos para mostrar en el Dashboard
                </p>
                <p>
                    El dashboard requiere al menos una muestra en el sistema.
                </p>
            </field>
        </record>
        
        <!-- MEN√ö DEL DASHBOARD -->
        <menuitem id="menu_lims_dashboard" 
                  name="üìä Dashboard" 
                  parent="menu_lims_analysis_v2_root" 
                  action="action_lims_dashboard" 
                  sequence="1"/>
        
    </data>
</odoo>