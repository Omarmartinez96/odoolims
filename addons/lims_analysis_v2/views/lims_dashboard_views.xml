<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista Dashboard Mejorada con Pantalla Completa -->
        <record id="view_lims_dashboard_kanban" model="ir.ui.view">
            <field name="name">lims.analysis.dashboard.kanban</field>
            <field name="model">lims.analysis.v2</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard" create="false" sample="0">
                    <field name="id"/>
                    <field name="sample_reception_id"/>
                    <field name="total_samples_count"/>
                    <field name="samples_all_ready_count"/>
                    <field name="samples_in_process_count"/>
                    <field name="samples_completed_count"/>
                    <field name="samples_reported_count"/>
                    <field name="samples_signed_count"/>
                    <field name="samples_pending_count"/>
                    <field name="samples_this_week_count"/>
                    <field name="samples_today_count"/>
                    <field name="samples_with_revisions_count"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div style="width: 100vw; margin-left: -15px; margin-right: -15px; padding: 0;">
                                
                                <!-- Header Principal -->
                                <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 30px 0; margin-bottom: 30px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                                    <h1 style="text-align: center; color: white; margin: 0; font-size: 2.5em; font-weight: 300;">
                                        üìä Dashboard de An√°lisis LIMS
                                    </h1>
                                    <p style="text-align: center; color: rgba(255,255,255,0.9); margin: 10px 0 0 0;">
                                        Resumen en tiempo real del estado de an√°lisis
                                    </p>
                                </div>
                                
                                <!-- Container Principal -->
                                <div style="padding: 0 40px;">
                                    
                                    <!-- Primera Fila - M√©tricas Principales -->
                                    <div style="display: flex; flex-wrap: wrap; gap: 25px; margin-bottom: 30px; justify-content: space-evenly;">
                                        
                                        <!-- Total de Muestras -->
                                        <div style="flex: 1; min-width: 280px; max-width: 350px;">
                                            <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 15px; padding: 30px; text-align: center; color: white; box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3); transition: transform 0.3s;">
                                                <div style="font-size: 3.5em; font-weight: bold; margin-bottom: 10px;">
                                                    <field name="total_samples_count"/>
                                                </div>
                                                <div style="font-size: 1.2em; margin-bottom: 20px;">üìä Total de Muestras</div>
                                                <button name="action_view_all_samples" type="object" style="background: white; color: #667eea; border: none; padding: 12px 30px; border-radius: 25px; font-weight: 600; cursor: pointer;">
                                                    Ver Todas
                                                </button>
                                            </div>
                                        </div>
                                        
                                        <!-- Muestras Listas -->
                                        <div style="flex: 1; min-width: 280px; max-width: 350px;">
                                            <div style="background: linear-gradient(135deg, #0ba360 0%, #3cba92 100%); border-radius: 15px; padding: 30px; text-align: center; color: white; box-shadow: 0 10px 20px rgba(60, 186, 146, 0.3); transition: transform 0.3s;">
                                                <div style="font-size: 3.5em; font-weight: bold; margin-bottom: 10px;">
                                                    <field name="samples_all_ready_count"/>
                                                </div>
                                                <div style="font-size: 1.2em; margin-bottom: 20px;">‚úÖ Todos los Par√°metros Listos</div>
                                                <button name="action_view_samples_all_ready" type="object" style="background: white; color: #0ba360; border: none; padding: 12px 30px; border-radius: 25px; font-weight: 600; cursor: pointer;">
                                                    Ver Listas
                                                </button>
                                            </div>
                                        </div>
                                        
                                        <!-- En Proceso -->
                                        <div style="flex: 1; min-width: 280px; max-width: 350px;">
                                            <div style="background: linear-gradient(135deg, #f2994a 0%, #f2c94c 100%); border-radius: 15px; padding: 30px; text-align: center; color: white; box-shadow: 0 10px 20px rgba(242, 201, 76, 0.3); transition: transform 0.3s;">
                                                <div style="font-size: 3.5em; font-weight: bold; margin-bottom: 10px;">
                                                    <field name="samples_in_process_count"/>
                                                </div>
                                                <div style="font-size: 1.2em; margin-bottom: 20px;">‚è≥ En Proceso</div>
                                                <button name="action_view_samples_in_process" type="object" style="background: white; color: #f2994a; border: none; padding: 12px 30px; border-radius: 25px; font-weight: 600; cursor: pointer;">
                                                    Ver En Proceso
                                                </button>
                                            </div>
                                        </div>
                                        
                                    </div>
                                    
                                    <!-- Segunda Fila - M√©tricas Secundarias -->
                                    <div style="display: flex; flex-wrap: wrap; gap: 25px; margin-bottom: 30px; justify-content: space-evenly;">
                                        
                                        <!-- Completadas -->
                                        <div style="flex: 1; min-width: 280px; max-width: 350px;">
                                            <div style="background: linear-gradient(135deg, #56ccf2 0%, #2f80ed 100%); border-radius: 15px; padding: 30px; text-align: center; color: white; box-shadow: 0 10px 20px rgba(47, 128, 237, 0.3); transition: transform 0.3s;">
                                                <div style="font-size: 3.5em; font-weight: bold; margin-bottom: 10px;">
                                                    <field name="samples_completed_count"/>
                                                </div>
                                                <div style="font-size: 1.2em; margin-bottom: 20px;">üéØ Par√°metros Terminados</div>
                                                <button name="action_view_samples_completed" type="object" style="background: white; color: #2f80ed; border: none; padding: 12px 30px; border-radius: 25px; font-weight: 600; cursor: pointer;">
                                                    Ver Completadas
                                                </button>
                                            </div>
                                        </div>
                                        
                                        <!-- Reportadas -->
                                        <div style="flex: 1; min-width: 280px; max-width: 350px;">
                                            <div style="background: linear-gradient(135deg, #89d4cf 0%, #6c86b8 100%); border-radius: 15px; padding: 30px; text-align: center; color: white; box-shadow: 0 10px 20px rgba(108, 134, 184, 0.3); transition: transform 0.3s;">
                                                <div style="font-size: 3.5em; font-weight: bold; margin-bottom: 10px;">
                                                    <field name="samples_reported_count"/>
                                                </div>
                                                <div style="font-size: 1.2em; margin-bottom: 20px;">üìß Reportadas</div>
                                                <button name="action_view_samples_reported" type="object" style="background: white; color: #6c86b8; border: none; padding: 12px 30px; border-radius: 25px; font-weight: 600; cursor: pointer;">
                                                    Ver Reportadas
                                                </button>
                                            </div>
                                        </div>
                                        
                                        <!-- Firmadas -->
                                        <div style="flex: 1; min-width: 280px; max-width: 350px;">
                                            <div style="background: linear-gradient(135deg, #434343 0%, #000000 100%); border-radius: 15px; padding: 30px; text-align: center; color: white; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3); transition: transform 0.3s;">
                                                <div style="font-size: 3.5em; font-weight: bold; margin-bottom: 10px;">
                                                    <field name="samples_signed_count"/>
                                                </div>
                                                <div style="font-size: 1.2em; margin-bottom: 20px;">‚úçÔ∏è Firmadas</div>
                                                <button name="action_view_samples_signed" type="object" style="background: white; color: #434343; border: none; padding: 12px 30px; border-radius: 25px; font-weight: 600; cursor: pointer;">
                                                    Ver Firmadas
                                                </button>
                                            </div>
                                        </div>
                                        
                                    </div>
                                    
                                    <!-- Estad√≠sticas R√°pidas - Ancho Completo -->
                                    <div style="background: white; border-radius: 15px; padding: 30px; margin-top: 40px; box-shadow: 0 5px 15px rgba(0,0,0,0.08);">
                                        <h3 style="text-align: center; margin-bottom: 30px; color: #333; font-weight: 300; font-size: 1.8em;">
                                            üìà Estad√≠sticas R√°pidas
                                        </h3>
                                        <div style="display: flex; justify-content: space-around; flex-wrap: wrap; gap: 20px;">
                                            
                                            <div style="text-align: center; flex: 1; min-width: 150px;">
                                                <div style="color: #666; margin-bottom: 10px; font-size: 1.1em;">Esta Semana</div>
                                                <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 15px; border-radius: 10px; font-size: 2em; font-weight: bold;">
                                                    <field name="samples_this_week_count"/>
                                                </div>
                                            </div>
                                            
                                            <div style="text-align: center; flex: 1; min-width: 150px;">
                                                <div style="color: #666; margin-bottom: 10px; font-size: 1.1em;">Recibidas Hoy</div>
                                                <div style="background: linear-gradient(135deg, #0ba360 0%, #3cba92 100%); color: white; padding: 15px; border-radius: 10px; font-size: 2em; font-weight: bold;">
                                                    <field name="samples_today_count"/>
                                                </div>
                                            </div>
                                            
                                            <div style="text-align: center; flex: 1; min-width: 150px;">
                                                <div style="color: #666; margin-bottom: 10px; font-size: 1.1em;">Sin Procesar</div>
                                                <div style="background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%); color: white; padding: 15px; border-radius: 10px; font-size: 2em; font-weight: bold;">
                                                    <field name="samples_pending_count"/>
                                                </div>
                                            </div>
                                            
                                            <div style="text-align: center; flex: 1; min-width: 150px;">
                                                <div style="color: #666; margin-bottom: 10px; font-size: 1.1em;">Con Revisiones</div>
                                                <div style="background: linear-gradient(135deg, #f2994a 0%, #f2c94c 100%); color: white; padding: 15px; border-radius: 10px; font-size: 2em; font-weight: bold;">
                                                    <field name="samples_with_revisions_count"/>
                                                </div>
                                            </div>
                                            
                                        </div>
                                    </div>
                                    
                                    <!-- Espaciado inferior -->
                                    <div style="height: 30px;"></div>
                                    
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- ACCI√ìN PRINCIPAL DEL DASHBOARD -->
        <record id="action_lims_dashboard" model="ir.actions.act_window">
            <field name="name">Dashboard LIMS</field>
            <field name="res_model">lims.analysis.v2</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_lims_dashboard_kanban"/>
            <field name="limit">1</field>
            <field name="context">{'create': False}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay datos para mostrar en el Dashboard
                </p>
                <p>
                    El dashboard requiere al menos una muestra en el sistema.
                </p>
            </field>
        </record>
        
        <!-- MEN√ö DEL DASHBOARD -->
        <menuitem id="menu_lims_dashboard" 
                  name="üìä Dashboard" 
                  parent="menu_lims_analysis_v2_root" 
                  action="action_lims_dashboard" 
                  sequence="1"/>
        
    </data>
</odoo>