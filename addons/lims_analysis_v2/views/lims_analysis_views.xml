<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <!-- ========== VISTA LISTA PRINCIPAL DE AN√ÅLISIS ========== -->
        <record id="view_lims_analysis_v2_list" model="ir.ui.view">
            <field name="name">lims.analysis.v2.list</field>
            <field name="model">lims.analysis.v2</field>
            <field name="arch" type="xml">
                <list string="An√°lisis de Muestras v2" create="false" default_group_by="custody_chain_id" expand="1" limit="300" groups_limit="300"
                      decoration-danger="signature_state == 'cancelled'"
                      decoration-success="report_sent_to_client == True"
                      decoration-info="signature_state == 'signed' and report_sent_to_client == False"
                      decoration-warning="has_ready_parameters == True and signature_state != 'signed' and signature_state != 'cancelled' and report_sent_to_client == False">

                    <!-- Campos invisibles para agrupaci√≥n -->
                    <field name="report_sent_to_client" string="üìß" widget="boolean_toggle" width="30px"/>
                    <field name="custody_chain_id" column_invisible="True"/>
                    <field name="reception_date" string="F. Recepci√≥n"/>

                    <field name="sequence" widget="handle"/>

                    <!-- Informaci√≥n de la cadena (visible en el grupo) -->
                    <field name="custody_chain_code" string="Cadena"/>
                    <field name="customer_id" string="Cliente"/>
                    
                    <!-- Informaci√≥n de la muestra -->
                    <field name="sample_code" string="C√≥digo Muestra"/>
                    <field name="sample_identifier" string="Identificaci√≥n"/>
                    
                    <!-- Informaci√≥n de revisiones -->
                    <field name="revision_number" string="Rev." width="50px"/>
                    <field name="is_revision" string="üîÑ" widget="boolean_toggle" width="30px"/>
                    
                    <!-- Fechas -->
                    <field name="analysis_start_date" string="Inicio"/>
                    
                    <!-- Estados y contadores -->
                    <field name="ready_parameters_count" string="Listos"/>
                    <field name="total_parameters_count" string="Total"/>
                    <field name="has_ready_parameters" string="üìä" widget="boolean_toggle" width="30px"/>
                    <field name="all_parameters_ready" string="‚úÖ" widget="boolean_toggle" width="30px"/>
                    
                    <!-- Estado de firma -->
                    <field name="signature_state" string="‚úçÔ∏è Firma" 
                        decoration-success="signature_state == 'signed'"
                        decoration-warning="signature_state == 'cancelled'"
                        decoration-muted="signature_state == 'not_signed'"/>
                    
                    <!-- Estado de an√°lisis -->
                    <field name="analysis_state" string="Estado"/>
                    
                    <!-- Resumen de reportes -->
                    <field name="report_status_summary" string="Estado Par√°metros"/>
                </list>
            </field>
        </record>

        <!-- ========== VISTA FORMULARIO PRINCIPAL DE AN√ÅLISIS ========== -->
        <record id="view_lims_analysis_v2_form" model="ir.ui.view">
            <field name="name">lims.analysis.v2.form</field>
            <field name="model">lims.analysis.v2</field>
            <field name="arch" type="xml">
                <form string="An√°lisis de Muestra v2">
                    <header>
                        <!-- Botones de estado de an√°lisis -->
                        <button name="action_complete_analysis"
                                type="object"
                                string="‚úÖ Completar An√°lisis"
                                class="btn-success"
                                invisible="analysis_state != 'in_progress'"
                                confirm="¬øMarcar an√°lisis como completado?"/>
                        
                        <!-- Botones de firma -->
                        <button name="action_sign_sample"
                                type="object"
                                string="‚úçÔ∏è Firmar Muestra"
                                class="btn-warning"
                                invisible="signature_state != 'not_signed'"
                                confirm="Se abrir√° el wizard de firma. ¬øContinuar?"/>
                        
                        <button name="action_cancel_signature"
                                type="object"
                                string="‚ùå Cancelar Firma"
                                class="btn-danger"
                                invisible="can_cancel_signature == False"
                                confirm="¬øEst√° seguro de cancelar la firma? Los par√°metros volver√°n a estado borrador."/>

                        <button name="action_undo_cancellation"
                                type="object"
                                string="üîÑ Deshacer Cancelaci√≥n"
                                class="btn-info"
                                invisible="signature_state != 'cancelled'"
                                confirm="¬øDeshacer la cancelaci√≥n? La muestra volver√° a estar lista para firmar."/>

                        <button name="action_request_revision"
                                type="object"
                                string="üîÑ Solicitar Revisi√≥n"
                                class="btn-info"
                                invisible="signature_state != 'signed'"
                                confirm="¬øEst√° seguro de solicitar una revisi√≥n? Esto cancelar√° la firma actual."/>
                        
                    </header>
                    
                    <sheet>
                        <!-- T√≠tulo -->
                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="1"/>
                                <span class="badge badge-info" invisible="revision_number == 0">
                                    Rev. <field name="revision_number"/>
                                </span>
                            </h1>
                            <h3 invisible="is_revision == False">
                                üîÑ Esta es una revisi√≥n del an√°lisis original
                            </h3>
                        </div>

                        <!-- Informaci√≥n b√°sica -->
                        <group>
                            <group string="üìã Informaci√≥n de la Muestra">
                                <field name="sample_reception_id" readonly="1"/>
                                <field name="sample_code" readonly="1"/>
                                <field name="sample_identifier" readonly="1"/>
                                <field name="custody_chain_code" readonly="1"/>
                                <field name="customer_id" readonly="1"/>
                            </group>
                            <group string="üìÖ Fechas del An√°lisis">
                                <field name="analysis_start_date"/>
                                <field name="analysis_end_date"/>
                                <field name="analysis_commitment_date"/>
                                <field name="reception_date" readonly="1"/>
                            </group>
                        </group>

                        <!-- Estad√≠sticas de par√°metros -->
                        <group string="üìä Estado de Par√°metros" colspan="4">
                            <div class="o_field_widget o_readonly_modifier">
                                <div class="row">
                                    <div class="col-3">
                                        <div class="text-center">
                                            <div class="h1 text-primary">
                                                <field name="total_parameters_count"/>
                                            </div>
                                            <small>Total Par√°metros</small>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="text-center">
                                            <div class="h1 text-success">
                                                <field name="ready_parameters_count"/>
                                            </div>
                                            <small>Listos para Reporte</small>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="text-center">
                                            <field name="has_ready_parameters" widget="boolean_toggle"/>
                                            <br/><small>Tiene Listos</small>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="text-center">
                                            <field name="all_parameters_ready" widget="boolean_toggle"/>
                                            <br/><small>Todos Listos</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <strong>Estado Actual:</strong> <field name="report_status_summary"/>
                                </div>
                            </div>
                        </group>

                        <!-- Estado de env√≠o de informe -->
                        <group string="üìß Estado de Env√≠o" colspan="4" invisible="signature_state != 'signed'">
                            <field name="report_sent_to_client" string="‚úÖ Informe Enviado al Cliente" widget="boolean_toggle"/>
                            <small class="text-muted">Control temporal: marcar cuando el informe haya sido enviado</small>
                        </group>

                        <!-- Informaci√≥n de firma -->
                        <group string="‚úçÔ∏è Estado de Firma" invisible="signature_state == 'not_signed'">
                            <group>
                                <field name="sample_signature_name" readonly="1"/>
                                <field name="sample_signature_position" readonly="1"/>
                                <field name="sample_signature_date" readonly="1"/>
                            </group>
                            <group invisible="signature_state != 'cancelled'">
                                <field name="signature_cancelled_by" readonly="1"/>
                                <field name="signature_cancelled_date" readonly="1"/>
                                <field name="signature_cancellation_reason" readonly="1"/>
                            </group>
                        </group>

                        <!-- Informaci√≥n de revisiones -->
                        <group string="üîÑ Informaci√≥n de Revisi√≥n" invisible="is_revision == False">
                            <group>
                                <field name="revision_reason" readonly="1"/>
                                <field name="revision_requested_by" readonly="1"/>
                                <field name="revision_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="original_analysis_id" readonly="1"/>
                                <field name="revision_count" readonly="1"/>
                            </group>
                        </group>

                        <!-- Notebook principal -->
                        <notebook>
                            <!-- P√°gina de par√°metros -->
                            <page string="üî¨ Par√°metros de An√°lisis">
                                <field name="parameter_analysis_ids" nolabel="1" context="{'form_view_ref': 'lims_analysis_v2.view_parameter_analysis_v2_form'}">
                                    <list string="Par√°metros">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="microorganism"/>
                                        <field name="method"/>
                                        <field name="analysis_status" 
                                               decoration-success="analysis_status == 'completed'"
                                               decoration-info="analysis_status == 'in_progress'"
                                               decoration-muted="analysis_status == 'draft'"/>
                                        <field name="report_status" 
                                               decoration-success="report_status == 'ready'"
                                               decoration-info="report_status == 'reported'"
                                               decoration-muted="report_status == 'draft'"/>
                                        <field name="result_complete" class="o_field_highlight" string="Resultado"/>
                                        <field name="analyst_names"/>
                                    </list>
                                </field>
                            </page>

                            <!-- P√°gina de reportes generados -->
                            <page string="üìÑ Historial de Reportes" invisible="signature_state == 'not_signed'">
                                <div class="alert alert-info">
                                    <strong>‚ÑπÔ∏è Reportes Din√°micos:</strong> Este m√≥dulo genera reportes din√°micamente sin almacenarlos. 
                                    Use los botones del header para generar reportes actualizados.
                                </div>
                                
                                <group string="Acciones Disponibles">
                                    <div class="row">
                                        <div class="col-4">
                                            <button name="generate_preliminary_report" 
                                                    type="object" 
                                                    string="üìã Generar Preliminar" 
                                                    class="btn btn-primary btn-block"
                                                    invisible="has_ready_parameters == False"/>
                                        </div>
                                        <div class="col-4">
                                            <button name="generate_final_report" 
                                                    type="object" 
                                                    string="üìÑ Generar Final" 
                                                    class="btn btn-success btn-block"
                                                    invisible="all_parameters_ready == False"/>
                                        </div>
                                        <div class="col-4">
                                            <button name="generate_signing_report" 
                                                    type="object" 
                                                    string="üìÑ Para Firma Manual" 
                                                    class="btn btn-info btn-block"
                                                    invisible="signature_state != 'signed'"/>
                                        </div>
                                    </div>
                                </group>
                            </page>

                            <!-- P√°gina de revisiones -->
                            <page string="üîÑ Revisiones" invisible="revision_count == 0 and is_revision == False">
                                <field name="revision_ids" readonly="1">
                                    <list string="Revisiones de este An√°lisis">
                                        <field name="revision_number"/>
                                        <field name="revision_requested_by"/>
                                        <field name="revision_reason"/>
                                        <field name="revision_date"/>
                                        <field name="analysis_state"/>
                                        <field name="signature_state"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                    
                </form>
            </field>
        </record>

        <!-- ========== VISTA DE B√öSQUEDA ========== -->
        <record id="view_lims_analysis_v2_search" model="ir.ui.view">
            <field name="name">lims.analysis.v2.search</field>
            <field name="model">lims.analysis.v2</field>
            <field name="arch" type="xml">
                <search string="Buscar An√°lisis v2">
                    <!-- Campos de b√∫squeda -->
                    <field name="sample_code" 
                        filter_domain="['|', '|', '|', '|',
                                        ('sample_code', 'ilike', self),
                                        ('custody_chain_code', 'ilike', self),
                                        ('customer_id.name', 'ilike', self),
                                        ('sample_identifier', 'ilike', self),
                                        ('display_name', 'ilike', self)]"
                        string="üîç Buscar an√°lisis..."/>
                    <field name="sample_identifier"/>
                    <field name="custody_chain_code"/>
                    <field name="customer_id"/>
                    
                    <!-- Filtros principales -->
                    <filter string="üìã Con Par√°metros Listos" 
                            name="with_ready_params"
                            domain="[('has_ready_parameters', '=', True)]"/>
                    
                    <filter string="‚úÖ Completados" 
                            name="completed"
                            domain="[('analysis_state', '=', 'completed')]"/>
                    
                    <filter string="‚úçÔ∏è Firmadas" 
                            name="signed"
                            domain="[('signature_state', '=', 'signed')]"/>
                    
                    <separator/>
                    
                    <filter string="üîÑ Solo Revisiones" 
                            name="only_revisions"
                            domain="[('is_revision', '=', True)]"/>
                    
                    <filter string="üìã Solo Originales" 
                            name="only_originals"
                            domain="[('is_revision', '=', False)]"/>
                    
                    <separator/>
                    
                    <filter string="Hoy" 
                            name="today"
                            domain="[('analysis_start_date', '=', context_today())]"/>
                    
                    <filter string="Esta Semana" 
                            name="this_week"
                            domain="[('analysis_start_date', '&gt;=', (context_today() - datetime.timedelta(days=7)))]"/>

                    <!-- Agrupaci√≥n -->
                    <group expand="0" string="Agrupar Por">
                        <filter string="Cadena de Custodia" 
                                name="group_chain"
                                context="{'group_by': 'custody_chain_id'}"/>
                        <filter string="Cliente" 
                                name="group_customer"
                                context="{'group_by': 'customer_id'}"/>
                        <filter string="Estado de Firma"
                                name="group_signature"
                                context="{'group_by': 'signature_state'}"/>
                        <filter string="Estado de An√°lisis"
                                name="group_analysis_state"
                                context="{'group_by': 'analysis_state'}"/>
                    </group>

                </search>
            </field>
        </record>

        <!-- ========== ACCIONES ========== -->
        <record id="action_lims_analysis_v2"  model="ir.actions.act_window">
            <field name="name">An√°lisis de Muestras</field>
            <field name="res_model">lims.analysis.v2</field>
            <field name="view_mode">list,form</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_lims_analysis_v2_list')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_lims_analysis_v2_form')})
            ]"/>
            <field name="search_view_id" ref="view_lims_analysis_v2_search"/>
            <field name="limit">300</field>
            <field name="context">{
                'group_by': 'custody_chain_id', 
                'create': False,
                'group_by_no_leaf': True
            }</field>           
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay an√°lisis disponibles
                </p>
                <p>
                    Los an√°lisis se crean autom√°ticamente desde muestras recibidas.
                    <br/>Usa este men√∫ para <strong>capturar resultados</strong> de laboratorio.
                </p>
            </field>
        </record>

        <!-- ========== ACCI√ìN UNIFICADA DE REPORTES ========== -->
        <record id="action_unified_report_selector_v2" model="ir.actions.server">
            <field name="name">üìä Generar Reporte Personalizado</field>
            <field name="model_id" ref="model_lims_analysis_v2"/>
            <field name="binding_model_id" ref="model_lims_analysis_v2"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field name="code">
        action = {
            'type': 'ir.actions.act_window',
            'name': 'Seleccionar Tipo de Reporte',
            'res_model': 'lims.report.selection.wizard.v2',
            'view_mode': 'form',
            'target': 'new',
            'context': {
                'active_ids': records.ids,
                'default_analysis_ids': [(6, 0, records.ids)]
            }
        }
            </field>
        </record>

        <!-- Mantener solo la acci√≥n de marcar reportado -->
        <record id="action_mass_mark_reported_v2" model="ir.actions.server">
            <field name="name">‚úÖ Marcar como Reportado</field>
            <field name="model_id" ref="model_lims_analysis_v2"/>
            <field name="binding_model_id" ref="model_lims_analysis_v2"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
        action = model.action_mass_mark_as_reported(records.ids)
            </field>
        </record>

        <!-- ========== MEN√öS ========== -->
        <menuitem id="menu_lims_analysis_v2_root" 
                  name="An√°lisis de Muestras" 
                  sequence="4"/>

        <menuitem id="menu_lims_analysis_v2_main" 
                name="üî¨ An√°lisis de Muestras" 
                parent="menu_lims_analysis_v2_root" 
                action="action_lims_analysis_v2" 
                sequence="10"/>

    </data>
</odoo>