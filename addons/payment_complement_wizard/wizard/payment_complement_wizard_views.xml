<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payment Complement Wizard Form View -->
    <record id="view_payment_complement_wizard_form" model="ir.ui.view">
        <field name="name">payment.complement.wizard.form</field>
        <field name="model">payment.complement.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Payment Complement">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="invoice_id" readonly="1" options="{'no_create': True}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount_residual" widget="monetary"/>
                            <field name="amount" widget="monetary"/>
                            <field name="payment_date"/>
                        </group>
                        <group>
                            <field name="journal_id" 
                                   options="{'no_create': True, 'no_edit': True}"/>
                            <field name="payment_method_line_id" 
                                   options="{'no_create': True, 'no_edit': True}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_generate_complement" 
                            string="Generate Complement" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action Window -->
    <record id="action_payment_complement_wizard" model="ir.actions.act_window">
        <field name="name">Generate Payment Complement</field>
        <field name="res_model">payment.complement.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">form</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_payment_complement_wizard"
              name="Payment Complements"
              parent="account.menu_finance_receivables"
              action="action_payment_complement_wizard"
              sequence="15"/>
</odoo>