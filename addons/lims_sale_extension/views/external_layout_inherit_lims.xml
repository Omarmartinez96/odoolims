<odoo>
  <template id="external_layout_inherit_lims"
            inherit_id="web.external_layout_standard">

    <!-- ✅ Encabezado: solo el logotipo, más pequeño -->
    <xpath expr="//div[contains(@class,'d-flex')]/img" position="attributes">
      <attribute name="style">max-height:100px !important; margin-bottom:0.5em;</attribute>
    </xpath>

    <!-- ❌ Eliminamos dirección fiscal del encabezado -->
    <xpath expr="//div[@name='company_address']" position="replace">
      <div name="company_address"/>
    </xpath>

    <!-- ✅ Footer unificado -->
    <xpath expr="//div[contains(@class,'o_footer_content')]" position="replace">
      <div class="o_footer_content" style="font-size:8px; padding-top:2px;">
        <table class="table table-borderless"
              style="width:100%; table-layout:fixed; border-collapse:collapse; border-spacing:0;">
          <tbody>
            <tr>
              <td style="width:33%; text-align:left; padding:0;">
                Teléfono: (664) 973-8185
              </td>
              <td style="width:34%; text-align:center; padding:0;">
                Página <span class="page"/> / <span class="topage"/>
              </td>
              <td style="width:33%; text-align:right; padding:0;">
                contacto@proteuslaboratorio.com
              </td>
            </tr>
            <tr>
              <td colspan="3" style="text-align:center; font-size:7px; padding-top:4px;">
                <t t-if="company.partner_id">
                  <t t-esc="company.partner_id.name"/>,
                  <t t-if="company.partner_id.street" t-esc="company.partner_id.street"/><t t-if="company.partner_id.street2">, <t t-esc="company.partner_id.street2"/></t>,
                  <t t-if="company.partner_id.city" t-esc="company.partner_id.city"/>
                </t>
              </td>
            </tr>
            <tr>
              <td colspan="3" style="text-align:center; font-size:7px; padding-top:2px;">
                Documento controlado. Prohibida su reproducción parcial o total sin autorización escrita por parte del Laboratorio.
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </xpath>

  </template>
</odoo>
