<odoo>
  <template id="external_layout_inherit_lims"
            inherit_id="web.external_layout_standard">
    <!-- 1) Reducir el logo SOLO en cotización -->
    <xpath expr="//div[contains(@class,'d-flex')]/img" position="attributes">
      <!-- Clase condicional -->
      <attribute name="t-att-class">
        "'o_company_logo_small' if o and o._name == 'sale.order' else 'd-block img-fluid mx-auto'"
      </attribute>

      <!-- Estilo condicional -->
      <attribute name="t-att-style">
        "'max-height:100px; margin-bottom:0.5em;' if o and o._name == 'sale.order' else 'max-height:45mm;'"
      </attribute>
    </xpath>

    <!-- 2) Ajustar fuente y espaciado SOLO en cotización -->
    <xpath expr="//div[@name='company_address']/ul" position="attributes">
      <attribute name="t-att-style">
        <t t-if="o and o._name == 'sale.order'">font-size:12px !important; line-height:1.2;</t>
        <t t-else=""></t> <!-- sin cambios en factura -->
      </attribute>
    </xpath>

    <!-- Pie de página refinado sin bordes -->
    <xpath expr="//div[contains(@class,'o_footer_content')]" position="inside">
      <t t-if="o and o._name == 'sale.order'">
        <div class="o_footer_content" style="font-size:8px; padding-top:2px;">
          <table class="table table-borderless" 
                style="width:100%; table-layout:fixed; border-collapse:collapse; border-spacing:0;">
            <tbody>
              <tr>
                <!-- Celda izquierda: Teléfono -->
                <td style="width:33%; text-align:left; padding:0;">Teléfono: (664) 973-8185</td>
                <!-- Celda centro: Paginación -->
                <td style="width:34%; text-align:center; padding:0;">
                  Página <span class="page"/> / <span class="topage"/>
                </td>
                <!-- Celda derecha: Correo -->
                <td style="width:33%; text-align:right; padding:0;">Correo: contacto@proteuslaboratorio.com</td>
              </tr>
              <tr>
                <!-- Nueva fila: Formato y Procedimiento -->
                <td colspan="3" style="text-align:center; padding-top:4px; font-size:8px;">
                  FOR-021 Rev. 01 | PROC-005
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </t>
    </xpath>

  </template>
</odoo>
