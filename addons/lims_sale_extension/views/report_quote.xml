<odoo>
  <template id="report_saleorder_custom"
            t-name="lims_sale_extension.report_saleorder_custom">
    <t t-set="company" t-value="docs and docs[0].company_id"/>

    <!-- llamamos a nuestro layout CUSTOM -->
    <t t-call="lims_sale_extension.external_layout_quote_lims">
      <!-- rellenamos el slot "content" -->
      <t t-slot="content">
        <t t-foreach="docs" t-as="doc">
          <div class="page">
            <!-- …todo tu cuerpo de cotización… -->
            <h3>Cotización <t t-esc="doc.name"/></h3>
          </div>
        </t>
      </t>
    </t>
  </template>
</odoo>
