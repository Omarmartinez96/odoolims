<odoo>
  <template id="report_invoice_document_line_inherit"
            inherit_id="account.report_invoice_document_line">

    <!-- Descripción -->
    <xpath expr="//th[1]" position="replace">
      <th>Descripción</th>
    </xpath>

    <!-- Cantidad -->
    <xpath expr="//th[2]" position="replace">
      <th>Cantidad</th>
    </xpath>

    <!-- Precio unitario -->
    <xpath expr="//th[3]" position="replace">
      <th>Precio Unitario</th>
    </xpath>

    <!-- Impuestos -->
    <xpath expr="//th[4]" position="replace">
      <th>Impuestos</th>
    </xpath>

    <!-- Subtotal -->
    <xpath expr="//th[5]" position="replace">
      <th>Subtotal</th>
    </xpath>

  </template>
</odoo>
