<odoo>
  <record id="view_order_form_lims" model="ir.ui.view">
    <field name="name">sale.order.form.lims</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">

      <!-- 🔒 Ocultar botón original "Enviar por correo electrónico" -->
      <xpath expr="//button[@name='action_quotation_send']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <!-- Hacer editable el campo "name" -->
      <xpath expr="//field[@name='name']" position="attributes">
        <attribute name="readonly">0</attribute>
      </xpath>

      <!-- Eliminar el botón original de "Enviar por correo electrónico" -->
      <xpath expr="//button[@name='action_quotation_send']" position="replace"/>

      <!-- Campos adicionales al lado del cliente -->
      <xpath expr="//field[@name='partner_id']" position="after">
        <field name="client_code" readonly="1"/>
        <field name="lims_branch_id"/>
        <field name="lims_department_id"/>
        <field name="lims_contact_ids" widget="many2many_tags"/>
      </xpath>

      <!-- Agregar columnas en la definición del one2many -->
      <xpath expr="//field[@name='order_line']" position="attributes">
        <attribute name="context">{'default_analysis_method': '', 'default_is_accredited': False}</attribute>
      </xpath>

    </field>
  </record>
</odoo>
