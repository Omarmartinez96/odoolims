<odoo>
  <record id="view_order_form_lims" model="ir.ui.view">
    <field name="name">sale.order.form.lims</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">

      <!-- Hacer editable el campo "name" -->
      <xpath expr="//field[@name='name']" position="attributes">
        <attribute name="readonly">0</attribute>
      </xpath>

      <!-- Campos adicionales al lado del cliente -->
      <xpath expr="//field[@name='partner_id']" position="after">
        <field name="client_code" readonly="1"/>
        <field name="lims_branch_id"/>
        <field name="lims_department_id"/>
        <field name="lims_contact_ids" widget="many2many_tags"/>
        <field name="currency_id" options="{'no_create': True}"/>
      </xpath>

      <!-- Agregar columnas en la definiciÃ³n del one2many -->
      <xpath expr="//field[@name='lims_contact_ids']" position="after">
          <field name="currency_id" options="{'no_create': True}" attrs="{'readonly': [('state', 'not in', ['draft', 'sent'])]}"/>
      </xpath>

    </field>
  </record>
</odoo>

