<odoo>
  <record id="view_order_form_lims" model="ir.ui.view">
    <field name="name">sale.order.form.lims</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">

      <!-- Hacer editable el campo "name" -->
      <xpath expr="//field[@name='name']" position="attributes">
        <attribute name="readonly">0</attribute>
      </xpath>

      <!-- Reemplazar botón para usar plantilla de correo por defecto -->
      <xpath expr="//button[@name='action_quotation_send']" position="replace">
        <button name="action_quotation_send"
                type="object"
                string="Enviar por correo electrónico"
                class="btn-primary"
                groups="sales_team.group_sale_salesman"
                t-att-context="{
                  'default_template_id': ref('lims_sale_extension.email_template_cotizacion_proteus'),
                  'default_use_template': True,
                  'default_composition_mode': 'comment',
                  'validate_analytic': True,
                  'check_document_layout': True
                }"
                data-hotkey="g"
                invisible="state != 'draft'"/>
      </xpath>

      <!-- Campos adicionales al lado del cliente -->
      <xpath expr="//field[@name='partner_id']" position="after">
        <field name="client_code" readonly="1"/>
        <field name="lims_branch_id"/>
        <field name="lims_department_id"/>
        <field name="lims_contact_ids" widget="many2many_tags"/>
      </xpath>

      <!-- Agregar contexto en order_line -->
      <xpath expr="//field[@name='order_line']" position="attributes">
        <attribute name="context">{'default_analysis_method': '', 'default_is_accredited': False}</attribute>
      </xpath>

    </field>
  </record>
</odoo>
