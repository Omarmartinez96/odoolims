<odoo>
  <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">

    <!-- ✅ Encabezados adicionales en la tabla de productos -->
    <xpath expr="//table[contains(@class, 'o_main_table')]/thead/tr" position="inside">
      <th>Método de Análisis</th>
      <th>Acreditado</th>
    </xpath>

    <!-- ✅ Nuevas celdas dentro del t-foreach -->
    <xpath expr="//t[@t-foreach='lines_to_report']/tr/t[1]" position="after">
      <td>
        <span t-esc="line.analysis_method or ''"/>
      </td>
      <td>
        <span t-esc="'Sí' if line.is_accredited else 'No'"/>
      </td>
    </xpath>

    <!-- ✅ Sección de políticas al final -->
    <xpath expr="//div[@class='oe_structure'][last()]" position="before">
      <div class="row mt32">
        <div class="col-12">
          <h4>Condiciones y Políticas</h4>
          <ul>
            <li><strong>Condiciones de pago:</strong> 50 % al ordenar, 50 % antes de entrega.</li>
            <li><strong>Política de cancelación:</strong> No reembolsable una vez iniciado el análisis.</li>
            <li><strong>Revisión de formato:</strong> Este documento ha sido revisado y aprobado por el área técnica.</li>
            <li><strong>Notas adicionales:</strong> Este documento no es un informe de resultados.</li>
          </ul>
        </div>
      </div>
    </xpath>

  </template>
</odoo>
