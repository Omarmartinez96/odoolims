<odoo>
  <!-- Define el template QWeb de tu reporte -->
  <template id="report_saleorder_custom"
            t-name="lims_sale_extension.report_saleorder_custom">
    <!-- 1) Invoca tu layout primario, que ya tiene los slots abiertos -->
    <t t-call="lims_sale_extension.external_layout_quote_lims">
      <!-- 2) Pasa la company al header -->
      <t t-set="company" t-value="docs and docs[0].company_id"/>

      <!-- 3) Rellena el slot "content" CON TODO el HTML de la cotización -->
      <t t-slot="content">
        <t t-foreach="docs" t-as="doc">
          <div class="page">
            <!-- — Título interno — -->
            <h4 style="color:#090D61; font-size:20px; margin-bottom:5px;">
              COTIZACIÓN DE SERVICIOS
            </h4>

            <!-- — Datos principales (ejemplo) — -->
            <table style="width:100%; font-size:12px; margin-bottom:10px;">
              <tr>
                <td><strong>No. Cotización:</strong> <t t-esc="doc.name"/></td>
                <td style="text-align:right;">
                  <strong>Fecha:</strong>
                  <t t-set="d" t-value="doc.date_order.strftime('%d')"/>
                  <t t-set="m" t-value="doc.date_order.strftime('%m')"/>
                  <t t-set="y" t-value="doc.date_order.strftime('%Y')"/>
                  <span t-esc="d + '/' + m + '/' + y"/>
                </td>
              </tr>
            </table>

            <!-- — Tabla de líneas de ejemplo — -->
            <table style="width:100%; font-size:14px; border-collapse:collapse; margin-bottom:10px;">
              <thead>
                <tr style="background-color:rgb(221,235,247);">
                  <th style="text-align:left;">Descripción</th>
                  <th style="text-align:center;">Cant.</th>
                  <th style="text-align:right;">P. Unitario</th>
                  <th style="text-align:right;">Subtotal</th>
                </tr>
              </thead>
              <tbody>
                <t t-foreach="doc.order_line" t-as="line">
                  <tr>
                    <td><t t-esc="line.name"/></td>
                    <td style="text-align:center;"><t t-esc="line.product_uom_qty"/></td>
                    <td style="text-align:right;">
                      <t t-esc="line.price_unit"/>
                    </td>
                    <td style="text-align:right;">
                      <t t-esc="line.price_subtotal"/>
                    </td>
                  </tr>
                </t>
              </tbody>
            </table>

            <!-- — Totales — -->
            <div style="text-align:right; font-size:12px; margin-top:10px;">
              <table style="margin-left:auto;">
                <tr>
                  <td><strong>Subtotal:</strong></td>
                  <td style="text-align:right;"><t t-esc="doc.amount_untaxed"/></td>
                </tr>
                <tr>
                  <td><strong>IVA:</strong></td>
                  <td style="text-align:right;"><t t-esc="doc.amount_tax"/></td>
                </tr>
                <tr>
                  <td><strong>Total:</strong></td>
                  <td style="text-align:right;"><t t-esc="doc.amount_total"/></td>
                </tr>
              </table>
            </div>

            <!-- — Aquí el resto de notas, condiciones, firma, etc. — -->

          </div>
        </t>
      </t>
      <!-- ¡Fin del slot content! -->
    </t>
  </template>
</odoo>
