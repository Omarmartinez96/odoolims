<odoo>
  <template id="external_layout_quote"
            t-name="lims_sale_extension.external_layout_quote">
    <t t-call="web.html_container">

      <!-- ===== HEADER ===== -->
      <div class="header" style="position: fixed; top: 0; left: 0; right: 0;">
        <div class="d-flex justify-content-between p-2">
          <img t-if="company.logo"
               t-att-src="'data:image/png;base64,%s' % company.logo"
               style="max-height: 70px;" />
          <div class="text-end" style="font-size: 10px;">
            <strong t-esc="company.partner_id.name"/><br/>
            <span t-esc="company.partner_id.contact_address"/>
          </div>
        </div>
      </div>

      <!-- ===== CONTENIDO ===== -->
      <div class="article o_report_in_container" style="margin-top: 120px; margin-bottom: 100px;">
        <t t-slot="content"/>
      </div>

      <!-- ===== FOOTER UNIFICADO ===== -->
      <div class="footer" style="position: fixed; bottom: 0; left: 0; right: 0; font-size: 8px; padding-top: 2px;">
        <table class="table table-borderless"
               style="width: 100%; table-layout: fixed; border-collapse: collapse; border-spacing: 0;">
          <tbody>
            <tr>
              <td style="width: 33%; text-align: left; padding: 0;">
                Teléfono: (664) 973-8185
              </td>
              <td style="width: 34%; text-align: center; padding: 0;">
                Página <span class="page"/> / <span class="topage"/>
              </td>
              <td style="width: 33%; text-align: right; padding: 0;">
                contacto@proteuslaboratorio.com
              </td>
            </tr>
            <tr>
              <td colspan="3" style="text-align: center; font-size: 7px; padding-top: 4px;">
                <t t-if="company.partner_id">
                  <t t-esc="company.partner_id.name"/>,
                  <t t-if="company.partner_id.street" t-esc="company.partner_id.street"/>
                  <t t-if="company.partner_id.street2">, <t t-esc="company.partner_id.street2"/></t>,
                  <t t-if="company.partner_id.city" t-esc="company.partner_id.city"/>,
                  <t t-if="company.partner_id.zip">C.P. <t t-esc="company.partner_id.zip"/></t>,
                  <t t-if="company.partner_id.country_id" t-esc="company.partner_id.country_id.name"/>
                </t>
              </td>
            </tr>
            <tr>
              <td colspan="3" style="text-align: center; font-size: 7px; padding-top: 4px;">
                FOR-021 Rev. 01 | PROC-005
              </td>
            </tr>
          </tbody>
        </table>
      </div>

    </t>
  </template>
</odoo>
