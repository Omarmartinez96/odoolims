<odoo>
  <template id="custom_external_layout">
    <t t-set="company" t-value="res_company"/>
    <div class="header">
      <div class="row">
        <div class="col-6">
          <!-- Logo mÃ¡s grande -->
          <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height:100px;"/>
        </div>
        <div class="col-6 text-right" style="font-size:9px;">
          <strong t-esc="company.name"/>
          <div t-esc="company.street"/>
          <div t-esc="company.city"/>
          <div t-if="company.phone">Tel: <span t-esc="company.phone"/></div>
          <div t-if="company.email">Email: <span t-esc="company.email"/></div>
        </div>
      </div>
    </div>
    <div class="article">
      <t t-call="0"/>
    </div>
  </template>
</odoo>
