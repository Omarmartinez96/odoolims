<odoo>
  <template id="external_layout_inherit_lims" inherit_id="web.external_layout_standard">

    <!-- Aumentar tamaño del logo -->
    <xpath expr="//t[@t-if='company.logo']" position="replace">
      <t t-if="company.logo">
        <img t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 140px;" class="img img-fluid"/>
      </t>
    </xpath>

    <!-- Reducir tamaño de la información de la empresa -->
    <xpath expr="//div[contains(@class, 'company_address')]" position="attributes">
      <attribute name="style">font-size: 10px;</attribute>
    </xpath>

  </template>
</odoo>
