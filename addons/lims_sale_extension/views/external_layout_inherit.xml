<odoo>
  <template id="lims_external_layout_custom">
    <div class="header" style="margin-bottom: 0; padding: 0;">
      <div class="row">
        <div class="col-4">
          <img t-att-src="'data:image/png;base64,%s' % res_company.logo" style="max-height: 120px;"/>
        </div>
        <div class="col-8" style="font-size: 10px;">
          <strong><t t-esc="res_company.name"/></strong><br/>
          <t t-esc="res_company.partner_id.contact_address"/>
        </div>
      </div>
      <hr/>
    </div>
    <div class="article">
      <t t-call="your_module.report_content_here"/>
    </div>
  </template>
</odoo>

