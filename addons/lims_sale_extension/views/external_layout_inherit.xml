<odoo>
  <template id="external_layout_inherit_lims" inherit_id="web.external_layout">
    
    <!-- Aumentar tamaño del logo -->
    <xpath expr="//div[contains(@class, 'header')]/div/div[1]/img" position="attributes">
      <attribute name="style">max-height: 100px; width: auto;</attribute>
    </xpath>

    <!-- Reducir tamaño del texto de información de la compañía -->
    <xpath expr="//div[contains(@class, 'header')]/div/div[2]" position="attributes">
      <attribute name="style">font-size: 9px !important;</attribute>
    </xpath>

  </template>
</odoo>
