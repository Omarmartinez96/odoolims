<odoo>
  <template id="external_layout_inherit_lims" inherit_id="web.external_layout_standard">
    
    <!-- Aumentar tamaño del logo -->
    <xpath expr="//div[contains(@class, 'header')]//img" position="attributes">
      <attribute name="style">max-height: 100px; max-width: 250px;</attribute>
    </xpath>

    <!-- Reducir tamaño del texto de información de empresa -->
    <xpath expr="//div[contains(@class, 'header')]//div[contains(@class, 'text-right')]" position="attributes">
      <attribute name="style">font-size: 9px; line-height: 1.4;</attribute>
    </xpath>

    <!-- Indicador visual -->
    <xpath expr="//div[contains(@class, 'header')]" position="inside">
      <div style="color: red; font-weight: bold; text-align: center;">
        LAYOUT HEREDADO ACTIVO
      </div>
    </xpath>

  </template>
</odoo>
