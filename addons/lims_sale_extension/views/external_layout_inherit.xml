<odoo>
  <template id="external_layout_inherit_lims" inherit_id="web.external_layout_standard">

    <!-- Aumentar el tamaño del logo -->
    <xpath expr="//img[contains(@class, 'company_logo')]" position="attributes">
      <attribute name="style">max-height: 100px !important;</attribute>
    </xpath>

    <!-- Reducir texto de información de la compañía -->
    <xpath expr="//div[contains(@class, 'company_address')]" position="attributes">
      <attribute name="style">font-size: 9px !important;</attribute>
    </xpath>

  </template>
</odoo>
