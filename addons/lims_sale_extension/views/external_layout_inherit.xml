<odoo>
  <template id="external_layout_inherit_lims" inherit_id="web.external_layout">

    <!-- Cambiar tamaño del logo -->
    <xpath expr="//t[@t-field='company.logo']" position="attributes">
      <attribute name="t-options">{'widget': 'image', 'style': 'max-height: 100px; width: auto;'}</attribute>
    </xpath>

    <!-- Cambiar tamaño del texto de información de la compañía -->
    <xpath expr="//div[contains(@class, 'company_address')]" position="attributes">
      <attribute name="style">font-size: 9px !important;</attribute>
    </xpath>

  </template>
</odoo>
