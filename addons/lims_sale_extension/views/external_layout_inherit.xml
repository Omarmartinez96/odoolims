<odoo>
  <template id="external_layout_inherit_lims" inherit_id="web.external_layout">

    <!-- Agrandar el logo -->
    <xpath expr="//div[contains(@class, 'header')]//img" position="attributes">
      <attribute name="style">max-height: 100px; width: auto;</attribute>
    </xpath>

    <!-- Reducir fuente del bloque de información de la compañía -->
    <xpath expr="//div[contains(@class, 'company')]//div" position="attributes">
      <attribute name="style">font-size: 9px;</attribute>
    </xpath>

  </template>
</odoo>
