<odoo>
  <template id="external_layout_inherit_lims" inherit_id="web.external_layout_standard">

    <!-- Aumentar tamaño del logo -->
    <xpath expr="//t[@t-field='company.logo']" position="attributes">
      <attribute name="style">max-height: 100px; max-width: 250px;</attribute>
    </xpath>

    <!-- Reducir tamaño del bloque de dirección -->
    <xpath expr="//div[contains(@class, 'company_address')]" position="attributes">
      <attribute name="style">font-size: 9px; line-height: 1.4;</attribute>
    </xpath>

  </template>
</odoo>
