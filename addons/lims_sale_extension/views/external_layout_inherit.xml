<odoo>
    <template id="external_layout_inherit_lims" inherit_id="web.external_layout">
        <!-- Hacer más grande el logo -->
        <xpath expr="//div[contains(@class, 'company_logo')]/img" position="attributes">
            <attribute name="style">max-height: 120px;</attribute>
        </xpath>

        <!-- Hacer más pequeña la fuente de la información de la empresa -->
        <xpath expr="//div[contains(@class, 'company_address')]" position="attributes">
            <attribute name="style">font-size: 10px !important;</attribute>
        </xpath>

        <!-- Subir "Cotización de servicios" (ajusta márgenes del body) -->
        <xpath expr="//div[@class='article']" position="attributes">
            <attribute name="style">margin-top: 10px !important;</attribute>
        </xpath>
    </template>
</odoo>

