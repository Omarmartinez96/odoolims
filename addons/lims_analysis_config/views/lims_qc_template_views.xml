<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <!-- Vista Lista de Plantillas QC -->
        <record id="view_lims_qc_template_list" model="ir.ui.view">
            <field name="name">lims.qc.template.list</field>
            <field name="model">lims.qc.template</field>
            <field name="arch" type="xml">
                <list string="Plantillas de Controles QC">
                    <field name="name"/>
                    <field name="times_used"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Vista Formulario de Plantillas QC -->
        <record id="view_lims_qc_template_form" model="ir.ui.view">
            <field name="name">lims.qc.template.form</field>
            <field name="model">lims.qc.template</field>
            <field name="arch" type="xml">
                <form string="Plantilla de Controles QC">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Ej: Controles Salmonella"/>
                            </h1>
                        </div>

                        <group>
                            <field name="active"/>
                            <field name="times_used" readonly="1"/>
                        </group>

                        <group string="Descripción">
                            <field name="description" nolabel="1"/>
                        </group>

                        <group string="Controles de la Plantilla">
                            <field name="control_line_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="qc_type_id"/>
                                    <field name="expected_result"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción -->
        <record id="action_lims_qc_templates" model="ir.actions.act_window">
            <field name="name">Plantillas de Controles QC</field>
            <field name="res_model">lims.qc.template</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>