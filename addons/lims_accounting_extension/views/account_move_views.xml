<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_move_form_lims" model="ir.ui.view">
    <field name="name">account.move.form.lims</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      
      <!-- Hacer editable el campo "name" en facturas -->
      <xpath expr="//field[@name='name']" position="attributes">
        <attribute name="readonly">0</attribute>
      </xpath>

      <xpath expr="//button[@name='action_register_payment']" position="after">
        <button name="action_open_payment_wizard" 
                type="object" 
                string="Complemento PPD" 
                class="btn-primary"
                invisible="move_type != 'out_invoice' or l10n_mx_edi_payment_method_id != 'PPD' or state != 'posted' or payment_state == 'paid'"/>
      </xpath>

    </field>
  </record>
</odoo>