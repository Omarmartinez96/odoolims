<odoo>
  <template id="inherit_account_report_invoice_document"
            inherit_id="account.report_invoice_document"
            priority="60">
    <!-- 1) Apuntamos SOLO al <t t-call="web.external_layout"> original -->
    <xpath expr="//t[@t-call='web.external_layout']" position="replace">
      <!-- 2) Sustituimos esa llamada por tu layout “Invoice LIMS” -->
      <t t-call="lims_accounting_extension.external_layout_invoice_lims">
        <!-- 3) Pasamos la empresa para el header -->
        <t t-set="company" t-value="doc.company_id"/>
        <!-- 4) Inyectamos TODO el contenido de la factura aquí -->
        <t t-slot="content">
          <t t-foreach="docs" t-as="doc">
            <div class="page">
              <!-- — tu HTML de FACTURA tal cual lo definiste — -->
              
                            <!-- Título -->
              <h4 style="text-align:center; font-size:20px; margin:20px 0 10px;">
                FACTURA DE VENTA
              </h4>
              
              <!-- Datos fiscales -->
              <table style="width:100%; font-size:10px; margin-bottom:10px;">
                <tr>
                  <td><strong>RFC Emisor:</strong> <t t-esc="company.vat or ''"/></td>
                  <td><strong>Régimen Fiscal:</strong> <t t-esc="company.l10n_mx_edi_fiscal_regime_id.name or ''"/></td>
                </tr>
                <tr>
                  <td><strong>RFC Cliente:</strong> <t t-esc="doc.partner_id.vat or ''"/></td>
                  <td><strong>Uso CFDI:</strong> <t t-esc="doc.l10n_mx_edi_usage or ''"/></td>
                </tr>
                <tr>
                  <td><strong>Forma de Pago:</strong> <t t-esc="doc.l10n_mx_edi_payment_method_id.name or ''"/></td>
                  <td><strong>Método de Pago:</strong> <t t-esc="doc.payment_state or ''"/></td>
                </tr>
                <tr>
                  <td><strong>Folio Fiscal (UUID):</strong> <t t-esc="doc.l10n_mx_edi_cfdi_uuid or ''"/></td>
                  <td><strong>Serie y Folio:</strong> <t t-esc="doc.name or ''"/></td>
                </tr>
              </table>

              <!-- Tabla de conceptos -->
              <table style="width:100%; font-size:10px; border-collapse:collapse;" border="1">
                <thead>
                  <tr>
                    <th>Cantidad</th>
                    <th>Unidad</th>
                    <th>Descripción</th>
                    <th>Precio Unitario</th>
                    <th>Descuento</th>
                    <th>Importe</th>
                  </tr>
                </thead>
                <tbody>
                  <t t-foreach="doc.invoice_line_ids" t-as="line">
                    <tr>
                      <td><t t-esc="line.quantity"/></td>
                      <td><t t-esc="line.product_uom_id.name or ''"/></td>
                      <td><t t-esc="line.name"/></td>
                      <td><t t-esc="line.price_unit"/></td>
                      <td><t t-esc="line.discount"/>%</td>
                      <td><t t-esc="line.price_subtotal"/></td>
                    </tr>
                  </t>
                </tbody>
              </table>

              <!-- Totales -->
              <table style="width:100%; font-size:10px; margin-top:10px;">
                <tr>
                  <td style="width:70%; text-align:right;"><strong>Subtotal:</strong></td>
                  <td><t t-esc="doc.amount_untaxed"/></td>
                </tr>
                <tr>
                  <td style="text-align:right;"><strong>IVA 16%:</strong></td>
                  <td><t t-esc="doc.amount_tax"/></td>
                </tr>
                <tr>
                  <td style="text-align:right;"><strong>Total:</strong></td>
                  <td><t t-esc="doc.amount_total"/></td>
                </tr>
              </table>

              <!-- Total con letra -->
              <p style="font-size:10px; margin-top:10px;">
                <strong>Total con letra:</strong> <t t-esc="doc.amount_to_text or ''"/>
              </p>

              <!-- Sellos -->
              <div style="font-size:8px; margin-top:10px;">
                <p><strong>Sello CFDI:</strong><br/><t t-esc="doc.l10n_mx_edi_sat_cert_sn or ''"/></p>
                <p><strong>Sello SAT:</strong><br/><t t-esc="doc.l10n_mx_edi_sat_sign or ''"/></p>
                <p><strong>Cadena original del complemento de certificación:</strong><br/><t t-esc="doc.l10n_mx_edi_cfdi_cadena or ''"/></p>
              </div>

              <!-- Leyenda -->
              <p style="font-size:10px; text-align:center; margin-top:15px;">
                Este documento es una representación impresa de un CFDI.
              </p>

            </div>
          </t>
        </t>
      </t>
    </xpath>
  </template>
</odoo>
