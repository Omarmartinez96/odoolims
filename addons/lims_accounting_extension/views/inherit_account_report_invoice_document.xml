<odoo>
  <template id="report_invoice_document_inherit"
            inherit_id="account.report_invoice_document"
            priority="20">
    <!--
      Usamos contains() para capturar tanto web.external_layout
      como web.external_layout_standard (por si cambia en tu versiÃ³n)
    -->
    <xpath expr="//t[contains(@t-call, 'external_layout')]" position="replace">
      <!-- Llamamos a tu wrapper, que internamente vuelve a t-call a web.external_layout -->
      <t t-call="lims_accounting_extension.external_layout_invoice_lims"/>
    </xpath>
  </template>
</odoo>
