<odoo>
  <template id="external_layout_invoice_lims"
            inherit_id="web.external_layout_standard">
    <!-- Reemplaza la cabecera nativa -->
    <xpath expr="//div[contains(@t-attf-class,'header')]" position="replace">
      <div t-attf-class="header o_company_#{company.id}_layout">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <img t-if="company.logo"
               class="o_company_logo_small"
               t-att-src="image_data_uri(company.logo)"
               alt="Logo"
               style="max-height:80px;"/>
          <div class="text-end">
            <h2 t-esc="company.name"/>
            <!-- opcionalmente dirección -->
            <div t-field="company.company_details"/>
          </div>
        </div>
      </div>
    </xpath>

    <!-- Reemplaza el pie nativo -->
    <xpath expr="//div[contains(@class,'footer')]" position="replace">
      <div t-attf-class="footer o_company_#{company.id}_layout">
        <div class="o_footer_content d-flex border-top pt-2" style="font-size:8px;">
          <div class="flex-grow-1 text-start">
            <!-- tu texto de footer, p.ej. FOR-XXX… -->
            FOR-XXX Rev.XX | PROC-XXX
          </div>
          <div class="text-end text-muted">
            <div t-if="report_type=='pdf'">Página <span class="page"/> / <span class="topage"/></div>
          </div>
        </div>
      </div>
    </xpath>
  </template>
</odoo>
