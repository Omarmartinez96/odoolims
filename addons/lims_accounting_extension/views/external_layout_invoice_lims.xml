<!-- file: views/external_layout_invoice_lims.xml -->
<odoo>
  <template id="external_layout_invoice_lims"
            t-name="lims_accounting_extension.external_layout_invoice_lims"
            name="External Layout Invoice LIMS">

    <!-- 1) ENGÁNCHATE A web.external_layout -->
    <t t-call="web.external_layout">

      <!-- ===== HEADER VACIO ===== -->

      <!-- ===== ARTÍCULO / CONTENIDO ===== -->
      <div class="article">
        <div t-slot="content"/>
      </div>

      <!-- ===== FOOTER ===== -->
      <div class="footer" style="font-size:10px; text-align:center; border-top:1px solid #ccc; padding-top:5px;">
        <div style="display:flex; justify-content:space-between; width:100%;">
          <div style="text-align:left; width:33%;">
             <t t-esc="company.phone or ''"/>
          </div>
          <div style="text-align:center; width:33%;">
             <t t-esc="company.partner_id.contact_address or ''"/>
          </div>
          <div style="text-align:right; width:33%;">
             <t t-esc="company.email or ''"/>
          </div>
        </div>
      </div>

    </t>
  </template>
</odoo>
