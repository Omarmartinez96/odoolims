            t-name="lims_accounting_extension.external_layout_invoice_lims"
            name="External Layout Invoice LIMS">

    <!-- 1) ENGÁNCHATE A web.external_layout -->
    <t t-call="web.external_layout">

      <!-- 2) Recupera la CSS estándar que Odoo 18 ahora pone en otro template -->
      <t t-call="web.report_layout_style"/>

      <!-- ===== HEADER ===== -->
      <div class="header">
        <!-- tu logo y datos -->
      </div>

      <!-- ===== CUERPO ===== -->
      <div class="article">
        <div t-slot="content"/>
      </div>

      <!-- ===== FOOTER ===== -->
      <div class="footer">
        <!-- tu pie -->
      </div>

    </t>
  </template>
</odoo>
