<odoo>
  <template id="external_layout_invoice_lims"
            inherit_id="web.external_layout_standard">
    <!-- 1) Ajustamos sólo el <img> del logo -->
    <xpath expr="//div[contains(@class,'d-flex')]/img" position="attributes">
      <attribute name="style">
        max-height:100px !important;
        margin-bottom:0 !important;
      </attribute>
    </xpath>

    <!-- Reemplaza el pie nativo -->
    <xpath expr="//div[contains(@class,'o_footer_content')]" position="replace">
      <div class="o_footer_content" style="font-size:8px; padding-top:2px;">
        <table style="width:100%; font-size:7px; border-collapse:collapse;">
          <tr>
            <td>Tel: (664) 973-8185</td>
            <td style="text-align:center;">Página <span class="page"/> / <span class="topage"/></td>
            <td style="text-align:right;">contacto@proteuslaboratorio.com</td>
          </tr>
          <tr>
            <td colspan="3" style="text-align:center; padding-top:4px;">
              FOR-XXX Rev. XX | PROC-XXX
            </td>
          </tr>
        </table>
      </div>
    </xpath>
  </template>
</odoo>
