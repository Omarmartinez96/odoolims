<odoo>
  <template id="external_layout_invoice_lims" inherit_id="account.report_invoice_document">
    <!-- Header -->
    <xpath expr="//div[contains(@class, 'header')]" position="replace">
      <div class="header">
        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height:80px;" />
        <p><t t-esc="company.name"/></p>
        <p><t t-esc="company.company_details"/></p>
      </div>
    </xpath>

    <!-- Footer -->
    <xpath expr="//div[contains(@class, 'o_footer_content')]" position="replace">
      <div class="o_footer_content" style="font-size:8px; padding-top:2px;">
        <table style="width:100%; font-size:7px;">
          <tr>
            <td>Tel: (664) 973-8185</td>
