<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_payment_wizard_form" model="ir.ui.view">
        <field name="name">payment.wizard.form</field>
        <field name="model">payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Complemento de Pago PPD">
                <sheet>
                    <div class="oe_title">
                        <h1>Generar Complemento de Pago</h1>
                    </div>
                    <group>
                        <group>
                            <field name="invoice_id" options="{'no_create': True}"/>
                            <field name="amount" widget="monetary"/>
                            <field name="payment_date"/>
                        </group>
                        <group>
                            <field name="journal_id" options="{'no_create': True}"/>
                            <field name="payment_method_line_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_register_payment" 
                            string="Generar Complemento" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancelar" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n para abrir el wizard -->
    <record id="action_payment_wizard" model="ir.actions.act_window">
        <field name="name">Complementos de Pago PPD</field>
        <field name="res_model">payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    
</odoo>