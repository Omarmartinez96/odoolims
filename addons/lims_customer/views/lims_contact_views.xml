<odoo>
    <data>
        <record id="view_lims_contact_form" model="ir.ui.view">
            <field name="name">lims.contact.form</field>
            <field name="model">lims.contact</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="department_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem id="lims_contacts_menu" name="Contactos" parent="lims_menu" action="action_lims_contacts"/>
    </data>
</odoo>
