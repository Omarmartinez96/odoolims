<odoo>
    <data>
        <!-- AcciÃ³n de Ventana para Contactos -->
        <record id="action_lims_contacts" model="ir.actions.act_window">
            <field name="name">Contactos</field>
            <field name="res_model">lims.contact</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Vista de Lista de Contactos -->
        <record id="view_lims_contact_list" model="ir.ui.view">
            <field name="name">lims.contact.list</field>
            <field name="model">lims.contact</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="department_id"/>
                </list>
            </field>
        </record>

        <!-- Vista de Formulario para Contactos -->
        <record id="view_lims_contact_form" model="ir.ui.view">
            <field name="name">lims.contact.form</field>
            <field name="model">lims.contact</field>
            <field name="arch" type="xml">
                <form string="Contacto">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="department_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
