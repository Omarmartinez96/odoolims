<odoo>
    <data>
        <!-- ACCIÓN DE VENTANA PARA SUCURSALES (FILTRADA POR EL CLIENTE) -->
        <record id="action_lims_branches" model="ir.actions.act_window">
            <field name="name">Sucursales</field>
            <field name="res_model">lims.branch</field>
            <field name="view_mode">list,form</field>
            <!-- Filtra sucursales por el cliente en contexto -->
            <field name="domain">[('customer_id','=', context.get('default_customer_id'))]</field>
        </record>

        <!-- MENÚ PRINCIPAL DE CLIENTES -->
        <menuitem id="lims_customer_menu" name="Gestión de Clientes" sequence="1"/>

        <!-- ACCIÓN DE VENTANA PARA CLIENTES -->
        <record id="action_lims_customers" model="ir.actions.act_window">
            <field name="name">Clientes</field>
            <field name="res_model">lims.customer</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- MENÚ PARA CLIENTES -->
        <menuitem id="lims_customers_menu" name="Clientes"
                  parent="lims_customer_menu"
                  action="action_lims_customers"
                  sequence="1"/>

        <!-- MENÚ PARA SUCURSALES (OPCIONAL) -->
        <menuitem id="lims_branches_menu" name="Sucursales"
                  parent="lims_customer_menu"
                  action="action_lims_branches"
                  sequence="2"/>

        <!-- VISTA DE FORMULARIO PARA CLIENTES -->
        <record id="view_lims_customer_form" model="ir.ui.view">
            <field name="name">lims.customer.form</field>
            <field name="model">lims.customer</field>
            <field name="arch" type="xml">
                <form string="Gestión de Clientes">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="client_code"/>
                            <field name="fiscal_address"/>
                        </group>
                        <!-- BOTÓN para ver sucursales, usando 'id' en lugar de 'active_id' -->
                        <group>
                            <button name="%(action_lims_branches)d"
                                    string="Ver Sucursales"
                                    type="action"
                                    class="oe_stat_button"
                                    context="{'default_customer_id': id}"/>
                        </group>
                        <notebook>
                            <page string="Sucursales">
                                <!-- One2many a lims.branch -->
                                <field name="branch_ids">
                                    <!-- Agrega un context para que, si creas una sucursal desde aquí, 
                                         se asigne automáticamente el customer_id -->
                                    <list create="true" context="{'default_customer_id': id}">
                                        <field name="name"/>
                                        <field name="address"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
