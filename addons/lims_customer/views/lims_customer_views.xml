<odoo>
    <data>
        <!-- Acción ventana para sucursales (filtrado por cliente) -->
        <record id="action_lims_branches" model="ir.actions.act_window">
            <field name="name">Sucursales</field>
            <field name="res_model">lims.branch</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[("customer_id", "=", context.get("default_customer_id"))]</field>
        </record>

        <!-- Acción ventana para departamentos (filtrado por sucursal) -->
        <record id="action_lims_departments" model="ir.actions.act_window">
            <field name="name">Departamentos</field>
            <field name="res_model">lims.department</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('branch_id', '=', context.get('default_branch_id'))]</field>
        </record>

        <!-- Vista lista para clientes -->
        <record id="view_lims_customer_list" model="ir.ui.view">
            <field name="name">lims.customer.list</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <list string="Clientes" default_order="client_code asc">
                    <field name="client_code"/>
                    <field name="name"/>
                    <field name="vat"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <field name="client_code_sequence" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Vista de búsqueda para clientes -->
        <record id="view_lims_customer_search" model="ir.ui.view">
            <field name="name">lims.customer.search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Nombre/Razón Social"/>
                    <field name="client_code" string="Código Cliente"/>
                    <field name="vat" string="RFC"/>
                    <field name="email" string="Email"/>
                    <field name="city" string="Ciudad"/>
                    <separator/>
                    <filter string="Con RFC" name="has_rfc" domain="[('vat','!=',False)]"/>
                    <filter string="Sin RFC" name="no_rfc" domain="[('vat','=',False)]"/>
                    <filter string="Con Email" name="has_email" domain="[('email','!=',False)]"/>
                    <separator/>
                    <group expand="0" string="Agrupar Por">
                        <filter string="País" name="group_country" context="{'group_by':'country_id'}"/>
                        <filter string="Estado" name="group_state" context="{'group_by':'state_id'}"/>
                        <filter string="Ciudad" name="group_city" context="{'group_by':'city'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vista formulario INDEPENDIENTE para clientes -->
        <record id="view_lims_customer_form" model="ir.ui.view">
            <field name="name">lims.customer.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Cliente">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action" name="%(action_lims_branches)d"
                                    context="{'default_customer_id': id}" icon="fa-building">
                                <field name="branch_count" widget="statinfo" string="Sucursales"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_departments" icon="fa-users">
                                <field name="total_departments" widget="statinfo" string="Departamentos"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_contacts" icon="fa-address-book">
                                <field name="total_contacts" widget="statinfo" string="Contactos"/>
                            </button>
                        </div>
                        
                        <group>
                            <field name="name" required="1" string="Razón Social"/>
                            <field name="is_lims_customer" invisible="1"/>
                            <field name="vat" string="RFC" required="1"/>
                            <field name="client_code"/>
                            <button name="action_generate_code_wizard" 
                                    string="🔄 Generar Código" 
                                    type="object"
                                    class="btn-success"
                                    help="Generar código automático basado en RFC"/>
                        </group>

                        <group string="Responsable de Cuenta">
                            <field name="email" string="Correo electrónico"/>
                            <field name="phone" string="Teléfono"/>
                        </group>

                        <group string="Dirección Fiscal Completa">
                            <field name="street" string="Calle y Exterior"/>
                            <field name="street2" string="Colonia / Interior"/>
                            <field name="city" string="Ciudad"/>
                            <field name="state_id" string="Estado"/>
                            <field name="zip" string="Código Postal"/>
                            <field name="country_id" string="País"/>
                        </group>

                        <group string="Datos Fiscales para CFDI">
                            <field name="l10n_mx_edi_fiscal_regime" string="Régimen Fiscal" required="1"/>
                        </group>

                        <notebook>
                            <page string="Sucursales">
                                <field name="branch_ids"
                                       context="{'default_customer_id': id}"
                                       options="{'form_view_ref': 'view_lims_branch_form'}">
                                    <list create="true" edit="false">
                                        <field name="name"/>
                                        <field name="address"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción para clientes -->
        <record id="action_lims_customers" model="ir.actions.act_window">
            <field name="name">Clientes</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('is_lims_customer', '=', True), ('is_company', '=', True), ('client_code', '!=', False)]</field>
            <field name="context">{'default_is_lims_customer': True}</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_lims_customer_list')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_lims_customer_form')})
            ]"/>
        </record>

        <!-- Menú principal de gestión de clientes -->
        <menuitem id="lims_customer_menu" name="Gestión de Clientes" sequence="1"/>

        <!-- Submenú Clientes -->
        <menuitem id="lims_customers_menu" name="Clientes"
                  parent="lims_customer_menu"
                  action="action_lims_customers"
                  sequence="2"/>

        <!-- Acción para generar códigos faltantes -->
        <record id="action_generate_client_codes" model="ir.actions.server">
            <field name="name">Generar Códigos Faltantes</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                action = records.filtered('is_lims_customer').action_generate_missing_codes()
            </field>
        </record>

        <!-- Vista formulario sucursales -->
        <record id="view_lims_branch_form" model="ir.ui.view">
            <field name="name">lims.branch.form</field>
            <field name="model">lims.branch</field>
            <field name="arch" type="xml">
                <form string="Sucursal">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="address"/>
                            <field name="client_code" readonly="1"/>
                            <button name="%(action_lims_departments)d"
                                    string="Ver Departamentos"
                                    type="action"
                                    class="oe_stat_button"
                                    context="{'default_branch_id': id}"
                                    invisible="id==False"/>
                        </group>
                        <notebook>
                            <page string="Departamentos">
                                <field name="department_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista lista sucursales -->
        <record id="view_lims_branch_list" model="ir.ui.view">
            <field name="name">lims.branch.list</field>
            <field name="model">lims.branch</field>
            <field name="arch" type="xml">
                <list string="Sucursales">
                    <field name="name"/>
                    <field name="address"/>
                    <field name="customer_id"/>
                </list>
            </field>
        </record>

    </data>
</odoo>