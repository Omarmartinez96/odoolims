<odoo>
    <data>
        <!-- Acción para abrir la vista de Clientes -->
        <record id="action_lims_customers" model="ir.actions.act_window">
            <field name="name">Clientes</field>
            <field name="res_model">lims.customer</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crea un nuevo cliente LIMS.
                </p>
            </field>
        </record>

        <!-- Menú Principal -->
        <menuitem id="lims_customer_menu_root" name="Gestión de Clientes" sequence="10"/>
        <menuitem id="lims_customer_menu" name="Clientes" parent="lims_customer_menu_root" action="action_lims_customers" sequence="1"/>

        <!-- Vista Listada de Clientes -->
        <record id="view_lims_customer_list" model="ir.ui.view">
            <field name="name">lims.customer.list</field>
            <field name="model">lims.customer</field>
            <field name="arch" type="xml">
                <list string="Clientes">
                    <field name="name"/>
                    <field name="client_code"/>
                    <field name="fiscal_address"/>
                </list>
            </field>
        </record>

        <!-- Vista de Formulario de Clientes -->
        <record id="view_lims_customer_form" model="ir.ui.view">
            <field name="name">lims.customer.form</field>
            <field name="model">lims.customer</field>
            <field name="arch" type="xml">
                <form string="Gestión de Clientes">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="client_code"/>
                            <field name="fiscal_address"/>
                        </group>
                        <notebook>
                            <!-- Pestaña de Sucursales -->
                            <page string="Sucursales">
                                <field name="branch_ids" context="{'form_view_ref': 'view_lims_branch_form'}">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="address"/>
                                    </list>
                                    <!-- Formulario Emergente para Añadir Sucursales -->
                                    <form string="Agregar Sucursal">
                                        <sheet>
                                            <group>
                                                <field name="name" required="1"/>
                                                <field name="address"/>
                                                <field name="customer_id" invisible="1"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista de Formulario para Sucursales -->
        <record id="view_lims_branch_form" model="ir.ui.view">
            <field name="name">lims.branch.form</field>
            <field name="model">lims.branch</field>
            <field name="arch" type="xml">
                <form string="Sucursal">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="address"/>
                            <field name="customer_id" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
