<odoo>
    <data>
        <!-- ACCIÓN DE VENTANA PARA SUCURSALES (FILTRADA POR CLIENTE) -->
        <record id="action_lims_branches" model="ir.actions.act_window">
            <field name="name">Sucursales</field>
            <field name="res_model">lims.branch</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[("customer_id", "=", context.get("default_customer_id"))]</field>
        </record>

        <!-- MENÚ PRINCIPAL DE GESTIÓN DE CLIENTES -->
        <menuitem id="lims_customer_menu" name="Gestión de Clientes" sequence="1"/>

        <!-- ✅ AJUSTADO: ACCIÓN PARA CLIENTES AHORA APUNTANDO A res.partner CON FILTRO -->
        <record id="action_lims_customers" model="ir.actions.act_window">
            <field name="name">Clientes</field>
            <field name="res_model">res.partner</field> <!-- cambiado aquí -->
            <field name="view_mode">list,form</field>
            <field name="domain">[('is_lims_customer', '=', True)]</field> <!-- añadido filtro -->
            <field name="context">{'default_is_lims_customer': True}</field>
        </record>

        <!-- SUBMENÚ CLIENTES -->
        <menuitem id="lims_customers_menu" name="Clientes"
                  parent="lims_customer_menu"
                  action="action_lims_customers"
                  sequence="2"/>

        <!-- ✅ AJUSTADO: VISTA DE LISTA PARA CLIENTES (res.partner) -->
        <record id="view_lims_customer_list" model="ir.ui.view">
            <field name="name">lims.customer.list</field>
            <field name="model">res.partner</field> <!-- cambiado aquí -->
            <field name="arch" type="xml">
                <list string="Clientes">
                    <field name="name"/>
                    <field name="client_code"/>
                    <field name="fiscal_address"/>
                </list>
            </field>
        </record>

        <!-- ✅ AJUSTADO: VISTA FORMULARIO DE CLIENTES HEREDADA DE res.partner -->
        <record id="view_lims_customer_form" model="ir.ui.view">
            <field name="name">lims.customer.form.inherit</field>
            <field name="model">res.partner</field> <!-- cambiado aquí -->
            <field name="inherit_id" ref="base.view_partner_form"/> <!-- HEREDADO DE res.partner -->
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="after">
                    <sheet string="Información LIMS" attrs="{'invisible':[('is_lims_customer','=',False)]}">
                        <group>
                            <field name="is_lims_customer" invisible="1"/>
                            <field name="rfc"/>
                            <field name="client_code"/>
                            <field name="fiscal_address"/>
                        </group>

                        <!-- Botón para ver sucursales asociadas -->
                        <group>
                            <button name="%(action_lims_branches)d"
                                    string="Ver Sucursales"
                                    type="action"
                                    class="oe_stat_button"
                                    context="{'default_customer_id': id}"
                                    modifiers="{'invisible': [['id', '=', False]]}"/>
                        </group>

                        <!-- Notebook para sucursales -->
                        <notebook>
                            <page string="Sucursales">
                                <field name="branch_ids" context="{'default_customer_id': id}" options="{'form_view_ref': 'view_lims_branch_form'}">
                                    <list create="true" edit="false">
                                        <field name="name"/>
                                        <field name="address"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </xpath>
            </field>
        </record>

        <!-- LAS VISTAS DE SUCURSALES SE MANTIENEN IGUALES (lims.branch) -->
        <!-- FORMULARIO SUCURSALES -->
        <record id="view_lims_branch_form" model="ir.ui.view">
            <field name="name">lims.branch.form</field>
            <field name="model">lims.branch</field>
            <field name="arch" type="xml">
                <form string="Sucursal">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="address"/>
                            <field name="customer_id" readonly="1"/>
                            <field name="customer_name" readonly="1"/>
                            <field name="client_code" readonly="1"/>
                            <button name="%(action_lims_branches)d"
                                    string="Ver Sucursales"
                                    type="action"
                                    class="oe_stat_button"
                                    context="{'default_customer_id': id}"
                                    modifiers="{'invisible': [['id', '=', False]]}"/>
                        </group>

                        <!-- Departamentos -->
                        <notebook>
                            <page string="Departamentos">
                                <field name="department_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- LISTA SUCURSALES -->
        <record id="view_lims_branch_list" model="ir.ui.view">
            <field name="name">lims.branch.list</field>
            <field name="model">lims.branch</field>
            <field name="arch" type="xml">
                <list string="Sucursales">
                    <field name="name"/>
                    <field name="address"/>
                    <field name="customer_id"/>
                </list>
            </field>
        </record>

    </data>
</odoo>
