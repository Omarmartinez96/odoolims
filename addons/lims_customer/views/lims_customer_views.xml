<odoo>
    <data>
        
        <!-- ========== ACCIONES PARA SMART BUTTONS ========== -->
        <!-- Acción para sucursales filtradas por cliente -->
        <record id="action_lims_branches" model="ir.actions.act_window">
            <field name="name">Sucursales</field>
            <field name="res_model">lims.branch</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[("customer_id", "=", context.get("default_customer_id"))]</field>
        </record>

        <!-- ========== VISTA LISTA CON ORDENAMIENTO EN PYTHON ========== -->
        <record id="view_lims_customer_list" model="ir.ui.view">
            <field name="name">lims.customer.list</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <!-- Sin default_order - usa método search personalizado -->
                <list string="Clientes">
                    <field name="client_code"/>
                    <field name="name"/>
                    <field name="vat"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="city"/>
                    <field name="country_id"/>
                    <!-- Mostrar secuencia para verificar ordenamiento -->
                    <field name="client_sequence" string="Consecutivo"/>
                </list>
            </field>
        </record>

        <!-- ========== VISTA DE BÚSQUEDA AVANZADA ========== -->
        <record id="view_lims_customer_search" model="ir.ui.view">
            <field name="name">lims.customer.search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Nombre/Razón Social"/>
                    <field name="client_code" string="Código Cliente"/>
                    <field name="vat" string="RFC"/>
                    <field name="email" string="Email"/>
                    <field name="city" string="Ciudad"/>
                    <separator/>
                    <!-- Filtros útiles -->
                    <filter string="Con RFC" name="has_rfc" domain="[('vat','!=',False)]"/>
                    <filter string="Sin RFC" name="no_rfc" domain="[('vat','=',False)]"/>
                    <filter string="Con Email" name="has_email" domain="[('email','!=',False)]"/>
                    <filter string="Sin Código" name="no_code" domain="[('client_code','=',False)]"/>
                    <separator/>
                    <!-- Agrupaciones -->
                    <group expand="0" string="Agrupar Por">
                        <filter string="País" name="group_country" context="{'group_by':'country_id'}"/>
                        <filter string="Estado" name="group_state" context="{'group_by':'state_id'}"/>
                        <filter string="Ciudad" name="group_city" context="{'group_by':'city'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ========== VISTA FORMULARIO OPTIMIZADA ========== -->
        <record id="view_lims_customer_form" model="ir.ui.view">
            <field name="name">lims.customer.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Cliente LIMS">
                    <sheet>
                        
                        <!-- Smart Buttons -->
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action" name="%(action_lims_branches)d"
                                    context="{'default_customer_id': id}" icon="fa-building">
                                <field name="branch_count" widget="statinfo" string="Sucursales"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_departments" icon="fa-users">
                                <field name="total_departments" widget="statinfo" string="Departamentos"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_contacts" icon="fa-address-book">
                                <field name="total_contacts" widget="statinfo" string="Contactos"/>
                            </button>
                        </div>

                        <!-- Información Principal -->
                        <group string="Información Principal">
                            <group>
                                <field name="name" required="1" string="Razón Social" placeholder="Nombre completo de la empresa"/>
                                <field name="vat" string="RFC" required="1" placeholder="RFC de la empresa"/>
                                <field name="is_lims_customer" invisible="1"/>
                            </group>
                            <group>
                                <field name="client_code" placeholder="Se genera automáticamente al guardar con RFC"/>
                                <field name="client_sequence" readonly="1" string="Consecutivo" 
                                       help="Número extraído para ordenamiento"/>
                            </group>
                        </group>

                        <!-- Información de Contacto -->
                        <group string="Información de Contacto">
                            <group>
                                <field name="email" string="Correo electrónico" placeholder="correo@empresa.com"/>
                                <field name="phone" string="Teléfono" placeholder="+52 123 456 7890"/>
                            </group>
                        </group>

                        <!-- Dirección Completa -->
                        <group string="Dirección Fiscal">
                            <group>
                                <field name="street" string="Calle y Número Exterior" placeholder="Calle Principal #123"/>
                                <field name="street2" string="Colonia / Número Interior" placeholder="Colonia Centro, Int. 2"/>
                                <field name="city" string="Ciudad" placeholder="Ciudad"/>
                            </group>
                            <group>
                                <field name="state_id" string="Estado"/>
                                <field name="zip" string="Código Postal" placeholder="12345"/>
                                <field name="country_id" string="País"/>
                            </group>
                        </group>

                        <!-- Datos Fiscales -->
                        <group string="Datos Fiscales">
                            <field name="l10n_mx_edi_fiscal_regime" string="Régimen Fiscal"/>
                        </group>

                        <!-- Sucursales en Notebook -->
                        <notebook>
                            <page string="Sucursales">
                                <field name="branch_ids" context="{'default_customer_id': id}">
                                    <list create="true" edit="false">
                                        <field name="name"/>
                                        <field name="address"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========== ACCIÓN PRINCIPAL CON CONTEXTO PARA ORDENAMIENTO ========== -->
        <record id="action_lims_customers" model="ir.actions.act_window">
            <field name="name">Clientes LIMS</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">list,form</field>
            <!-- Dominio: Solo clientes LIMS que sean empresas -->
            <field name="domain">[('is_lims_customer', '=', True), ('is_company', '=', True), ('parent_id', '=', False)]</field>
            <!-- Contexto con bandera para ordenamiento -->
            <field name="context">{
                'default_is_lims_customer': True,
                'default_is_company': True,
                'lims_customer_view': True
            }</field>
            <!-- Vistas específicas -->
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_lims_customer_list')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_lims_customer_form')})
            ]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Crear el primer cliente LIMS!
                </p>
                <p>
                    Los clientes LIMS manejan sucursales, departamentos y contactos organizados.
                    El código se genera automáticamente basado en el RFC.
                </p>
            </field>
        </record>

        <!-- ========== MENÚS PRINCIPALES ========== -->
        <menuitem id="lims_customer_menu" name="Gestión de Clientes" sequence="1"/>
        
        <menuitem id="lims_customers_menu" 
                  name="Clientes"
                  parent="lims_customer_menu"
                  action="action_lims_customers"
                  sequence="2"/>

        <!-- ========== VISTAS PARA SUCURSALES (SIMPLIFICADAS) ========== -->
        <record id="view_lims_branch_form_simple" model="ir.ui.view">
            <field name="name">lims.branch.form.simple</field>
            <field name="model">lims.branch</field>
            <field name="arch" type="xml">
                <form string="Sucursal">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre de la sucursal" required="1"/>
                            </h1>
                            <h3>
                                <field name="customer_name" readonly="1"/>
                            </h3>
                        </div>
                        
                        <group>
                            <field name="address" placeholder="Dirección de la sucursal"/>
                            <field name="customer_id" invisible="1"/>
                            <field name="client_code" readonly="1"/>
                        </group>

                        <notebook>
                            <page string="Departamentos">
                                <field name="department_ids">
                                    <list editable="bottom">
                                        <field name="name" placeholder="Nombre del departamento"/>
                                        <field name="address" placeholder="Dirección específica"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_lims_branch_list_simple" model="ir.ui.view">
            <field name="name">lims.branch.list.simple</field>
            <field name="model">lims.branch</field>
            <field name="arch" type="xml">
                <list string="Sucursales">
                    <field name="name"/>
                    <field name="address"/>
                    <field name="customer_name"/>
                    <field name="client_code"/>
                </list>
            </field>
        </record>

    </data>
</odoo>