<odoo>
    <data>
        <!-- Menú principal sin submenús -->
        <menuitem id="lims_menu" name="Gestión de Clientes" sequence="10"/>

        <!-- Acción principal para abrir clientes directamente -->
        <record id="action_lims_customers" model="ir.actions.act_window">
            <field name="name">Clientes</field>
            <field name="res_model">lims.customer</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Enlaza la acción al menú principal -->
        <menuitem id="lims_customer_menu" name="Clientes" parent="lims_menu" action="action_lims_customers"/>

        <!-- Vista de formulario para Clientes -->
        <record id="view_lims_customer_form" model="ir.ui.view">
            <field name="name">lims.customer.form</field>
            <field name="model">lims.customer</field>
            <field name="arch" type="xml">
                <form string="Gestión de Clientes">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="client_code"/>
                            <field name="fiscal_address"/>
                        </group>
                        <notebook>
                            <page string="Sucursales">
                                <field name="branch_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="address"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista de lista para Clientes -->
        <record id="view_lims_customer_tree" model="ir.ui.view">
            <field name="name">lims.customer.tree</field>
            <field name="model">lims.customer</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="client_code"/>
                    <field name="fiscal_address"/>
                </list>
            </field>
        </record>
    </data>
</odoo>
