<odoo>
    <data>
        <!-- Acción de ventana para visualizar las sucursales -->
        <record id="action_lims_branches" model="ir.actions.act_window">
            <field name="name">Sucursales</field>
            <field name="res_model">lims.branch</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('customer_id', '=', active_id)]</field>
        </record>

        <!-- Vista de formulario de Cliente -->
        <record id="view_lims_customer_form" model="ir.ui.view">
            <field name="name">lims.customer.form</field>
            <field name="model">lims.customer</field>
            <field name="arch" type="xml">
                <form string="Gestión de Clientes">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="client_code"/>
                            <field name="fiscal_address"/>
                        </group>
                        <group>
                            <button name="action_lims_branches" string="Ver Sucursales" type="action" class="oe_stat_button"/>
                        </group>
                        <notebook>
                            <page string="Sucursales">
                                <field name="branch_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="address"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
