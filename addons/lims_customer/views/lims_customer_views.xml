<odoo>
    <data>
        <!-- ACCIÓN DE VENTANA PARA SUCURSALES (FILTRADA POR EL CLIENTE) -->
        <record id="action_lims_branches" model="ir.actions.act_window">
            <field name="name">Sucursales</field>
            <field name="res_model">lims.branch</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('customer_id','=', context.get('default_customer_id'))]</field>
        </record>

        <!-- MENÚ PRINCIPAL Y ACCIONES -->
        <menuitem id="lims_customer_menu" name="Gestión de Clientes" sequence="1"/>

        <!-- ✅ ACCIÓN DE VENTANA PARA CLIENTES (SIN CAMPO 'order') -->
        <record id="action_lims_customers" model="ir.actions.act_window">
            <field name="name">Clientes</field>
            <field name="res_model">lims.customer</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <menuitem id="lims_customers_menu" name="Clientes"
                  parent="lims_customer_menu"
                  action="action_lims_customers"
                  sequence="1"/>

        <!-- ✅ VISTA DE LISTA DE CLIENTES CON ORDENACIÓN CORRECTA -->
        <record id="view_lims_customer_list" model="ir.ui.view">
            <field name="name">lims.customer.list</field>
            <field name="model">lims.customer</field>
            <field name="arch" type="xml">
                <list string="Clientes" default_order="client_code asc">
                    <field name="name" string="Nombre del Cliente"/>
                    <field name="client_code" string="Código del Cliente"/>
                    <field name="rfc" string="RFC"/>
                    <field name="fiscal_address" string="Dirección Fiscal"/>
                </list>
            </field>
        </record>

        <!-- ✅ VISTA FORMULARIO DE CLIENTES -->
        <record id="view_lims_customer_form" model="ir.ui.view">
            <field name="name">lims.customer.form</field>
            <field name="model">lims.customer</field>
            <field name="arch" type="xml">
                <form string="Gestión de Clientes">
                    <sheet>
                        <group>
                            <field name="name" string="Nombre del Cliente" required="1"/>
                            <field name="rfc" string="RFC"/>
                            <field name="client_code" string="Código del Cliente"/>
                            <field name="fiscal_address" string="Dirección Fiscal"/>
                        </group>

                        <!-- Botón para ver sucursales asociadas -->
                        <group>
                            <button name="%(action_lims_branches)d"
                                    string="Ver Sucursales"
                                    type="action"
                                    class="oe_stat_button"
                                    context="{'default_customer_id': id}"
                                    modifiers="{'invisible': [['id', '=', False]]}"/>
                        </group>

                        <!-- Notebook para visualizar las Sucursales -->
                        <notebook modifiers="{'id': [['!=', False]]}">
                            <page string="Sucursales">
                                <field name="branch_ids" context="{'default_customer_id': id}">
                                    <list editable="bottom">
                                        <field name="name" string="Nombre de la Sucursal"/>
                                        <field name="address" string="Dirección"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
