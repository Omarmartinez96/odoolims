<odoo>
    <data>
        <!-- Menú principal para Gestión de Clientes -->
        <menuitem id="lims_customer_menu" name="Gestión de Clientes" sequence="1"/>

        <!-- Acción de ventana para Clientes -->
        <record id="action_lims_customers" model="ir.actions.act_window">
            <field name="name">Clientes</field>
            <field name="res_model">lims.customer</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menú para Clientes -->
        <menuitem id="lims_customers_menu" name="Clientes" parent="lims_customer_menu" action="action_lims_customers" sequence="1"/>

        <!-- Vista de formulario de Clientes -->
        <record id="view_lims_customer_form" model="ir.ui.view">
            <field name="name">lims.customer.form</field>
            <field name="model">lims.customer</field>
            <field name="arch" type="xml">
                <form string="Gestión de Clientes">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="client_code"/>
                            <field name="fiscal_address"/>
                        </group>
                        <!-- Botón para ver Sucursales -->
                        <group>
                            <button name="%(action_lims_branches)d" string="Ver Sucursales" type="action" class="oe_stat_button"/>
                        </group>
                        <notebook>
                            <page string="Sucursales">
                                <field name="branch_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="address"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción de ventana para Sucursales (movida desde lims_branch_views.xml) -->
        <record id="action_lims_branches" model="ir.actions.act_window">
            <field name="name">Sucursales</field>
            <field name="res_model">lims.branch</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menú para Sucursales (movido desde lims_branch_views.xml) -->
        <menuitem id="lims_branches_menu" name="Sucursales" parent="lims_customer_menu" action="action_lims_branches" sequence="2"/>
    </data>
</odoo>
