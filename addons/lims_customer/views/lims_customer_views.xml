<odoo>
    <data>
        <!-- Formulario de Clientes -->
        <record id="view_lims_customer_form" model="ir.ui.view">
            <field name="name">lims.customer.form</field>
            <field name="model">lims.customer</field>
            <field name="arch" type="xml">
                <form string="Gestión de Clientes">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="client_code"/>
                            <field name="fiscal_address"/>
                        </group>
                        <notebook>
                            <!-- Pestaña de Sucursales -->
                            <page string="Sucursales">
                                <field name="branch_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="address"/>
                                    </list>
                                    <form string="Sucursal">
                                        <group>
                                            <field name="name"/>
                                            <field name="address"/>
                                        </group>

                                        <!-- Departamentos dentro de la Sucursal -->
                                        <notebook>
                                            <page string="Departamentos">
                                                <field name="department_ids">
                                                    <list editable="bottom">
                                                        <field name="name"/>
                                                    </list>
                                                    <form string="Departamento">
                                                        <group>
                                                            <field name="name"/>
                                                        </group>

                                                        <!-- Contactos dentro del Departamento -->
                                                        <notebook>
                                                            <page string="Contactos">
                                                                <field name="contact_ids">
                                                                    <list editable="bottom">
                                                                        <field name="name"/>
                                                                        <field name="email"/>
                                                                        <field name="phone"/>
                                                                    </list>
                                                                    <form string="Contacto">
                                                                        <group>
                                                                            <field name="name"/>
                                                                            <field name="email"/>
                                                                            <field name="phone"/>
                                                                        </group>
                                                                    </form>
                                                                </field>
                                                            </page>
                                                        </notebook>
                                                    </form>
                                                </field>
                                            </page>
                                        </notebook>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
