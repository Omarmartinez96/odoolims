<odoo>
    <data>
        <!-- AcciÃ³n de Ventana para Clientes -->
        <record id="action_lims_customers" model="ir.actions.act_window">
            <field name="name">Clientes</field>
            <field name="res_model">lims.customer</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Vista de Lista de Clientes -->
        <record id="view_lims_customer_list" model="ir.ui.view">
            <field name="name">lims.customer.list</field>
            <field name="model">lims.customer</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="client_code"/>
                    <field name="fiscal_address"/>
                </list>
            </field>
        </record>

        <!-- Vista de Formulario para Clientes -->
        <record id="view_lims_customer_form" model="ir.ui.view">
            <field name="name">lims.customer.form</field>
            <field name="model">lims.customer</field>
            <field name="arch" type="xml">
                <form string="GestiÃ³n de Clientes">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="client_code"/>
                            <field name="fiscal_address"/>
                        </group>

                        <group>
                            <button name="%(action_lims_branches)d" string="Ver Sucursales" type="action" class="oe_stat_button"/>
                        </group>

                        <notebook>
                            <page string="Sucursales">
                                <field name="branch_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="address"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
