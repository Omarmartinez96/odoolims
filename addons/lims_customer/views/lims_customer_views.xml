<odoo>
    <data>
        <!-- Vista de Lista para Clientes -->
        <record id="view_lims_customer_list" model="ir.ui.view">
            <field name="name">lims.customer.list</field>
            <field name="model">lims.customer</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="rfc"/>
                    <field name="client_code"/>
                </list>
            </field>
        </record>

        <!-- Vista de Formulario para Clientes -->
        <record id="view_lims_customer_form" model="ir.ui.view">
            <field name="name">lims.customer.form</field>
            <field name="model">lims.customer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="rfc"/>
                            <field name="fiscal_address"/>
                            <field name="client_code"/>
                        </group>
                        <notebook>
                            <page string="Sucursales">
                                <field name="branch_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="address"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
