<odoo>
    <data>
        <!-- ACCIÓN de ventana para Departamentos (filtrada por la Sucursal) -->
        <record id="action_lims_departments" model="ir.actions.act_window">
            <field name="name">Departamentos</field>
            <field name="res_model">lims.department</field>
            <field name="view_mode">list,form</field>
            <!-- Filtra departamentos por 'branch_id' pasado en contexto -->
            <field name="domain">[('branch_id','=', context.get('default_branch_id'))]</field>
        </record>

        <!-- VISTA LISTA de Sucursales -->
        <record id="view_lims_branch_list" model="ir.ui.view">
            <field name="name">lims.branch.list</field>
            <field name="model">lims.branch</field>
            <field name="arch" type="xml">
                <list string="Sucursales">
                    <field name="name"/>
                    <field name="address"/>
                    <field name="customer_id" string="Cliente"/>
                </list>
            </field>
        </record>

        <!-- VISTA FORMULARIO de Sucursales -->
        <record id="view_lims_branch_form" model="ir.ui.view">
            <field name="name">lims.branch.form</field>
            <field name="model">lims.branch</field>
            <field name="arch" type="xml">
                <form string="Sucursal">
                    <sheet>
                        <group>
                            <!-- Campo 'customer_id' para enlazar con Cliente (solo lectura) -->
                            <field name="customer_id" readonly="1" required="1"/>
                            <field name="name" required="1"/>
                            <field name="address"/>
                        </group>
                        <!-- Botón para ver Departamentos: invisible si la Sucursal no está guardada -->
                        <group>
                            <button name="%(action_lims_departments)d"
                                    string="Ver Departamentos"
                                    type="action"
                                    class="oe_stat_button"
                                    context="{'default_branch_id': id}"
                                    modifiers="{'invisible': [['id','=',False]]}"/>
                        </group>

                        <!-- Pestaña de Departamentos: invisible si la Sucursal no está guardada -->
                        <notebook modifiers="{'invisible': [['id','=',False]]}">
                            <page string="Departamentos">
                                <!-- One2many a lims.department -->
                                <field name="department_ids" context="{'default_branch_id': id}">
                                    <list create="true">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
