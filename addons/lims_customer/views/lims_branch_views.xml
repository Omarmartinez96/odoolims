<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Lista para Sucursales -->
    <record id="lims_branch_list_view" model="ir.ui.view">
        <field name="name">lims.branch.list.view</field>
        <field name="model">lims.branch</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="address"/>
            </list>
        </field>
    </record>

    <!-- Vista de Formulario para Sucursales -->
    <record id="lims_branch_form_view" model="ir.ui.view">
        <field name="name">lims.branch.form.view</field>
        <field name="model">lims.branch</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="address"/>
                        <field name="comment"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir la vista de Sucursales -->
    <record id="lims_branch_action" model="ir.actions.act_window">
        <field name="name">Sucursales</field>
        <field name="res_model">lims.branch</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Crea una nueva sucursal</p>
        </field>
    </record>

    <!-- Menú para gestionar Sucursales -->
    <menuitem id="lims_branch_menu" name="Sucursales" parent="base.menu_management" sequence="10"/>
    <menuitem id="lims_branch_submenu" name="Sucursales" parent="lims_branch_menu" action="lims_branch_action"/>
</odoo>
