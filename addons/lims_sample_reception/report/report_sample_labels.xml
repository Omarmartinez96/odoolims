<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="report_sample_label_document">
        <t t-call="web.html_container">
            <t t-call-assets="web.report_assets_common" t-js="false"/>
            <t t-set="company" t-value="env.company"/>

            <style>
                body {
                    margin: 0 !important;
                    padding: 0 !important;
                    font-family: Arial, sans-serif !important;
                }
                
                .article {
                    margin: 0;
                    padding: 0;
                    page-break-after: always;
                }

                .label-container {
                    width: 100% !important;
                    height: 100% !important;
                    margin: 0;
                    padding: 0;
                    display: table;
                    table-layout: auto;
                    background: white;
                }

                .content-row {
                    display: table-row;
                    height: 100%;
                }

                .barcode-section {
                    display: table-cell;
                    width: 40%;
                    vertical-align: middle;
                    text-align: center;
                    padding-right: 1mm;
                    border: none;
                }
                
                .info-section {
                    display: table-cell;
                    width: 65%;
                    vertical-align: middle;
                    text-align: center;
                    border: none;
                }
                
                .sample-code {
                    font-weight: bold;
                    font-size: 24pt;
                    color: #000;
                    font-family: Arial, sans-serif !important;
                    line-height: 1.1;
                    margin-bottom: 2mm;
                    word-wrap: break-word;
                    border: none !important;
                    background: transparent !important;
                    outline: none !important;
                }
                
                .sample-id {
                    font-size: 24pt;
                    color: #333;
                    font-family: Arial, sans-serif !important;
                    line-height: 1.0;
                    word-wrap: break-word;
                    border: none !important;
                    background: transparent !important;
                    outline: none !important;
                }
            </style>

            <div class="page">
                <t t-foreach="docs" t-as="reception">
                    <div class="article" t-att-data-oe-model="reception._name" t-att-data-oe-id="reception.id">
                        <table class="label-container table-borderless">
                            <tr class="content-row">
                                <!-- QR Code (Izquierda) -->
                                <td class="barcode-section">
                                    <div t-field="reception.sample_code" 
                                        t-options="{'widget': 'barcode', 'symbology': 'code128', 'width': 300, 'height': 80, 'img_style': 'width:100%;height:100%;'}"/>
                                </td>
                                
                                <!-- Informaci贸n (Derecha) -->
                                <td class="info-section">
                                    <div class="sample-code">
                                        <span t-esc="reception.sample_code or 'Sin c贸digo'"/>
                                    </div>
                                    <div class="sample-id">
                                        <span t-esc="reception.sample_identifier"/>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="report_sample_labels_mass_document">
