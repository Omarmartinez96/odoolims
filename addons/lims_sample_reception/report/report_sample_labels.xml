<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="report_sample_label_document">
        <t t-call="web.html_container">
            <t t-call-assets="web.report_assets_common" t-js="false"/>
            <t t-set="company" t-value="env.company"/>

            <style>
                body {
                    margin: 0 !important;
                    padding: 0 !important;
                    font-family: Arial, sans-serif !important;
                }
                
                .page {
                    margin: 0;
                    padding: 0;
                }
            
                /* Forzar eliminación de bordes de Odoo */
                .article, .page, .o_report_layout {
                    border: none !important;
                    outline: none !important;
                    box-shadow: none !important;
                }
                /* Eliminar márgenes/padding que causan espacios */
                .label-container {
                    margin: 0 !important;
                    padding: 0 !important;
                    border: none !important;
                    outline: none !important;
                }
                .content-row {
                    display: table-row;
                    height: 83mm;
                }
                
                .qr-section {
                    display: table-cell;
                    width: 12mm;
                    vertical-align: middle;
                    text-align: center;
                    padding-right: 1mm;
                    border: none;
                }
                
                .info-section {
                    display: table-cell;
                    width: 12mm;
                    vertical-align: middle;
                    text-align: center;
                    border: none;
                }
                
                .sample-code {
                    font-weight: bold;
                    font-size: 12px;
                    color: #000;
                    font-family: Arial, sans-serif !important;
                    line-height: 1.1;
                    margin-bottom: 2mm;
                    word-wrap: break-word;
                    border: none !important;
                    background: transparent !important;
                    outline: none !important;
                }
                
                .sample-id {
                    font-size: 11px;
                    color: #333;
                    font-family: Arial, sans-serif !important;
                    line-height: 1.0;
                    word-wrap: break-word;
                    border: none !important;
                    background: transparent !important;
                    outline: none !important;
                }
                
                .qr-image {
                    width: 14mm !important;
                    height: 14mm !important;
                    display: block;
                    margin: 0 auto;
                    border: none;
                }
                
                .no-qr {
                    width: 14mm;
                    height: 14mm;
                    border: 1px solid #ccc;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 5px;
                    margin: 0 auto;
                }
                
                /* Quitar TODOS los bordes posibles */
                table, tr, td, div, span {
                    border: none !important;
                    outline: none !important;
                }
                
                /* Excepción solo para el placeholder del QR */
                .no-qr {
                    border: 1px solid #ccc !important;
                }
            </style>

            <div class="page">
                <t t-foreach="docs" t-as="reception">
                    <div class="article" t-att-data-oe-model="reception._name" t-att-data-oe-id="reception.id">
                        <table class="label-container">
                            <tr class="content-row">
                                <!-- QR Code (Izquierda) -->
                                <td class="qr-section">
                                    <img t-if="reception.qr_code_image" 
                                         t-att-src="'data:image/png;base64,' + reception.qr_code_image.decode('utf-8')" 
                                         class="qr-image"
                                         alt="QR Code"/>
                                    <div t-else="" class="no-qr">Sin QR</div>
                                </td>
                                
                                <!-- Información (Derecha) -->
                                <td class="info-section">
                                    <div class="sample-code">
                                        <span t-esc="reception.sample_code or 'Sin código'"/>
                                    </div>
                                    <div class="sample-id">
                                        <span t-esc="reception.sample_identifier"/>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="report_sample_labels_mass_document">
        <t t-call="web.html_container">
            <t t-call-assets="web.report_assets_common" t-js="false"/>
            <t t-set="company" t-value="env.company"/>

            <style>
                body {
                    margin: 0 !important;
                    padding: 0 !important;
                    font-family: Arial, sans-serif !important;
                }
                
                .page {
                    margin: 0;
                    padding: 0;
                }
                
                .article {
                    margin: 0;
                    padding: 0;
                    page-break-after: always;
                }
                
                .label-container {
                    width: 25mm;
                    height: 85mm;
                    margin: 0;
                    padding: 1mm;
                    display: table;
                    table-layout: fixed;
                    background: white;
                    border: none;
                }
                
                .content-row {
                    display: table-row;
                    height: 83mm;
                }
                
                .qr-section {
                    display: table-cell;
                    width: 12mm;
                    vertical-align: middle;
                    text-align: center;
                    padding-right: 1mm;
                    border: none;
                }
                
                .info-section {
                    display: table-cell;
                    width: 12mm;
                    vertical-align: middle;
                    text-align: center;
                    border: none;
                }
                
                .sample-code {
                    font-weight: bold;
                    font-size: 12px;
                    color: #000;
                    font-family: Arial, sans-serif !important;
                    line-height: 1.1;
                    margin-bottom: 2mm;
                    word-wrap: break-word;
                    border: none !important;
                    background: transparent !important;
                    outline: none !important;
                }
                
                .sample-id {
                    font-size: 11px;
                    color: #333;
                    font-family: Arial, sans-serif !important;
                    line-height: 1.0;
                    word-wrap: break-word;
                    border: none !important;
                    background: transparent !important;
                    outline: none !important;
                }
                
                .qr-image {
                    width: 14mm !important;
                    height: 14mm !important;
                    display: block;
                    margin: 0 auto;
                    border: none;
                }
                
                .no-qr {
                    width: 14mm;
                    height: 14mm;
                    border: 1px solid #ccc;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 5px;
                    margin: 0 auto;
                }
                
                /* Quitar TODOS los bordes posibles */
                table, tr, td, div, span {
                    border: none !important;
                    outline: none !important;
                }
                
                /* Excepción solo para el placeholder del QR */
                .no-qr {
                    border: 1px solid #ccc !important;
                }
            </style>

            <div class="page">
                <t t-foreach="docs" t-as="custody_chain">
                    <t t-foreach="custody_chain.sample_ids" t-as="sample">
                        <t t-set="reception" t-value="env['lims.sample.reception'].search([('sample_id', '=', sample.id)], limit=1)"/>
                        <t t-if="reception and reception.sample_code and reception.sample_code != '/'">
                            <div class="article" t-att-data-oe-model="custody_chain._name" t-att-data-oe-id="custody_chain.id">
                                <table class="label-container">
                                    <tr class="content-row">
                                        <!-- QR Code (Izquierda) -->
                                        <td class="qr-section">
                                            <img t-if="reception and reception.qr_code_image" 
                                                 t-att-src="'data:image/png;base64,' + reception.qr_code_image.decode('utf-8')" 
                                                 class="qr-image"
                                                 alt="QR Code"/>
                                            <div t-else="" class="no-qr">Sin QR</div>
                                        </td>
                                        
                                        <!-- Información (Derecha) -->
                                        <td class="info-section">
                                            <div class="sample-code">
                                                <span t-esc="reception.sample_code or 'Sin código'"/>
                                            </div>
                                            <div class="sample-id">
                                                <span t-esc="sample.sample_identifier"/>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </t>
                    </t>
                </t>
            </div>
        </t>
    </template>

</odoo>