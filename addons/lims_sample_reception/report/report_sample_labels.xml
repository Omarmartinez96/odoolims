<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="report_sample_label_document">
        <t t-call="web.html_container">
            <t t-call-assets="web.report_assets_common" t-js="false"/>
            <t t-set="company" t-value="env.company"/>

            <style>
                body {
                    margin: 0 !important;
                    padding: 0 !important;
                    font-family: Arial, sans-serif !important;
                }
                
                .article {
                    margin: 0;
                    padding: 0;
                    page-break-after: always;
                }

                .label-container {
                    width: 100% !important;
                    height: 100% !important;
                    margin: 0;
                    padding: 0;
                    display: table;
                    table-layout: auto;
                    background: white;
                }

                .content-row {
                    display: table-row;
                    height: 100%;
                }
            </style>

            <div class="page">
                <t t-foreach="docs" t-as="reception">
                    <div class="article" t-att-data-oe-model="reception._name" t-att-data-oe-id="reception.id">
                        <table class="label-container table-borderless">
                            <tr class="content-row">
                                <!-- Código de Barras (Izquierda) -->
                                <td style="display: table-cell; width: 40%; vertical-align: middle; text-align: center; padding-right: 1mm; border: none;">
                                    <div t-field="reception.sample_code" 
                                         t-options="{'widget': 'barcode', 'symbology': 'auto', 'width': 400, 'height': 150}"/>
                                </td>
                                
                                <!-- Información (Derecha) -->
                                <td style="display: table-cell; width: 60%; vertical-align: middle; text-align: center; border: none;">
                                    <div style="font-weight: bold; font-size: 32px; color: #000; font-family: Arial, sans-serif; line-height: 1.1; margin-bottom: 2mm; text-align: center;">
                                        <span t-esc="reception.sample_code or 'Sin código'"/>
                                    </div>
                                    <div style="font-size: 28px; color: #333; font-family: Arial, sans-serif; line-height: 1.0; text-align: center;">
                                        <span t-esc="reception.sample_identifier"/>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="report_sample_labels_mass_document">
        <t t-call="web.html_container">
            <t t-call-assets="web.report_assets_common" t-js="false"/>
            <t t-set="company" t-value="env.company"/>

            <style>
                body {
                    margin: 0 !important;
                    padding: 0 !important;
                    font-family: Arial, sans-serif !important;
                }
                
                .article {
                    margin: 0;
                    padding: 0;
                    page-break-after: always;
                }
                
                .label-container {
                    width: 100% !important;
                    height: 100% !important;
                    margin: 0;
                    padding: 0;
                    display: table;
                    table-layout: auto;
                    background: white;
                }

                .content-row {
                    display: table-row;
                    height: 100%;
                }
            </style>

            <div class="page">
                <t t-foreach="docs" t-as="custody_chain">
                    <t t-foreach="custody_chain.sample_ids" t-as="sample">
                        <t t-set="reception" t-value="env['lims.sample.reception'].search([('sample_id', '=', sample.id)], limit=1)"/>
                        <t t-if="reception and reception.sample_code and reception.sample_code != '/'">
                            <div class="article" t-att-data-oe-model="custody_chain._name" t-att-data-oe-id="custody_chain.id">
                                <table class="label-container table-borderless">
                                    <tr class="content-row">
                                        <!-- Código de Barras (Izquierda) -->
                                        <td style="display: table-cell; width: 35%; vertical-align: middle; text-align: center; padding-right: 1mm; border: none;">
                                            <div t-field="reception.sample_code" 
                                                 t-options="{'widget': 'barcode', 'symbology': 'auto', 'width': 400, 'height': 150}"/>
                                        </td>
                                        
                                        <!-- Información (Derecha) -->
                                        <td style="display: table-cell; width: 65%; vertical-align: middle; text-align: center; border: none;">
                                            <div style="font-weight: bold; font-size: 32px; color: #000; font-family: Arial, sans-serif; line-height: 1.1; margin-bottom: 2mm; text-align: center;">
                                                <span t-esc="reception.sample_code or 'Sin código'"/>
                                            </div>
                                            <div style="font-size: 28px; color: #333; font-family: Arial, sans-serif; line-height: 1.0; text-align: center;">
                                                <span t-esc="sample.sample_identifier"/>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </t>
                    </t>
                </t>
            </div>
        </t>
    </template>

</odoo>