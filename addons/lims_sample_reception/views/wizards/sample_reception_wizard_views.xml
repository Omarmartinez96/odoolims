<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <!-- Vista del Wizard de Recepci贸n -->
        <record id="view_sample_reception_wizard_form" model="ir.ui.view">
            <field name="name">lims.sample.reception.wizard.form</field>
            <field name="model">lims.sample.reception.wizard</field>
            <field name="arch" type="xml">
                <form string="Procesamiento de Muestras">
                    
                    <!-- T铆tulo principal -->
                    <div class="alert alert-info" role="alert" style="margin-bottom: 20px;">
                        <h4><i class="fa fa-check-circle"/> Procesamiento de Muestras</h4>
                        <p>Revise y ajuste los c贸digos de muestra, luego seleccione el estado final.</p>
                    </div>

                    <!-- Campos ocultos -->
                    <group>
                        <field name="reception_mode" invisible="1"/>
                        <field name="sample_id" invisible="1"/>
                        <field name="sample_ids" invisible="1"/>
                        <field name="edit_mode" invisible="1"/>
                        <field name="reception_id" invisible="1"/>
                    </group>

                    <!-- Tabla de muestras -->
                    <group string="Muestras a Procesar">
                        <field name="sample_lines" nolabel="1">
                            <list string="Muestras" editable="bottom">
                                <field name="sample_id" column_invisible="1"/>
                                <field name="sample_identifier" readonly="1"/>
                                <field name="custody_chain_code" readonly="1" string="CC"/>
                                <field name="suggested_code" readonly="1" string="Sugerido"/>
                                <field name="sample_code" placeholder="Se asigna autom谩ticamente si es 'Recibida'" optional="show"/>
                            </list>
                        </field>
                    </group>

                    <!-- SELECCIN DE ESTADO -->
                    <group string="Estado Final de las Muestras">
                        <field name="reception_state" required="1" 
                               help="Seleccione el estado final que tendr谩n las muestras"/>
                    </group>

                    <!-- TEXTO DE CONFIRMACIN -->
                    <field name="confirmation_text" nolabel="1" readonly="1"/>

                    <!-- Informaci贸n de Procesamiento -->
                    <group string="Informaci贸n de Procesamiento">
                        <group>
                            <field name="reception_date"/>
                            <field name="reception_time" placeholder="14:30"/>
                        </group>
                    </group>

                    <!-- Observaciones generales -->
                    <group string="Observaciones" invisible="reception_state == 'rechazada'">
                        <field name="reception_notes" nolabel="1" 
                               placeholder="Observaciones generales sobre el procesamiento..."/>
                    </group>

                    <!-- Motivo de rechazo -->
                    <group string="Motivo de Rechazo" invisible="reception_state != 'rechazada'">
                        <field name="rejection_reason" nolabel="1" 
                               placeholder="Especifique detalladamente por qu茅 se rechaza la muestra..."
                               required="reception_state == 'rechazada'"/>
                    </group>

                    <footer>
                        <!-- Bot贸n para asignar responsable -->
                        <button name="action_assign_analyst_from_wizard" 
                                type="object" 
                                string=" Asignar Responsable" 
                                class="btn-warning"
                                help="Seleccionar responsable con verificaci贸n PIN"/>
                        
                        <button name="action_confirm_reception" 
                                type="object" 
                                string="Finalizar" 
                                class="btn-primary"/>
                        <button string="Cancelar" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>