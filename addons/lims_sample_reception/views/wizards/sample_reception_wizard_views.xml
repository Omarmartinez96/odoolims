<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <!-- Vista del Wizard de Recepción -->
        <record id="view_sample_reception_wizard_form" model="ir.ui.view">
            <field name="name">lims.sample.reception.wizard.form</field>
            <field name="model">lims.sample.reception.wizard</field>
            <field name="arch" type="xml">
                <form string="Procesamiento de Muestras">
                    
                    <!-- Título principal -->
                    <div class="alert alert-info" role="alert" style="margin-bottom: 20px;">
                        <h4 t-if="edit_mode"><i class="fa fa-edit"/> Editar Recepción de Muestra</h4>
                        <h4 t-else=""><i class="fa fa-check-circle"/> Procesamiento de Muestras</h4>
                        <p t-if="edit_mode">Modifique los datos de la recepción existente.</p>
                        <p t-else="">Revise y ajuste los códigos de muestra, luego seleccione el estado final.</p>
                    </div>

                    <!-- Campos ocultos -->
                    <group>
                        <field name="reception_mode" invisible="1"/>
                        <field name="sample_id" invisible="1"/>
                        <field name="sample_ids" invisible="1"/>
                        <field name="edit_mode" invisible="1"/>
                        <field name="reception_id" invisible="1"/>
                    </group>

                    <!-- Tabla de muestras con códigos editables -->
                    <group string="Muestras a Procesar">
                        <field name="sample_lines" nolabel="1">
                            <list string="Muestras" editable="bottom">
                                <field name="sample_id" column_invisible="1"/>  <!-- Campo oculto pero presente -->
                                <field name="sample_identifier" readonly="1"/>
                                <field name="suggested_code" readonly="1" string="Sugerido"/>
                                <field name="sample_code" required="1"/>
                            </list>
                        </field>
                    </group>

                    <!-- SELECCIÓN DE ESTADO CON DROPDOWN -->
                    <group string="Estado Final de las Muestras">
                        <field name="reception_state" required="1" 
                               help="Seleccione el estado final que tendrán las muestras"/>
                    </group>

                    <!-- TEXTO DE CONFIRMACIÓN DINÁMICO -->
                    <field name="confirmation_text" nolabel="1" readonly="1"/>

                    <!-- Datos de recepción -->
                    <group string="Información de Procesamiento">
                        <group>
                            <field name="reception_date"/>
                            <field name="reception_time" placeholder="14:30"/>
                        </group>
                        <group>
                            <field name="received_by_initials" placeholder="ABC"/>
                        </group>
                    </group>

                    <!-- Observaciones generales (para recibida y no_recibida) -->
                    <group string="Observaciones" 
                           invisible="reception_state == 'rechazada'">
                        <field name="reception_notes" nolabel="1" 
                               placeholder="Observaciones generales sobre el procesamiento..."/>
                    </group>

                    <!-- Motivo de rechazo (solo para rechazada) -->
                    <group string="Motivo de Rechazo" 
                           invisible="reception_state != 'rechazada'">
                        <field name="rejection_reason" nolabel="1" 
                               placeholder="Especifique detalladamente por qué se rechaza la muestra..."
                               required="reception_state == 'rechazada'"/>
                    </group>

                    <footer>
                        <button name="action_confirm_reception" 
                                type="object" 
                                string="Finalizar" 
                                class="btn-primary"/>
                        <button string="Cancelar" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>