<!-- SELECCIÓN DE ESTADO CON DROPDOWN -->
<group string="Estado Final de las Muestras">
    <field name="reception_state" required="1" 
           help="Seleccione el estado final que tendrán las muestras"/>
</group>

<!-- TEXTO DE CONFIRMACIÓN DINÁMICO -->
<field name="confirmation_text" nolabel="1" readonly="1"/>

<!-- Datos de recepción -->
<group string="Información de Procesamiento">
    <group>
        <field name="reception_date"/>
        <field name="reception_time" placeholder="14:30"/>
    </group>
    <group>
        <field name="received_by_initials" placeholder="ABC"/>
    </group>
</group>

<!-- Observaciones generales (para recibida y no_recibida) -->
<group string="Observaciones" 
       invisible="reception_state == 'rechazada'">
    <field name="reception_notes" nolabel="1" 
           placeholder="Observaciones generales sobre el procesamiento..."/>
</group>

<!-- Motivo de rechazo (solo para rechazada) -->
<group string="Motivo de Rechazo" 
       invisible="reception_state != 'rechazada'">
    <field name="rejection_reason" nolabel="1" 
           placeholder="Especifique detalladamente por qué se rechaza la muestra..."
           required="reception_state == 'rechazada'"/>
</group>

<footer>
    <button name="action_confirm_reception" 
            type="object" 
            string="Finalizar" 
            class="btn-primary"/>
    <button string="Cancelar" 
            class="btn-secondary" 
            special="cancel"/>
</footer>