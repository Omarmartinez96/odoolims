<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <!-- Vista Lista de Recepciones -->
        <record id="view_sample_reception_list" model="ir.ui.view">
            <field name="name">lims.sample.reception.list</field>
            <field name="model">lims.sample.reception</field>
            <field name="arch" type="xml">
                <list string="Recepciones de Muestras">
                    <field name="sample_code"/>
                    <field name="sample_identifier"/>
                    <field name="cliente_id"/>
                    <field name="reception_date"/>
                    <field name="reception_time"/>
                    <field name="reception_state"/>
                    <field name="received_by"/>
                </list>
            </field>
        </record>

        <!-- Vista Formulario de Recepci√≥n -->
        <record id="view_sample_reception_form" model="ir.ui.view">
            <field name="name">lims.sample.reception.form</field>
            <field name="model">lims.sample.reception</field>
            <field name="arch" type="xml">
                <form string="Recepci√≥n de Muestra">
                    <header>
                        <field name="reception_state" widget="statusbar" statusbar_visible="no_recibida,rechazada,recibida"/>               
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="sample_code" placeholder="Se genera autom√°ticamente"/>
                            </h1>
                        </div>

                        <!-- Informaci√≥n b√°sica -->
                        <group>
                            <group string="üß™ Informaci√≥n de la Muestra">
                                <field name="sample_id" invisible="1"/>
                                <field name="sample_identifier" readonly="1"/>
                                <field name="custody_chain_id" readonly="1"/>
                                <field name="cliente_id" readonly="1"/>
                            </group>
                            <group string="üìÖ Datos de Recepci√≥n">
                                <field name="reception_date"/>
                                <field name="reception_time" placeholder="14:30"/>
                                <field name="received_by"/>
                                <field name="can_change_state" invisible="1"/>
                            </group>
                        </group>
                        <group string="üìä Estado de Recepci√≥n">
                            <field name="reception_state" widget="radio" 
                                invisible="can_change_state == False"/>
                            <div invisible="can_change_state == True">
                                <span style="color: orange;">‚ö†Ô∏è Responda TODOS los puntos del checklist para cambiar el estado</span>
                            </div>
                        </group>

                        <!-- Checklist de Recepci√≥n -->
                        <group string="‚úÖ Checklist de Recepci√≥n">
                            
                            <!-- Condiciones -->
                            <field name="check_conditions" widget="radio"/>
                            <field name="conditions_notes" 
                                placeholder="Especifique el problema..."
                                invisible="check_conditions != 'no'"/>
                            <field name="can_process_conditions" 
                                invisible="check_conditions != 'no'"/>
                            
                            <!-- Temperatura -->
                            <field name="check_temperature" widget="radio"/>
                            <field name="temperature_notes" 
                                placeholder="Especifique el problema..."
                                invisible="check_temperature != 'no'"/>
                            <field name="can_process_temperature" 
                                invisible="check_temperature != 'no'"/>
                            
                            <!-- Recipiente -->
                            <field name="check_container" widget="radio"/>
                            <field name="container_notes" 
                                placeholder="Especifique el problema..."
                                invisible="check_container != 'no'"/>
                            <field name="can_process_container" 
                                invisible="check_container != 'no'"/>
                            
                            <!-- Volumen -->
                            <field name="check_volume" widget="radio"/>
                            <field name="volume_notes" 
                                placeholder="Especifique el problema..."
                                invisible="check_volume != 'no'"/>
                            <field name="can_process_volume" 
                                invisible="check_volume != 'no'"/>
                            
                            <!-- Preservaci√≥n -->
                            <field name="check_preservation" widget="radio"/>
                            <field name="preservation_notes" 
                                placeholder="Especifique el problema..."
                                invisible="check_preservation != 'no'"/>
                            <field name="can_process_preservation" 
                                invisible="check_preservation != 'no'"/>
                            
                        </group>

                        <!-- Observaciones -->
                        <group string="üìù Observaciones">
                            <field name="reception_notes" nolabel="1" 
                                placeholder="Observaciones generales sobre la recepci√≥n (visible para el cliente)..."/>
                        </group>

                        <group string="üîí Observaciones Internas">
                            <field name="internal_reception_notes" nolabel="1" 
                                placeholder="Notas internas del laboratorio (solo para uso interno)..."/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acci√≥n principal -->
        <record id="action_sample_receptions" model="ir.actions.act_window">
            <field name="name">Recepciones de Muestras</field>
            <field name="res_model">lims.sample.reception</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay recepciones registradas
                </p>
                <p>
                    Las recepciones se crean desde las cadenas de custodia
                </p>
            </field>
        </record>

    </data>
</odoo>