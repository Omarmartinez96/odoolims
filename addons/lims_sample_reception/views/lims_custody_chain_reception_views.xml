<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Vista especializada para recepción -->
        <record id="view_custody_chain_reception_list" model="ir.ui.view">
            <field name="name">lims.custody_chain.reception.list</field>
            <field name="model">lims.custody_chain</field>
            <field name="arch" type="xml">
                <list string="Cadenas de Custodia - Recepción" create="false" edit="false">
                    <field name="custody_chain_code"/>
                    <field name="cliente_id"/>
                    <field name="date_chainofcustody"/>
                    <field name="client_code"/>
                    <field name="chain_of_custody_state"/>
                    
                    <!-- Campos de estadísticas de recepción -->
                    <field name="samples_total"/>
                    <field name="samples_received" decoration-success="samples_received > 0"/>
                    <field name="samples_rejected" decoration-danger="samples_rejected > 0"/>
                    <field name="samples_pending" decoration-warning="samples_pending > 0"/>
                    
                    <!-- Estado general computado -->
                    <field name="reception_status_display" 
                           decoration-success="reception_status_display == 'Completo'" 
                           decoration-warning="reception_status_display == 'En Proceso'" 
                           decoration-muted="reception_status_display == 'Sin Procesar'"/>
                </list>
            </field>
        </record>

        <!-- Vista formulario especializada para recepción -->
        <record id="view_custody_chain_reception_form" model="ir.ui.view">
            <field name="name">lims.custody_chain.reception.form</field>
            <field name="model">lims.custody_chain</field>
            <field name="arch" type="xml">
                <form string="Cadena de Custodia - Recepción" create="false" edit="false">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="custody_chain_code" readonly="1"/>
                            </h1>
                        </div>

                        <!-- Información básica (solo lectura) -->
                        <group>
                            <group string="Información del Cliente">
                                <field name="cliente_id" readonly="1"/>
                                <field name="sucursal_id" readonly="1"/>
                                <field name="departamento_id" readonly="1"/>
                            </group>
                            <group string="Información de la Cadena">
                                <field name="chain_of_custody_state" readonly="1"/>
                                <field name="client_code" readonly="1"/>
                            </group>
                        </group>

                        <!-- Panel de Control de Recepción -->
                        <div class="alert alert-info" style="margin: 15px 0;">
                            <div class="row">
                                <div class="col-3 text-center">
                                    <div style="font-size: 24px; font-weight: bold; color: #17a2b8;">
                                        <field name="samples_total"/>
                                    </div>
                                    <small>Total Muestras</small>
                                </div>
                                <div class="col-3 text-center">
                                    <div style="font-size: 24px; font-weight: bold; color: #28a745;">
                                        <field name="samples_received"/>
                                    </div>
                                    <small>Recibidas</small>
                                </div>
                                <div class="col-3 text-center">
                                    <div style="font-size: 24px; font-weight: bold; color: #dc3545;">
                                        <field name="samples_rejected"/>
                                    </div>
                                    <small>Rechazadas</small>
                                </div>
                                <div class="col-3 text-center">
                                    <div style="font-size: 24px; font-weight: bold; color: #ffc107;">
                                        <field name="samples_pending"/>
                                    </div>
                                    <small>Pendientes</small>
                                </div>
                            </div>
                        </div>

                        <!-- Botones de acción superiores -->
                        <div style="margin-bottom: 15px;">
                            <button name="action_mass_reception_wizard" 
                                    type="object" 
                                    string="Recibir Todas las Muestras" 
                                    class="btn-success" 
                                    title="Recibir todas las muestras de esta cadena"/>
                            
                            <button name="action_samples_reception_multiselect" 
                                    type="object" 
                                    string="Selección Múltiple" 
                                    class="btn-warning" 
                                    title="Abrir vista para seleccionar muestras específicas"/>
                        </div>

                        <!-- Lista de muestras -->
                        <group string="Muestras para Recepción">
                            <field name="sample_ids" nolabel="1">
                                <list string="Muestras" create="false" edit="false">
                                    <field name="sample_identifier"/>
                                    <field name="sample_description"/>
                                    <field name="sample_type_id"/>
                                    <field name="sample_reception_state" 
                                           decoration-success="sample_reception_state == 'Recibida'" 
                                           decoration-danger="sample_reception_state == 'Rechazada'" 
                                           decoration-warning="sample_reception_state == 'No Recibida' or sample_reception_state == 'No recibida'"/>
                                    <button name="action_individual_reception_wizard" 
                                            type="object" 
                                            string="Recibir" 
                                            class="btn-primary" 
                                            title="Recibir esta muestra individual"/>
                                </list>
                            </field>
                        </group>

                        <!-- Botones de acción inferiores -->
                        <div style="margin-top: 20px;">
                            <div class="oe_button_box" style="display: flex; gap: 10px; justify-content: center;">
                                
                                <!-- Botón Informe de Recepción -->
                                <button name="%(action_report_sample_reception)d" 
                                        type="action" 
                                        string="Informe de Recepción" 
                                        class="btn-info" 
                                        title="Generar informe de recepción de muestras"/>

                                <!-- Botón Enviar por Email -->
                                <button name="action_send_reception_report_email" 
                                        type="object" 
                                        string="Enviar Informe" 
                                        class="btn-primary" 
                                        title="Enviar informe de recepción por correo electrónico"/>

                            </div>
                        </div>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista lista especializada para selección múltiple -->
        <record id="view_samples_reception_list" model="ir.ui.view">
            <field name="name">lims.sample.reception.list</field>
            <field name="model">lims.sample</field>
            <field name="arch" type="xml">
                <list string="Muestras para Recepción" create="false" edit="false">
                    <field name="custody_chain_id"/>
                    <field name="sample_identifier"/>
                    <field name="sample_description"/>
                    <field name="sample_type_id"/>
                    <field name="sample_reception_state"
                           decoration-success="sample_reception_state == 'Recibida'"
                           decoration-danger="sample_reception_state == 'Rechazada'"
                           decoration-warning="sample_reception_state == 'No Recibida' or sample_reception_state == 'No recibida'"/>
                    <button name="action_individual_reception_wizard"
                            type="object"
                            string="Recibir"
                            class="btn-primary"
                            title="Recibir esta muestra individual"/>
                </list>
            </field>
        </record>

        <!-- Acción para reporte masivo -->
        <record id="action_mass_reception_report" model="ir.actions.server">
            <field name="name">Generar Informe Consolidado</field>
            <field name="model_id" ref="model_lims_custody_chain"/>
            <field name="binding_model_id" ref="model_lims_custody_chain"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
               action = env.ref('lims_sample_reception.action_report_mass_reception').report_action(records)
            </field>
        </record>

        <!-- Acción para cadenas de custodia en recepción -->
        <record id="action_custody_chains_reception" model="ir.actions.act_window">
            <field name="name">Cadenas de Custodia</field>
            <field name="res_model">lims.custody_chain</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_custody_chain_reception_list"/>
            <field name="domain">[('chain_of_custody_state', 'in', ['in_progress', 'done'])]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay cadenas de custodia para recepción
                </p>
                <p>
                    Aquí aparecerán las cadenas de custodia listas para recibir muestras
                </p>
            </field>
        </record>

        <!-- Acción para muestras con selección múltiple -->
        <record id="action_samples_reception_multiselect" model="ir.actions.act_window">
            <field name="name">Muestras - Selección Múltiple</field>
            <field name="res_model">lims.sample</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="view_samples_reception_list"/>
            <field name="domain">[('custody_chain_id.chain_of_custody_state', 'in', ['in_progress', 'done'])]</field>
            <field name="context">{
                'search_default_group_by_custody_chain': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay muestras para recepción
                </p>
                <p>
                    Aquí puedes seleccionar múltiples muestras para recepción masiva
                </p>
            </field>
        </record>

        <!-- Menú principal del módulo -->
        <menuitem id="lims_sample_reception_menu_root" 
                  name="Recepción de Muestras" 
                  sequence="3"/>

        <!-- Submenú para cadenas de custodia -->
        <menuitem id="menu_custody_chains_reception"
                  name="Cadenas de Custodia"
                  parent="lims_sample_reception_menu_root"
                  action="action_custody_chains_reception"
                  sequence="10"/>

        <!-- Submenú para muestras individuales -->
        <menuitem id="menu_samples_reception"
                  name="Muestras (Selección Múltiple)"
                  parent="lims_sample_reception_menu_root"
                  action="action_samples_reception_multiselect"
                  sequence="20"/>

    </data>
</odoo>