<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Vista especializada para recepci√≥n -->
        <record id="view_custody_chain_reception_list" model="ir.ui.view">
            <field name="name">lims.custody_chain.reception.list</field>
            <field name="model">lims.custody_chain</field>
            <field name="arch" type="xml">
                <list string="Cadenas de Custodia - Recepci√≥n">
                    <field name="custody_chain_code"/>
                    <field name="cliente_id"/>
                    <field name="sucursal_id"/>
                    <field name="departamento_id"/>
                    <field name="chain_of_custody_state"/>
                    <field name="date_created"/>
                </list>
            </field>
        </record>

        <!-- Acci√≥n para reporte masivo -->
        <record id="action_mass_reception_report" model="ir.actions.server">
            <field name="name">Generar Informe Consolidado</field>
            <field name="model_id" ref="model_lims_custody_chain"/>
            <field name="binding_model_id" ref="model_lims_custody_chain"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
               action = env.ref('lims_sample_reception.action_report_mass_reception').report_action(records)
            </field>
        </record>

        <!-- Vista formulario especializada para recepci√≥n -->
        <record id="view_custody_chain_reception_form" model="ir.ui.view">
            <field name="name">lims.custody_chain.reception.form</field>
            <field name="model">lims.custody_chain</field>
            <field name="arch" type="xml">
                <form string="Cadena de Custodia - Recepci√≥n" create="false" edit="false">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="custody_chain_code" readonly="1"/>
                            </h1>
                        </div>

                        <!-- Informaci√≥n b√°sica (solo lectura) -->
                        <group>
                            <group string="üìã Informaci√≥n del Cliente">
                                <field name="cliente_id" readonly="1"/>
                                <field name="sucursal_id" readonly="1"/>
                                <field name="departamento_id" readonly="1"/>
                            </group>
                            <group string="üìÖ Informaci√≥n de la Cadena">
                                <field name="date_created" readonly="1"/>
                                <field name="chain_of_custody_state" readonly="1"/>
                                <field name="client_code" readonly="1"/>
                            </group>
                        </group>

                        <!-- Panel de Control de Recepci√≥n -->
                        <div class="alert alert-info" style="margin: 15px 0;">
                            <div class="row">
                                <div class="col-3 text-center">
                                    <div style="font-size: 24px; font-weight: bold; color: #17a2b8;">
                                        <field name="samples_total"/>
                                    </div>
                                    <small>Total Muestras</small>
                                </div>
                                <div class="col-3 text-center">
                                    <div style="font-size: 24px; font-weight: bold; color: #28a745;">
                                        <field name="samples_received"/>
                                    </div>
                                    <small>‚úÖ Recibidas</small>
                                </div>
                                <div class="col-3 text-center">
                                    <div style="font-size: 24px; font-weight: bold; color: #dc3545;">
                                        <field name="samples_rejected"/>
                                    </div>
                                    <small>‚ùå Rechazadas</small>
                                </div>
                                <div class="col-3 text-center">
                                    <div style="font-size: 24px; font-weight: bold; color: #ffc107;">
                                        <field name="samples_pending"/>
                                    </div>
                                    <small>‚è≥ Pendientes</small>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-12 text-center">
                                    <strong>Progreso de Recepci√≥n: </strong>
                                    <field name="reception_progress" widget="percentage"/>
                                </div>
                            </div>
                        </div>

                        <!-- Lista de muestras con acceso a recepci√≥n -->
                        <notebook>
                            <page string="Muestras para Recepci√≥n">
                                <field name="sample_ids" readonly="1">
                                    <list string="Muestras" create="false" edit="false">
                                        <field name="sample_identifier"/>
                                        <field name="sample_description"/>
                                        <field name="sample_type_id"/>
                                        <field name="sample_reception_state"/>
                                        <button name="action_create_reception"
                                                type="object"
                                                string="üì• Recibir"
                                                class="btn-primary"
                                                title="Crear o abrir recepci√≥n"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>

                        <!-- Botones de acci√≥n -->
                        <div style="margin-top: 20px;">
                            <div class="oe_button_box" style="display: flex; gap: 10px; justify-content: center;">
                                
                                <!-- Bot√≥n Informe de Recepci√≥n -->
                                <button name="%(action_report_sample_reception)d"
                                        type="action"
                                        string="üìÑ Informe de Recepci√≥n"
                                        class="btn-info"
                                        title="Generar informe de recepci√≥n de muestras"/>

                                <!-- Bot√≥n Enviar por Email -->
                                <button name="action_send_reception_report_email"
                                        type="object"
                                        string="üìß Enviar Informe"
                                        class="btn-primary"
                                        title="Enviar informe de recepci√≥n por correo electr√≥nico"/>

                            </div>
                        </div>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acci√≥n para cadenas de custodia en recepci√≥n -->
        <record id="action_custody_chains_reception" model="ir.actions.act_window">
            <field name="name">Cadenas de Custodia</field>
            <field name="res_model">lims.custody_chain</field>
            <field name="view_mode">list,form</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_custody_chain_reception_list')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_custody_chain_reception_form')})
            ]"/>
            <field name="domain">[('chain_of_custody_state', 'in', ['in_progress', 'done'])]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay cadenas de custodia para recepci√≥n
                </p>
                <p>
                    Aqu√≠ aparecer√°n las cadenas de custodia listas para recibir muestras
                </p>
            </field>
        </record>

        <!-- Men√∫ principal del m√≥dulo -->
        <menuitem id="lims_sample_reception_menu_root" 
                  name="Recepci√≥n de Muestras" 
                  sequence="15"/>

        <!-- Submen√∫ para cadenas de custodia -->
        <menuitem id="menu_custody_chains_reception"
                  name="Cadenas de Custodia"
                  parent="lims_sample_reception_menu_root"
                  action="action_custody_chains_reception"
                  sequence="10"/>

        <!-- Submen√∫ para recepciones -->
        <menuitem id="menu_sample_receptions"
                  name="Recepciones"
                  parent="lims_sample_reception_menu_root"
                  action="action_sample_receptions"
                  sequence="20"/>

    </data>
</odoo>