<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Search View para Cadenas de Custodia (SIMPLIFICADO) -->
        <record id="view_custody_chain_reception_search" model="ir.ui.view">
            <field name="name">lims.custody_chain.reception.search</field>
            <field name="model">lims.custody_chain</field>
            <field name="arch" type="xml">
                <search string="Buscar Cadenas de Custodia">
                    <!-- Campos de búsqueda expandidos -->
                    <field name="custody_chain_code" string="Código de Cadena"/>
                    <field name="cliente_id" string="Cliente"/>
                    <field name="client_code" string="Código Cliente"/>
                    <field name="date_chainofcustody" string="Fecha"/>
                    <field name="sucursal_id" string="Sucursal"/>
                    <field name="departamento_id" string="Departamento"/>
                    <field name="chain_of_custody_state" string="Estado CC"/>
                    
                    <!-- Búsqueda por campos de muestras relacionadas -->
                    <field name="sample_ids" string="Identificación Muestra" 
                        filter_domain="[('sample_ids.sample_identifier', 'ilike', self)]"/>
                    <field name="sample_ids" string="Código Muestra" 
                        filter_domain="[('sample_ids.sample_code', 'ilike', self)]"/>
                    <field name="sample_ids" string="Descripción Muestra" 
                        filter_domain="[('sample_ids.sample_description', 'ilike', self)]"/>
                    
                    <!-- Filtros predefinidos -->
                    <separator/>
                    <filter name="filter_finalizadas" string="Finalizadas" 
                            domain="[('chain_of_custody_state', '=', 'done')]"/>
                    <filter name="filter_en_proceso" string="En Proceso" 
                            domain="[('chain_of_custody_state', '=', 'in_progress')]"/>
                    
                    <!-- Filtros de fecha (SIMPLIFICADOS) -->
                    <filter name="filter_ultimos_7_dias" string="Últimos 7 días" 
                            domain="[('date_chainofcustody', '&gt;=', (datetime.datetime.now() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    <filter name="filter_ultimos_30_dias" string="Últimos 30 días" 
                            domain="[('date_chainofcustody', '&gt;=', (datetime.datetime.now() - datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                    
                    <!-- Filtros de estado de recepción -->
                    <separator/>
                    <filter name="filter_recepcion_completa" string="Recepción Completa" 
                            domain="[('reception_status_display', '=', 'Completo')]"/>
                    <filter name="filter_recepcion_proceso" string="En Proceso Recepción" 
                            domain="[('reception_status_display', '=', 'En Proceso')]"/>
                    <filter name="filter_sin_procesar" string="Sin Procesar" 
                            domain="[('reception_status_display', '=', 'Sin Procesar')]"/>
                    
                    <!-- Agrupaciones -->
                    <group expand="0" string="Agrupar Por">
                        <filter name="group_by_cliente" string="Cliente" 
                                context="{'group_by': 'cliente_id'}"/>
                        <filter name="group_by_fecha" string="Fecha" 
                                context="{'group_by': 'date_chainofcustody'}"/>
                        <filter name="group_by_estado" string="Estado CC" 
                                context="{'group_by': 'chain_of_custody_state'}"/>
                        <filter name="group_by_recepcion" string="Estado Recepción" 
                                context="{'group_by': 'reception_status_display'}"/>
                        <filter name="group_by_sucursal" string="Sucursal" 
                                context="{'group_by': 'sucursal_id'}"/>
                    </group>
                </search>

            </field>
        </record>

        <!-- Vista lista especializada para recepción -->
        <record id="view_custody_chain_reception_list" model="ir.ui.view">
            <field name="name">lims.custody_chain.reception.list</field>
            <field name="model">lims.custody_chain</field>
            <field name="arch" type="xml">
                <list string="Cadenas de Custodia - Recepción" create="false" edit="false" limit="300">
                    <field name="custody_chain_code"/>
                    <field name="cliente_id"/>
                    <field name="date_chainofcustody"/>
                    <field name="client_code"/>
                    <field name="chain_of_custody_state"/>
                    
                    <!-- Campos de estadísticas de recepción -->
                    <field name="samples_total"/>
                    <field name="samples_received" decoration-success="samples_received > 0"/>
                    <field name="samples_rejected" decoration-danger="samples_rejected > 0"/>
                    <field name="samples_pending" decoration-warning="samples_pending > 0"/>
                    
                    <!-- Estado general computado -->
                    <field name="reception_status_display" 
                           decoration-success="reception_status_display == 'Completo'" 
                           decoration-warning="reception_status_display == 'En Proceso'" 
                           decoration-muted="reception_status_display == 'Sin Procesar'"/>
                </list>
            </field>
        </record>

        <!-- Search View para Muestras (MEJORADO) -->
        <record id="view_sample_reception_search" model="ir.ui.view">
            <field name="name">sample.reception.search</field>
            <field name="model">lims.sample</field>
            <field name="arch" type="xml">
                <search string="Buscar Muestras">
                    <field name="sample_identifier" string="Identificación"/>
                    <field name="sample_description" string="Descripción"/>
                    <field name="sample_code" string="Código Muestra"/>
                    <field name="custody_chain_id" string="Cadena Custodia"/>
                    <field name="cliente_id" string="Cliente"/>
                    <field name="sample_type_id" string="Tipo Muestra"/>
                    <field name="sample_reception_state" string="Estado Recepción"/>
                    
                    <!-- Búsqueda por código de cliente -->
                    <field name="cliente_id" string="Código Cliente" 
                        filter_domain="[('cliente_id.client_code', 'ilike', self)]"/>
                    
                    <!-- Filtros por estado de recepción -->
                    <separator/>
                    <filter name="filter_pendientes" string="Pendientes" 
                            domain="[('sample_code', '=', 'Pendiente')]"/>
                    <filter name="filter_recibidas" string="Recibidas" 
                            domain="[('sample_reception_state', '=', 'Recibida')]"/>
                    <filter name="filter_rechazadas" string="Rechazadas" 
                            domain="[('sample_reception_state', '=', 'Rechazada')]"/>
                    
                    <!-- Agrupaciones -->
                    <group expand="0" string="Agrupar Por">
                        <filter name="group_by_custody_chain" string="Cadena de Custodia" 
                                context="{'group_by': 'custody_chain_id'}"/>
                        <filter name="group_by_cliente" string="Cliente" 
                                context="{'group_by': 'cliente_id'}"/>
                        <filter name="group_by_estado" string="Estado Recepción" 
                                context="{'group_by': 'sample_reception_state'}"/>
                        <filter name="group_by_tipo" string="Tipo Muestra" 
                                context="{'group_by': 'sample_type_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vista formulario especializada para recepción -->
        <record id="view_custody_chain_reception_form" model="ir.ui.view">
            <field name="name">lims.custody_chain.reception.form</field>
            <field name="model">lims.custody_chain</field>
            <field name="arch" type="xml">
                <form string="Cadena de Custodia - Recepción" create="false" edit="false">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="custody_chain_code" readonly="1"/>
                            </h1>
                        </div>

                        <!-- Información básica (solo lectura) -->
                        <group>
                            <group string="Información del Cliente">
                                <field name="cliente_id" readonly="1"/>
                                <field name="sucursal_id" readonly="1"/>
                                <field name="departamento_id" readonly="1"/>
                            </group>
                            <group string="Información de la Cadena">
                                <field name="chain_of_custody_state" readonly="1"/>
                                <field name="client_code" readonly="1"/>
                            </group>
                        </group>

                        <!-- Panel de Control de Recepción -->
                        <div class="alert alert-info" style="margin: 15px 0;">
                            <div class="row">
                                <div class="col-3 text-center">
                                    <div style="font-size: 24px; font-weight: bold; color: #17a2b8;">
                                        <field name="samples_total"/>
                                    </div>
                                    <small>Total Muestras</small>
                                </div>
                                <div class="col-3 text-center">
                                    <div style="font-size: 24px; font-weight: bold; color: #28a745;">
                                        <field name="samples_received"/>
                                    </div>
                                    <small>Recibidas</small>
                                </div>
                                <div class="col-3 text-center">
                                    <div style="font-size: 24px; font-weight: bold; color: #dc3545;">
                                        <field name="samples_rejected"/>
                                    </div>
                                    <small>Rechazadas</small>
                                </div>
                                <div class="col-3 text-center">
                                    <div style="font-size: 24px; font-weight: bold; color: #ffc107;">
                                        <field name="samples_pending"/>
                                    </div>
                                    <small>Pendientes</small>
                                </div>
                            </div>
                        </div>

                        <!-- Botones de acción superiores -->
                        <div style="margin-bottom: 20px; text-align: center;">
                            <div style="display: inline-block; margin-right: 15px;">
                                <button name="action_mass_reception_wizard" 
                                        type="object" 
                                        string="📥 Recibir Todas las Muestras" 
                                        class="btn-success" 
                                        style="min-width: 180px; padding: 8px 16px;"
                                        title="Recibir todas las muestras de esta cadena"/>
                            </div>
                            <div style="display: inline-block; margin-left: 15px; margin-right: 15px;">
                                <button name="action_samples_reception_multiselect" 
                                        type="object" 
                                        string="🔲 Selección Múltiple" 
                                        class="btn-info" 
                                        style="min-width: 180px; padding: 8px 16px;"
                                        title="Seleccionar muestras específicas"/>
                            </div>
                            <div style="display: inline-block; margin-left: 15px;">
                                <button name="action_print_all_labels" 
                                        type="object" 
                                        string="🏷️ Imprimir Etiquetas" 
                                        class="btn-secondary" 
                                        style="min-width: 180px; padding: 8px 16px;"
                                        title="Imprimir etiquetas QR de todas las muestras"/>
                            </div>
                        </div>

                        <!-- Lista de muestras -->
                        <group string="Muestras para Recepción">
                            <field name="sample_ids" nolabel="1">
                                <list string="Muestras" create="false" edit="false">
                                    <field name="sample_identifier"/>
                                    <field name="sample_description"/>
                                    <field name="sample_code"/>
                                    <field name="sample_type_id"/>
                                    <field name="sample_reception_state" 
                                        decoration-success="sample_reception_state == 'Recibida'" 
                                        decoration-danger="sample_reception_state == 'Rechazada'" 
                                        decoration-warning="sample_reception_state == 'No Recibida'"
                                        decoration-muted="sample_reception_state == 'Sin Procesar'"/>
                                    
                                    <!-- Botón Recibir (para muestras sin código) -->
                                    <button name="action_individual_reception_wizard" 
                                            type="object" 
                                            string="Recibir" 
                                            class="btn-primary" 
                                            title="Recibir esta muestra individual"
                                            invisible="sample_code != 'Pendiente'"/>
                                    
                                    <!-- Botón Editar (para muestras con código asignado) -->
                                    <button name="action_edit_reception_wizard" 
                                            type="object" 
                                            string="Editar" 
                                            class="btn-warning" 
                                            title="Editar recepción existente"
                                            invisible="sample_code == 'Pendiente'"/>
                                    
                                    <button name="action_print_sample_label" 
                                            type="object" 
                                            string="🏷️" 
                                            class="btn-secondary" 
                                            title="Imprimir etiqueta QR de esta muestra"/>
                                </list>
                            </field>
                        </group>

                        <!-- Botones de acción inferiores -->
                        <div style="margin-top: 20px;">
                            <div class="oe_button_box" style="display: flex; gap: 10px; justify-content: center;">
                                <button name="%(action_report_sample_reception)d" 
                                        type="action" 
                                        string="Informe de Recepción" 
                                        class="btn-info" 
                                        title="Generar informe de recepción de muestras"/>
                                <button name="action_send_reception_report_email" 
                                        type="object" 
                                        string="Enviar Informe" 
                                        class="btn-primary" 
                                        title="Enviar informe de recepción por correo electrónico"/>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista lista especializada para selección múltiple -->
        <record id="view_samples_reception_list" model="ir.ui.view">
            <field name="name">lims.sample.reception.list</field>
            <field name="model">lims.sample</field>
            <field name="arch" type="xml">
                <list string="Muestras para Recepción" 
                    multi_edit="1"
                    create="false" 
                    edit="false"
                    limit="300">
                    <header>
                        <button name="action_mass_reception_selected" 
                                type="object" 
                                string="📦 Recibir Muestras Seleccionadas"
                                class="btn-primary"/>
                    </header>
                    
                    <field name="custody_chain_id"/>
                    <field name="sample_identifier"/>
                    <field name="sample_description"/>
                    <field name="date_chainofcustody" string="Fecha CC"/>
                    <field name="sample_code"/>
                    <field name="sample_type_id"/>
                    <field name="sample_reception_state" 
                        decoration-success="sample_reception_state == 'Recibida'" 
                        decoration-danger="sample_reception_state == 'Rechazada'" 
                        decoration-warning="sample_reception_state == 'No Recibida'"
                        decoration-muted="sample_reception_state == 'Sin Procesar'"/>
                    
                    <!-- Botón Recibir (para muestras sin código) -->
                    <button name="action_individual_reception_wizard"
                            type="object"
                            string="Recibir"
                            class="btn-primary"
                            title="Recibir esta muestra individual"
                            invisible="sample_code != 'Pendiente'"/>

                    <!-- Botón Editar (para muestras con código asignado) -->
                    <button name="action_edit_reception_wizard"
                            type="object"
                            string="Editar"
                            class="btn-warning"
                            title="Editar recepción existente"
                            invisible="sample_code == 'Pendiente'"/>
                </list>
            </field>
        </record>

        <!-- Acción para reporte masivo -->
        <record id="action_mass_reception_report" model="ir.actions.server">
            <field name="name">Generar Informe Consolidado</field>
            <field name="model_id" ref="model_lims_custody_chain"/>
            <field name="binding_model_id" ref="model_lims_custody_chain"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
               action = env.ref('lims_sample_reception.action_report_mass_reception').report_action(records)
            </field>
        </record>

        <record id="action_mass_reception_report_from_samples" model="ir.actions.server">
            <field name="name">Generar Informe Consolidado</field>
            <field name="model_id" ref="lims_sample_reception.model_lims_sample"/>
            <field name="binding_model_id" ref="lims_sample_reception.model_lims_sample"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">custody_chains = records.mapped('custody_chain_id')
if custody_chains:
    action = env.ref('lims_sample_reception.action_report_mass_reception').report_action(custody_chains)
else:
    raise UserError('No se encontraron cadenas de custodia para las muestras seleccionadas.')</field>
        </record>   

        <!-- Acción para cadenas de custodia en recepción -->
        <record id="action_custody_chains_reception" model="ir.actions.act_window">
            <field name="name">Cadenas de Custodia</field>
            <field name="res_model">lims.custody_chain</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_custody_chain_reception_list"/>
            <field name="search_view_id" ref="view_custody_chain_reception_search"/>
            <field name="domain">[('chain_of_custody_state', 'in', ['in_progress', 'done'])]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay cadenas de custodia para recepción
                </p>
                <p>
                    Aquí aparecerán las cadenas de custodia listas para recibir muestras
                </p>
            </field>
        </record>

        <!-- Acción para muestras con selección múltiple -->
        <record id="action_samples_reception_multiselect" model="ir.actions.act_window">
            <field name="name">Muestras - Selección Múltiple</field>
            <field name="res_model">lims.sample</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="view_samples_reception_list"/>
            <field name="search_view_id" ref="view_sample_reception_search"/>
            <field name="domain">[('custody_chain_id.chain_of_custody_state', 'in', ['in_progress', 'done'])]</field>
            <field name="context">{
                'search_default_group_by_custody_chain': 1,
            }</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay muestras para recepción
                </p>
                <p>
                    Aquí puedes seleccionar múltiples muestras para recepción masiva
                </p>
            </field>
        </record>

        <!-- Menú principal del módulo -->
        <menuitem id="lims_sample_reception_menu_root" 
                  name="Recepción de Muestras" 
                  sequence="3"/>

        <!-- Submenú para cadenas de custodia -->
        <menuitem id="menu_custody_chains_reception"
                  name="Cadenas de Custodia"
                  parent="lims_sample_reception_menu_root"
                  action="action_custody_chains_reception"
                  sequence="10"/>

        <!-- Submenú para muestras individuales -->
        <menuitem id="menu_samples_reception"
                  name="Muestras (Selección Múltiple)"
                  parent="lims_sample_reception_menu_root"
                  action="action_samples_reception_multiselect"
                  sequence="20"/>

    </data>
</odoo>