<odoo>

    <!-- Vista Lista Clientes Principales -->
    <record id="view_main_customer_list" model="ir.ui.view">
        <field name="name">Clientes Principales Lista</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <list>
                <field name="client_code"/>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </list>
        </field>
    </record>

    <!-- Vista Formulario Clientes Principales -->
    <record id="view_main_customer_form" model="ir.ui.view">
        <field name="name">Clientes Principales Formulario</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_type" invisible="1"/>
                        <field name="client_code" required="1"/>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción específica para Clientes Principales -->
    <record id="action_main_customer" model="ir.actions.act_window">
        <field name="name">Clientes Principales</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('partner_type','=','customer')]</field>
        <field name="context">{'default_partner_type':'customer'}</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_main_customer_list')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_main_customer_form')})
        ]"/>
    </record>

</odoo>
