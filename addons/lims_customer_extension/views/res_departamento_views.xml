<odoo>

    <!-- Vista Lista Departamentos -->
    <record id="view_res_departamento_list" model="ir.ui.view">
        <field name="name">Departamentos Lista</field>
        <field name="model">res.departamento</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="sucursal_id"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Vista Formulario Departamentos -->
    <record id="view_res_departamento_form" model="ir.ui.view">
        <field name="name">Departamentos Formulario</field>
        <field name="model">res.departamento</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sucursal_id"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n para Departamentos -->
    <record id="action_res_departamento" model="ir.actions.act_window">
        <field name="name">Departamentos</field>
        <field name="res_model">res.departamento</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_res_departamento_list')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_res_departamento_form')})
        ]"/>
    </record>

</odoo>
