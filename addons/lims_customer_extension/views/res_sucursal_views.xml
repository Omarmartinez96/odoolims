<odoo>

    <!-- Vista Lista Sucursales -->
    <record id="view_res_sucursal_list" model="ir.ui.view">
        <field name="name">Sucursales Lista</field>
        <field name="model">res.sucursal</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="address"/>
            </list>
        </field>
    </record>

    <!-- Vista Formulario Sucursales -->
    <record id="view_res_sucursal_form" model="ir.ui.view">
        <field name="name">Sucursales Formulario</field>
        <field name="model">res.sucursal</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="address"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n para Sucursales -->
    <record id="action_res_sucursal" model="ir.actions.act_window">
        <field name="name">Sucursales</field>
        <field name="res_model">res.sucursal</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_res_sucursal_list')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_res_sucursal_form')})
        ]"/>
    </record>

</odoo>
