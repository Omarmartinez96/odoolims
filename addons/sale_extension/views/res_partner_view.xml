<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Extender la pestaÃ±a Contactos & Addresses -->
            <xpath expr="//page[@name='contact_addresses']" position="inside">
                <field name="child_ids" mode="list" context="{'default_parent_id': id}">
                    <list>
                        <field name="name" string="Name"/>
                        <field name="email" string="Email"/>
                        <field name="phone" string="Phone"/>
                        <field name="mobile" string="Mobile"/>
                        <field name="sucursal_id" string="Sucursal"/>
                        <field name="departamento_id" string="Departamento"/>
                    </list>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
