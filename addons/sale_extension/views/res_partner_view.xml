<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista heredada para extender el formulario de res.partner -->
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Extender la pestaña Contactos & Addresses -->
            <xpath expr="//page[@name='contact_addresses']" position="inside">
                <field name="child_ids" mode="tree" context="{'default_parent_id': id, 'default_is_contact': True}">
                    <!-- Vista de lista para contactos -->
                    <tree string="Listado de Contactos">
                        <field name="name" string="Nombre del Contacto"/>
                        <field name="email" string="Correo Electrónico"/>
                        <field name="phone" string="Teléfono"/>
                        <field name="mobile" string="Teléfono Móvil"/>
                        <field name="sucursal_id" string="Sucursal"/>
                        <field name="departamento_id" string="Departamento"/>
                    </tree>
                    <!-- Vista de formulario para agregar o editar contactos -->
                    <form string="Formulario de Contacto">
                        <sheet>
                            <group>
                                <field name="name" string="Nombre del Contacto" required="1"/>
                                <field name="email" string="Correo Electrónico"/>
                                <field name="phone" string="Teléfono"/>
                                <field name="mobile" string="Teléfono Móvil"/>
                                <field name="sucursal_id" string="Sucursal Asociada"/>
                                <field name="departamento_id" string="Departamento Asociado"/>
                            </group>
                        </sheet>
                    </form>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
