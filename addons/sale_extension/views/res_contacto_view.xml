<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista de lista -->
    <record id="view_res_contacto_list" model="ir.ui.view">
        <field name="name">res.contacto.list</field>
        <field name="model">res.contacto</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="telefono"/>
                <field name="correo_electronico"/>
                <field name="puesto"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_res_contacto_form" model="ir.ui.view">
        <field name="name">res.contacto.form</field>
        <field name="model">res.contacto</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="name"/>
                    <field name="telefono"/>
                    <field name="correo_electronico"/>
                    <field name="puesto"/>
                    <field name="departamento_id"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>