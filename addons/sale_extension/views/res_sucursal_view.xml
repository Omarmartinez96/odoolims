<odoo>
    <record id="view_res_sucursal_form" model="ir.ui.view">
        <field name="name">res.sucursal.form</field>
        <field name="model">res.sucursal</field>
        <field name="arch" type="xml">
            <form string="Crear Sucursal Asociada">
                <sheet>
                    <group>
                        <field name="name" string="Nombre de la Sucursal" required="1"/>
                        <field name="cliente_id" string="Cliente" required="1"/>
                        <field name="client_code" string="Código de Cliente" readonly="1"/>
                        <field name="direccion" string="Dirección de la Sucursal"/>
                        <field name="observaciones" string="Observaciones"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
