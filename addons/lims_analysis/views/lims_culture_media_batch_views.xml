<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <!-- Acción para lotes de medios -->
        <record id="action_culture_media_batches" model="ir.actions.act_window">
            <field name="name">Medios Preparados</field>
            <field name="res_model">lims.culture.media.batch</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Registrar el primer lote de medio preparado
                </p>
                <p>
                    Registre los lotes de medios de cultivo preparados o deshidratados
                </p>
            </field>
        </record>

        <!-- ========== MENÚS ========== -->
        <menuitem id="menu_lims_analysis_root" 
                  name="Análisis de Muestras" 
                  sequence="20"/>
                  
        <menuitem id="menu_lims_analysis_config" 
                  name="⚙️ Configuración" 
                  parent="menu_lims_analysis_root" 
                  sequence="90"/>

        <menuitem id="menu_culture_media_with_qc" 
                name="Medios de Cultivo" 
                parent="menu_lims_analysis_config" 
                action="lims_reception.action_lims_culture_media" 
                sequence="5"/>

        <menuitem id="menu_culture_media_batches" 
                  name="Medios Preparados" 
                  parent="menu_lims_analysis_config" 
                  action="action_culture_media_batches" 
                  sequence="10"/>

        <menuitem id="menu_lims_analysis" 
                  name="Análisis" 
                  parent="menu_lims_analysis_root" 
                  action="action_lims_analysis" 
                  sequence="10"/>
    </data>
</odoo>