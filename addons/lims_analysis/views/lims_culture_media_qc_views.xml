<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <!-- ========== VISTA FORMULARIO EXTENDIDA PARA MEDIOS (SIN HERENCIA) ========== -->
        <record id="view_lims_culture_media_form_qc" model="ir.ui.view">
            <field name="name">lims.culture.media.form.qc</field>
            <field name="model">lims.culture.media</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <form string="Medio de Cultivo">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Ej: Agar MacConkey" required="1"/>
                            </h1>
                        </div>

                        <group>
                            <field name="internal_id" placeholder="Ej: TSA"/>
                            <field name="active"/>
                        </group>

                        <group string=" Descripci贸n">
                            <field name="description" nolabel="1" 
                                   placeholder="Descripci贸n del medio, composici贸n, uso, etc."/>
                        </group>

                        <!-- NUEVA SECCIN DE CONTROLES DE CALIDAD -->
                        <group string="И Controles de Calidad del Medio">
                            <field name="media_qc_ids" nolabel="1">
                                <list string="Controles de Calidad" editable="bottom" create="true" delete="true">
                                    <field name="sequence" invisible="1"/>
                                    <field name="qc_type_id" 
                                           string="Tipo de Control"
                                           options="{'no_create': True, 'no_open': True}"
                                           required="1"/>
                                    <field name="expected_result" 
                                           string="Resultado Esperado"
                                           required="1"/>
                                    <field name="is_mandatory" 
                                           string="Obligatorio"/>
                                    <field name="notes" 
                                           string="Notas"
                                           optional="hide"/>
                                </list>
                                
                                <form string="Control de Calidad">
                                    <group>
                                        <group>
                                            <field name="qc_type_id" 
                                                   options="{'no_create': True}"
                                                   required="1"/>
                                            <field name="expected_result" required="1"/>
                                        </group>
                                        <group>
                                            <field name="is_mandatory"/>
                                            <field name="sequence" invisible="1"/>
                                        </group>
                                    </group>
                                    <group string=" Notas">
                                        <field name="notes" nolabel="1" 
                                               placeholder="Notas adicionales sobre este control..."/>
                                    </group>
                                </form>
                            </field>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========== ACCIN PARA MEDIOS CON CONTROLES ========== -->
        <record id="action_culture_media_with_qc" model="ir.actions.act_window">
            <field name="name">Medios de Cultivo</field>
            <field name="res_model">lims.culture.media</field>
            <field name="view_mode">list,form</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('lims_reception.view_lims_culture_media_list')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_lims_culture_media_form_qc')})
            ]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear el primer medio de cultivo
                </p>
                <p>
                    Gestione el cat谩logo de medios de cultivo y sus controles de calidad
                </p>
            </field>
        </record>

        <!-- ========== VISTA LISTA DE CONTROLES DE CALIDAD ========== -->
        <record id="view_culture_media_qc_list" model="ir.ui.view">
            <field name="name">lims.culture.media.qc.list</field>
            <field name="model">lims.culture.media.qc</field>
            <field name="arch" type="xml">
                <list string="Controles de Calidad de Medios">
                    <field name="culture_media_id"/>
                    <field name="qc_type_id"/>
                    <field name="expected_result"/>
                    <field name="is_mandatory"/>
                </list>
            </field>
        </record>

        <!-- ========== ACCIN PARA CONTROLES DE MEDIOS ========== -->
        <record id="action_culture_media_qc" model="ir.actions.act_window">
            <field name="name">Controles de Calidad de Medios</field>
            <field name="res_model">lims.culture.media.qc</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- ========== MENS ========== -->
        <menuitem id="menu_lims_analysis_root" 
                  name="An谩lisis de Muestras" 
                  sequence="20"/>
                  
        <menuitem id="menu_lims_analysis_config" 
                  name="锔 Configuraci贸n" 
                  parent="menu_lims_analysis_root" 
                  sequence="90"/>

        <menuitem id="menu_culture_media_with_qc" 
                  name="Medios de Cultivo" 
                  parent="menu_lims_analysis_config" 
                  action="action_culture_media_with_qc" 
                  sequence="5"/>

        <menuitem id="menu_culture_media_batches" 
                  name="Medios Preparados" 
                  parent="menu_lims_analysis_config" 
                  action="action_culture_media_batches" 
                  sequence="10"/>

    </data>
</odoo>