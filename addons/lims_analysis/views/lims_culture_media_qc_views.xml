<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <!-- ========== VISTA FORMULARIO EXTENDIDA PARA MEDIOS ========== -->
        <record id="view_lims_culture_media_form_extended" model="ir.ui.view">
            <field name="name">lims.culture.media.form.extended</field>
            <field name="model">lims.culture.media</field>
            <field name="inherit_id" ref="lims_reception.view_lims_culture_media_form"/>
            <field name="arch" type="xml">
                
                <!-- Agregar después del grupo de descripción -->
                <xpath expr="//group[@string='📝 Descripción']" position="after">
                    <group string="🧪 Controles de Calidad del Medio">
                        <field name="media_qc_ids" nolabel="1">
                            <list editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="qc_type_id" options="{'no_create': True}"/>
                                <field name="expected_result"/>
                                <field name="is_mandatory"/>
                                <field name="notes"/>
                            </list>
                        </field>
                    </group>
                </xpath>
                
            </field>
        </record>

        <!-- ========== VISTA LISTA DE CONTROLES DE CALIDAD ========== -->
        <record id="view_culture_media_qc_list" model="ir.ui.view">
            <field name="name">lims.culture.media.qc.list</field>
            <field name="model">lims.culture.media.qc</field>
            <field name="arch" type="xml">
                <list string="Controles de Calidad de Medios">
                    <field name="culture_media_id"/>
                    <field name="qc_type_id"/>
                    <field name="expected_result"/>
                    <field name="is_mandatory"/>
                    <field name="sequence"/>
                </list>
            </field>
        </record>

        <!-- ========== VISTA FORMULARIO DE CONTROLES DE CALIDAD ========== -->
        <record id="view_culture_media_qc_form" model="ir.ui.view">
            <field name="name">lims.culture.media.qc.form</field>
            <field name="model">lims.culture.media.qc</field>
            <field name="arch" type="xml">
                <form string="Control de Calidad de Medio">
                    <sheet>
                        <group>
                            <group>
                                <field name="culture_media_id"/>
                                <field name="qc_type_id"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="expected_result"/>
                                <field name="is_mandatory"/>
                            </group>
                        </group>
                        
                        <group string="📝 Notas">
                            <field name="notes" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========== ACCIÓN PARA CONTROLES DE MEDIOS ========== -->
        <record id="action_culture_media_qc" model="ir.actions.act_window">
            <field name="name">Controles de Calidad de Medios</field>
            <field name="res_model">lims.culture.media.qc</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Crear el primer control de calidad
                </p>
                <p>
                    Defina los controles de calidad que deben realizarse a cada medio de cultivo
                </p>
            </field>
        </record>

        <!-- ========== MENÚ ========== -->
        <menuitem id="menu_lims_analysis_root" 
                  name="Análisis de Muestras" 
                  sequence="20"/>
                  
        <menuitem id="menu_lims_analysis_config" 
                  name="⚙️ Configuración" 
                  parent="menu_lims_analysis_root" 
                  sequence="90"/>

        <menuitem id="menu_culture_media_qc" 
                  name="Controles de Medios" 
                  parent="menu_lims_analysis_config" 
                  action="action_culture_media_qc" 
                  sequence="10"/>

    </data>
</odoo>