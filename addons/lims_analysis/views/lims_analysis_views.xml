<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <!-- ========== VISTA LISTA DE AN√ÅLISIS ========== -->
        <record id="view_lims_analysis_list" model="ir.ui.view">
            <field name="name">lims.analysis.list</field>
            <field name="model">lims.analysis</field>
            <field name="arch" type="xml">
                <list string="An√°lisis de Muestras" create="true">
                    <field name="sample_code"/>
                    <field name="sample_identifier"/>
                    <field name="sample_reception_id" 
                        string="Recepci√≥n"
                        options="{'no_create': True, 'no_open': True}"/>
                    <field name="analysis_start_date"/>
                    <field name="analysis_state"/>
                </list>
            </field>
        </record>

        <!-- ========== VISTA FORMULARIO DE AN√ÅLISIS MEJORADA ========== -->
        <record id="view_lims_analysis_form" model="ir.ui.view">
            <field name="name">lims.analysis.form</field>
            <field name="model">lims.analysis</field>
            <field name="arch" type="xml">
                <form string="An√°lisis de Muestra">
                    <header>
                        <button name="action_complete_analysis" 
                                type="object" 
                                string="‚úÖ Completar An√°lisis" 
                                class="btn-success"
                                invisible="analysis_state != 'in_progress'"/>
                        <field name="analysis_state" widget="statusbar" statusbar_visible="draft,in_progress,completed,validated"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="1"/>
                            </h1>
                        </div>

                        <!-- Informaci√≥n b√°sica -->
                        <group>
                            <group string="Informaci√≥n de la Muestra">
                                <field name="sample_reception_id"/>
                                <field name="sample_code" readonly="1"/>
                                <field name="sample_identifier" readonly="1"/>
                            </group>
                            <group string="Fechas">
                                <field name="analysis_start_date"/>
                                <field name="analysis_end_date"/>
                            </group>
                        </group>

                        <!-- SECCI√ìN DE PAR√ÅMETROS DE AN√ÅLISIS -->
                        <notebook>
                            <page string="üî¨ Par√°metros de An√°lisis">
                                <field name="parameter_analysis_ids" nolabel="1">
                                    <list string="Par√°metros">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="microorganism"/>
                                        <field name="method"/>
                                        <field name="analysis_status"/>
                                        <field name="result_value" class="o_field_highlight"/>
                                    </list>
                                    
                                    <form string="Par√°metro de An√°lisis">
                                        <header>
                                            <field name="analysis_status" widget="statusbar" statusbar_visible="pending,in_progress,completed,reviewed,approved"/>
                                        </header>
                                        
                                        <sheet>
                                            <div class="oe_title">
                                                <h1>
                                                    <field name="name" readonly="1"/>
                                                </h1>
                                                <h3>
                                                    <field name="microorganism" readonly="1"/>
                                                </h3>
                                            </div>

                                            <!-- Informaci√≥n del par√°metro -->
                                            <group>
                                                <group string="üìã Informaci√≥n del Par√°metro">
                                                    <field name="method" readonly="1"/>
                                                    <field name="category" readonly="1"/>
                                                    <field name="parameter_id" readonly="1"/>
                                                </group>
                                                <group string="üìÖ Informaci√≥n del An√°lisis">
                                                    <field name="analysis_start_date"/>
                                                    <field name="analysis_commitment_date"/>
                                                </group>
                                            </group>

                                            <!-- üÜï TIPO DE RESULTADO -->
                                            <group string="üéØ Tipo de Resultado">
                                                <field name="result_type" widget="radio" required="1"/>
                                            </group>

                                            <!-- RESULTADO CUALITATIVO (cuando se selecciona result_type = 'qualitative') -->
                                            <group string="üìä Resultado Cualitativo" 
                                                   invisible="result_type != 'qualitative'">
                                                <field name="result_qualitative"/>
                                                <field name="result_value" 
                                                       class="o_field_highlight"
                                                       style="font-size: 16px;"
                                                       placeholder="Se completar√° autom√°ticamente al seleccionar resultado cualitativo"/>
                                            </group>

                                            <!-- DATOS CRUDOS DE DILUCIONES (SOLO PARA MICROBIOLOG√çA Y CUANTITATIVO) -->
                                            <group string="üß™ Datos Crudos de Diluciones" 
                                                   invisible="category != 'microbiological' or result_type != 'quantitative'">
                                                
                                                <!-- NOTA INFORMATIVA -->
                                                <div class="alert alert-info" style="margin-bottom: 10px;" colspan="2">
                                                    <strong>üìù Nota:</strong> Esta tabla es √∫nicamente para registrar datos crudos. 
                                                    Los c√°lculos mostrados son informativos. El resultado final debe ingresarse manualmente abajo.
                                                </div>
                                                
                                                <!-- TABLA DE DILUCIONES SIMPLIFICADA -->
                                                <field name="raw_dilution_data_ids" nolabel="1" colspan="2">
                                                    <list string="Diluciones" editable="bottom" create="true" delete="true">
                                                        <field name="method_type"/>
                                                        <field name="dilution_factor"/>
                                                        <!-- UFC -->
                                                        <field name="ufc_count" invisible="method_type != 'ufc'"/>
                                                        <!-- NMP -->
                                                        <field name="positive_tubes" invisible="method_type != 'nmp'"/>
                                                        <field name="total_tubes" invisible="method_type != 'nmp'"/>
                                                        <!-- Cualitativo -->
                                                        <field name="result_qualitative" invisible="method_type != 'qualitative'"/>
                                                    </list>
                                                    
                                                    <form string="Datos de Diluci√≥n">
                                                        <group>
                                                            <group>
                                                                <field name="method_type"/>
                                                                <field name="dilution_factor"/>
                                                            </group>
                                                        </group>
                                                        
                                                        <!-- CAMPOS ESPEC√çFICOS POR TIPO -->
                                                        <group string="Datos Espec√≠ficos">
                                                            <!-- PARA UFC -->
                                                            <group string="Recuento en Placa" invisible="method_type != 'ufc'">
                                                                <field name="ufc_count"/>
                                                            </group>
                                                            
                                                            <!-- PARA NMP -->
                                                            <group string="N√∫mero M√°s Probable" invisible="method_type != 'nmp'">
                                                                <field name="positive_tubes"/>
                                                                <field name="total_tubes"/>
                                                                <field name="nmp_result" placeholder="Ej: 110 NMP/100mL (consultar tabla)"/>
                                                            </group>
                                                            
                                                            <!-- PARA CUALITATIVO -->
                                                            <group string="Resultado Cualitativo" invisible="method_type != 'qualitative'">
                                                                <field name="result_qualitative"/>
                                                            </group>
                                                        </group>
                                                        
                                                        <group>
                                                            <field name="observations" nolabel="1"/>
                                                        </group>
                                                    </form>
                                                </field>
                                                
                                                <!-- C√ÅLCULOS INFORMATIVOS -->
                                                <group string="üìä C√°lculos Informativos" invisible="dilution_calculations == False">
                                                    <field name="dilution_calculations" 
                                                           readonly="1" 
                                                           nolabel="1"
                                                           widget="text"
                                                           style="font-family: monospace; font-size: 12px; color: #0066cc; background-color: #f0f8ff; padding: 10px; border-radius: 4px;"
                                                           colspan="2"/>
                                                </group>
                                                
                                            </group>
                                            
                                            <!-- RESULTADO FINAL MANUAL (PARA CUANTITATIVO) -->
                                            <group string="üìã Resultado Final" 
                                                   invisible="result_type != 'quantitative'">
                                                <field name="result_value" 
                                                       class="o_field_highlight"
                                                       style="font-size: 16px;"
                                                       placeholder="Ingrese el resultado final manualmente"/>
                                                <field name="result_unit_selection"/>
                                                <field name="custom_unit" 
                                                       placeholder="Especificar unidad"
                                                       invisible="result_unit_selection != 'custom'"
                                                       colspan="2"/>
                                            </group>
                                            
                                            <!-- CAMPOS ESPEC√çFICOS POR TIPO (PARA QU√çMICO Y F√çSICO) -->
                                            <group string="üî¨ Campos Espec√≠ficos" 
                                                   invisible="category == 'microbiological' or result_type != 'quantitative'">
                                                
                                                <!-- PARA QU√çMICO Y F√çSICO - Valores Num√©ricos -->
                                                <group string="Valores Num√©ricos" invisible="category not in ['chemical', 'physical']">
                                                    <field name="result_numeric"/>
                                                    <field name="result_unit"/>
                                                </group>
                                                
                                                <!-- PARA QU√çMICO Y F√çSICO - L√≠mites de Detecci√≥n -->
                                                <group string="L√≠mites Anal√≠ticos" invisible="category not in ['chemical', 'physical']">
                                                    <field name="below_detection_limit"/>
                                                    <field name="above_quantification_limit"/>
                                                </group>
                                                
                                            </group>

                                            <!-- Observaciones -->
                                            <group string="üìù Observaciones del Analista">
                                                <field name="analyst_notes" 
                                                       placeholder="Observaciones t√©cnicas del an√°lisis..."/>
                                            </group>

                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========== VISTA PARA PAR√ÅMETROS DE AN√ÅLISIS ========== -->
        <record id="view_parameter_analysis_list" model="ir.ui.view">
            <field name="name">lims.parameter.analysis.list</field>
            <field name="model">lims.parameter.analysis</field>
            <field name="arch" type="xml">
                <list string="Par√°metros de An√°lisis">
                    <field name="analysis_id"/>
                    <field name="name"/>
                    <field name="microorganism"/>
                    <field name="analysis_status"/>
                    <field name="result_value" class="o_field_highlight"/>
                    <field name="result_unit_selection"/>
                    <field name="analysis_date"/>
                </list>
            </field>
        </record>

        <!-- ========== ACCI√ìN PARA AN√ÅLISIS ========== -->
        <record id="action_lims_analysis" model="ir.actions.act_window">
            <field name="name">An√°lisis de Muestras</field>
            <field name="res_model">lims.analysis</field>
            <field name="view_mode">list,form</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_lims_analysis_list')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_lims_analysis_form')})
            ]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay an√°lisis disponibles
                </p>
                <p>
                    Los an√°lisis se crean autom√°ticamente desde muestras recibidas
                </p>
            </field>
        </record>

        <!-- ========== ACCI√ìN PARA PAR√ÅMETROS DE AN√ÅLISIS ========== -->
        <record id="action_parameter_analysis" model="ir.actions.act_window">
            <field name="name">Par√°metros de An√°lisis</field>
            <field name="res_model">lims.parameter.analysis</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay par√°metros de an√°lisis
                </p>
                <p>
                    Los par√°metros se crean autom√°ticamente al crear an√°lisis
                </p>
            </field>
        </record>

        <!-- ========== MEN√öS ========== -->
        <menuitem id="menu_lims_analysis" 
                  name="An√°lisis" 
                  parent="menu_lims_analysis_root" 
                  action="action_lims_analysis" 
                  sequence="10"/>

        <menuitem id="menu_parameter_analysis" 
                  name="Par√°metros de An√°lisis" 
                  parent="menu_lims_analysis_root" 
                  action="action_parameter_analysis" 
                  sequence="15"/>

        <!-- Acci√≥n para limpiar hu√©rfanos -->
        <record id="action_clean_orphans" model="ir.actions.server">
            <field name="name">üßπ Limpiar Registros Hu√©rfanos</field>
            <field name="model_id" ref="model_lims_analysis"/>
            <field name="binding_model_id" ref="model_lims_analysis"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">action = env['lims.analysis'].action_clean_orphan_records()</field>
        </record>

    </data>
</odoo>