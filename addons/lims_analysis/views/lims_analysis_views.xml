<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <!-- ========== VISTA LISTA DE AN√ÅLISIS ACTUALIZADA ========== -->
        <record id="view_lims_analysis_list" model="ir.ui.view">
            <field name="name">lims.analysis.list</field>
            <field name="model">lims.analysis</field>
            <field name="arch" type="xml">
                <list string="An√°lisis de Muestras" create="true">
                    <field name="sample_code"/>
                    <field name="sample_identifier"/>
                    <field name="sample_reception_id" 
                        string="Recepci√≥n"
                        options="{'no_create': True, 'no_open': True}"/>
                    <field name="analysis_start_date"/>
                    <field name="analysis_state"/>
                </list>
            </field>
        </record>

        <!-- ========== VISTA FORMULARIO DE AN√ÅLISIS ACTUALIZADA ========== -->
        <record id="view_lims_analysis_form" model="ir.ui.view">
            <field name="name">lims.analysis.form</field>
            <field name="model">lims.analysis</field>
            <field name="arch" type="xml">
                <form string="An√°lisis de Muestra">
                    <header>
                        <button name="action_complete_analysis" 
                                type="object" 
                                string="‚úÖ Completar An√°lisis" 
                                class="btn-success"
                                invisible="analysis_state != 'in_progress'"/>
                        <field name="analysis_state" widget="statusbar" statusbar_visible="draft,in_progress,completed,validated"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="1"/>
                            </h1>
                        </div>

                        <!-- Informaci√≥n b√°sica -->
                        <group>
                            <group string="Informaci√≥n de la Muestra">
                                <field name="sample_reception_id"/>
                                <field name="sample_code" readonly="1"/>
                                <field name="sample_identifier" readonly="1"/>
                            </group>
                            <group string="Fechas">
                                <field name="analysis_start_date"/>
                                <field name="analysis_end_date"/>
                            </group>
                        </group>

                        <!-- üÜï SECCI√ìN DE PAR√ÅMETROS DE AN√ÅLISIS -->
                        <notebook>
                            <page string="üî¨ Par√°metros de An√°lisis">
                                <field name="parameter_analysis_ids" nolabel="1">
                                    <list string="Par√°metros">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="microorganism"/>
                                        <field name="method"/>
                                        <field name="analysis_status"/>
                                        <field name="result_value"/>
                                        <field name="qc_passed"/>
                                    </list>
                                    
                                    <form string="Par√°metro de An√°lisis">
                                        <header>
                                            <field name="analysis_status" widget="statusbar" statusbar_visible="pending,in_progress,completed,reviewed,approved"/>
                                        </header>
                                        
                                        <sheet>
                                            <div class="oe_title">
                                                <h1>
                                                    <field name="name" readonly="1"/>
                                                </h1>
                                                <h3>
                                                    <field name="microorganism" readonly="1"/>
                                                </h3>
                                            </div>

                                            <!-- Informaci√≥n del par√°metro -->
                                            <group>
                                                <group string="üìã Informaci√≥n del Par√°metro">
                                                    <field name="method" readonly="1"/>
                                                    <field name="unit" readonly="1"/>
                                                    <field name="category" readonly="1"/>
                                                    <field name="parameter_id" readonly="1"/>
                                                </group>
                                                <group string="üìÖ Informaci√≥n del An√°lisis">
                                                    <field name="analysis_date"/>
                                                    <field name="qc_passed"/>
                                                </group>
                                            </group>

                                            <!-- Resultados -->
                                            <group string="üìä Resultados">
                                                <group>
                                                    <field name="result_value"/>
                                                    <field name="result_numeric"/>
                                                </group>
                                                <group>
                                                    <field name="result_qualitative"/>
                                                </group>
                                            </group>

                                            <!-- Observaciones -->
                                            <group string="üìù Observaciones y Notas">
                                                <field name="analyst_notes" 
                                                       placeholder="Observaciones t√©cnicas del an√°lisis..."/>
                                                <field name="internal_notes" 
                                                       placeholder="Notas internas del laboratorio..."/>
                                                <field name="qc_notes" 
                                                       placeholder="Observaciones de control de calidad..."/>
                                            </group>

                                            <!-- Procedimiento espec√≠fico -->
                                            <group string="üî¨ Procedimiento">
                                                <field name="specific_method" 
                                                       placeholder="Detalles espec√≠ficos del m√©todo utilizado..."/>
                                            </group>

                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========== VISTA PARA PAR√ÅMETROS DE AN√ÅLISIS ========== -->
        <record id="view_parameter_analysis_list" model="ir.ui.view">
            <field name="name">lims.parameter.analysis.list</field>
            <field name="model">lims.parameter.analysis</field>
            <field name="arch" type="xml">
                <list string="Par√°metros de An√°lisis">
                    <field name="analysis_id"/>
                    <field name="name"/>
                    <field name="microorganism"/>
                    <field name="analysis_status"/>
                    <field name="result_value"/>
                    <field name="analysis_date"/>
                    <field name="qc_passed"/>
                </list>
            </field>
        </record>

        <!-- ========== ACCI√ìN PARA AN√ÅLISIS ========== -->
        <record id="action_lims_analysis" model="ir.actions.act_window">
            <field name="name">An√°lisis de Muestras</field>
            <field name="res_model">lims.analysis</field>
            <field name="view_mode">list,form</field>
            <field name="view_ids" eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_lims_analysis_list')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_lims_analysis_form')})
            ]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay an√°lisis disponibles
                </p>
                <p>
                    Los an√°lisis se crean autom√°ticamente desde muestras recibidas
                </p>
            </field>
        </record>

        <!-- ========== ACCI√ìN PARA PAR√ÅMETROS DE AN√ÅLISIS ========== -->
        <record id="action_parameter_analysis" model="ir.actions.act_window">
            <field name="name">Par√°metros de An√°lisis</field>
            <field name="res_model">lims.parameter.analysis</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay par√°metros de an√°lisis
                </p>
                <p>
                    Los par√°metros se crean autom√°ticamente al crear an√°lisis
                </p>
            </field>
        </record>

        <!-- ========== MEN√öS ========== -->
        <menuitem id="menu_lims_analysis" 
                  name="An√°lisis" 
                  parent="menu_lims_analysis_root" 
                  action="action_lims_analysis" 
                  sequence="10"/>

        <menuitem id="menu_parameter_analysis" 
                  name="Par√°metros de An√°lisis" 
                  parent="menu_lims_analysis_root" 
                  action="action_parameter_analysis" 
                  sequence="15"/>

        <!-- Acci√≥n para limpiar hu√©rfanos -->
        <record id="action_clean_orphans" model="ir.actions.server">
            <field name="name">üßπ Limpiar Registros Hu√©rfanos</field>
            <field name="model_id" ref="model_lims_analysis"/>
            <field name="binding_model_id" ref="model_lims_analysis"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">action = env['lims.analysis'].action_clean_orphan_records()</field>
        </record>

    </data>
</odoo>