<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <!-- ========== VISTA FORMULARIO PRINCIPAL ========== -->
        <record id="view_analysis_report_form" model="ir.ui.view">
            <field name="name">lims.analysis.report.form</field>
            <field name="model">lims.analysis.report</field>
            <field name="arch" type="xml">
                <form string="Reporte de An√°lisis">
                    <header>
                        <!-- Botones de acci√≥n -->
                        <button name="action_authorize_quality"
                                type="object"
                                string="‚úÖ Autorizar Calidad"
                                class="btn-warning"
                                invisible="report_state != 'ready' or is_authorized == True"
                                help="Autorizar resultados para emisi√≥n"/>
                        
                        <button name="action_generate_pdf"
                                type="object" 
                                string="üìã Generar PDF"
                                class="btn-primary"
                                invisible="is_authorized == False"
                                help="Generar reporte en PDF"/>
                        
                        <button name="action_send_email_report"
                                type="object"
                                string="üìß Enviar por Email"
                                class="btn-success"
                                invisible="is_authorized == False"
                                help="Enviar reporte por correo electr√≥nico"/>
                        
                        <!-- Barra de estado -->
                        <field name="report_state" widget="statusbar" 
                               statusbar_visible="draft,ready,authorized,sent"/>
                    </header>
                    
                    <sheet>
                        <!-- T√≠tulo del reporte -->
                        <div class="oe_title">
                            <h1>
                                <field name="report_code" readonly="1"/>
                            </h1>
                            <h2>
                                <field name="custody_chain_code" readonly="1"/>
                            </h2>
                        </div>

                        <!-- Informaci√≥n b√°sica -->
                        <group>
                            <group string="üìã Informaci√≥n del Reporte">
                                <field name="report_type" readonly="1"/>
                                <field name="report_date"/>
                                <field name="customer_id" readonly="1"/>
                            </group>
                            <group string="üìä Estad√≠sticas">
                                <field name="total_samples" readonly="1"/>
                                <field name="total_parameters" readonly="1"/>
                                <field name="completed_parameters" readonly="1"/>
                                <field name="is_authorized" readonly="1"/>
                            </group>
                        </group>

                        <!-- Indicador visual de progreso -->
                        <div class="alert alert-info" 
                             invisible="is_authorized == True"
                             style="margin: 15px 0;">
                            <strong>üìä Progreso del Reporte:</strong>
                            <field name="completed_parameters"/> de 
                            <field name="total_parameters"/> par√°metros incluidos
                            
                            <div style="margin-top: 10px;">
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar" 
                                         role="progressbar" 
                                         t-attf-style="width: #{doc.completed_parameters * 100 / doc.total_parameters if doc.total_parameters > 0 else 0}%"
                                         aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Indicador de autorizaci√≥n -->
                        <div class="alert alert-success" 
                             invisible="is_authorized == False"
                             style="margin: 15px 0;">
                            <strong>‚úÖ Reporte Autorizado</strong> por 
                            <field name="quality_signature_name"/> el 
                            <field name="quality_signature_date"/>
                        </div>

                        <!-- Notebook con secciones -->
                        <notebook>
                            <!-- P√°gina de an√°lisis incluidos -->
                            <page string="üî¨ An√°lisis Incluidos">
                                <field name="analysis_ids" nolabel="1">
                                    <list string="An√°lisis en este Reporte" create="false" delete="false" edit="false">
                                        <field name="sample_code" string="C√≥digo"/>
                                        <field name="sample_identifier" string="Identificaci√≥n"/>
                                        <field name="analysis_start_date" string="Fecha An√°lisis"/>
                                        <field name="ready_parameters_count" string="Listos"/>
                                        <field name="total_parameters_count" string="Total"/>
                                        <field name="has_ready_parameters" string="üìä" widget="boolean_toggle" readonly="1"/>
                                        <field name="all_parameters_ready" string="‚úÖ" widget="boolean_toggle" readonly="1"/>
                                    </list>
                                </field>
                                
                                <!-- Informaci√≥n adicional -->
                                <div style="margin-top: 15px; padding: 10px; background-color: #f8f9fa; border-radius: 5px;">
                                    <p><strong>‚ÑπÔ∏è Informaci√≥n:</strong></p>
                                    <ul style="margin: 5px 0;">
                                        <li><strong>üìä</strong> = Muestra tiene al menos un par√°metro listo</li>
                                        <li><strong>‚úÖ</strong> = Muestra tiene todos sus par√°metros listos</li>
                                        <li>Los an√°lisis se incluyen autom√°ticamente seg√∫n el tipo de reporte</li>
                                    </ul>
                                </div>
                            </page>

                            <!-- P√°gina de autorizaci√≥n -->
                            <page string="‚úÖ Autorizaci√≥n de Calidad" invisible="is_authorized == False">
                                <group string="üë• Responsable de Calidad">
                                    <field name="quality_signature_name" readonly="1"/>
                                    <field name="quality_signature_position" readonly="1"/>
                                    <field name="quality_signature_date" readonly="1"/>
                                </group>
                                
                                <group string="üìù Notas de Calidad">
                                    <field name="quality_notes" nolabel="1" readonly="1"/>
                                </group>
                                
                                <!-- Vista previa de la firma -->
                                <group string="‚úçÔ∏è Firma de Autorizaci√≥n">
                                    <field name="quality_signature" widget="image" readonly="1" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>

                    </sheet>
                    
                    <!-- Chatter para seguimiento -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- ========== VISTA FORMULARIO PARA AUTORIZACI√ìN ========== -->
        <record id="view_analysis_report_quality_auth_form" model="ir.ui.view">
            <field name="name">lims.analysis.report.quality.auth.form</field>
            <field name="model">lims.analysis.report</field>
            <field name="arch" type="xml">
                <form string="Autorizaci√≥n de Calidad">
                    <sheet>
                        <!-- T√≠tulo -->
                        <div class="oe_title">
                            <h1>Autorizaci√≥n de Resultados</h1>
                            <h2>
                                Reporte: <field name="report_code" readonly="1"/>
                            </h2>
                            <h3>
                                Cadena: <field name="custody_chain_code" readonly="1"/>
                            </h3>
                        </div>
                        
                        <!-- Resumen del reporte -->
                        <div style="margin: 20px 0; padding: 15px; background-color: #e9ecef; border-radius: 5px;">
                            <strong>üìä Resumen del Reporte:</strong><br/>
                            ‚Ä¢ Tipo: <field name="report_type" readonly="1"/><br/>
                            ‚Ä¢ Cliente: <field name="customer_id" readonly="1"/><br/>
                            ‚Ä¢ Muestras incluidas: <field name="total_samples" readonly="1"/><br/>
                            ‚Ä¢ Par√°metros reportados: <field name="completed_parameters" readonly="1"/> de <field name="total_parameters" readonly="1"/>
                        </div>

                        <!-- Informaci√≥n del responsable -->
                        <group string="üë• Informaci√≥n del Responsable de Calidad">
                            <field name="quality_signature_name" 
                                   placeholder="Nombre completo del responsable"
                                   required="1"/>
                            <field name="quality_signature_position" 
                                   placeholder="Cargo o posici√≥n"/>
                        </group>
                        
                        <!-- Notas de calidad -->
                        <group string="üìù Notas de Calidad (Opcional)">
                            <field name="quality_notes" nolabel="1"
                                   placeholder="Observaciones o comentarios sobre la autorizaci√≥n..."/>
                        </group>
                        
                        <!-- Widget de firma -->
                        <group string="‚úçÔ∏è Firma de Autorizaci√≥n">
                            <field name="quality_signature" 
                                   widget="signature" 
                                   placeholder="Firmar aqu√≠ para autorizar la emisi√≥n del reporte"/>
                        </group>
                        
                        <!-- Advertencia -->
                        <div class="alert alert-warning" style="margin: 15px 0;">
                            <strong>‚ö†Ô∏è Importante:</strong><br/>
                            Al firmar este documento, usted autoriza la emisi√≥n del reporte de resultados y confirma que:
                            <ul style="margin: 10px 0;">
                                <li>Los resultados han sido revisados y son correctos</li>
                                <li>Los an√°lisis se realizaron conforme a los procedimientos establecidos</li>
                                <li>El reporte cumple con los est√°ndares de calidad del laboratorio</li>
                            </ul>
                        </div>
                        
                    </sheet>
                    
                    <!-- Botones de acci√≥n -->
                    <footer>
                        <button string="‚úÖ Autorizar Reporte" 
                                name="action_save_quality_authorization" 
                                type="object" 
                                class="btn-primary"/>
                        <button string="Cancelar" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <!-- ========== VISTA LISTA ========== -->
        <record id="view_analysis_report_list" model="ir.ui.view">
            <field name="name">lims.analysis.report.list</field>
            <field name="model">lims.analysis.report</field>
            <field name="arch" type="xml">
                <list string="Reportes de An√°lisis" default_order="create_date desc">
                    <!-- Campos b√°sicos -->
                    <field name="report_code"/>
                    <field name="custody_chain_code"/>
                    <field name="customer_id"/>
                    <field name="report_type" 
                           decoration-warning="report_type == 'preliminary'"
                           decoration-success="report_type == 'final'"/>
                    
                    <!-- Estad√≠sticas -->
                    <field name="total_samples"/>
                    <field name="completed_parameters"/>
                    <field name="total_parameters"/>
                    
                    <!-- Estado -->
                    <field name="report_state"
                           decoration-muted="report_state == 'draft'"
                           decoration-info="report_state == 'ready'"
                           decoration-success="report_state == 'authorized'"
                           decoration-primary="report_state == 'sent'"/>
                    
                    <!-- Autorizaci√≥n -->
                    <field name="is_authorized" widget="boolean_toggle"/>
                    <field name="quality_signature_name"/>
                    
                    <!-- Fechas -->
                    <field name="report_date"/>
                    <field name="quality_signature_date"/>
                </list>
            </field>
        </record>
        <!-- ========== VISTA B√öSQUEDA ========== -->
        <record id="view_analysis_report_search" model="ir.ui.view">
            <field name="name">lims.analysis.report.search</field>
            <field name="model">lims.analysis.report</field>
            <field name="arch" type="xml">
                <search string="Buscar Reportes">
                    <!-- Campos de b√∫squeda -->
                    <field name="report_code"/>
                    <field name="custody_chain_code"/>
                    <field name="customer_id"/>
                    <field name="quality_signature_name"/>
                    
                    <!-- Separador -->
                    <separator/>
                    
                    <!-- Filtros principales -->
                    <filter string="üü° Borradores" 
                            name="draft"
                            domain="[('report_state', '=', 'draft')]"/>
                    
                    <filter string="üîµ Listos para Autorizar" 
                            name="ready"
                            domain="[('report_state', '=', 'ready')]"/>
                    
                    <filter string="üü¢ Autorizados" 
                            name="authorized"
                            domain="[('report_state', '=', 'authorized')]"/>
                    
                    <filter string="üìß Enviados" 
                            name="sent"
                            domain="[('report_state', '=', 'sent')]"/>
                    
                    <!-- Separador -->
                    <separator/>
                    
                    <!-- Filtros por tipo -->
                    <filter string="üìã Preliminares" 
                            name="preliminary"
                            domain="[('report_type', '=', 'preliminary')]"/>
                    
                    <filter string="üìÑ Finales" 
                            name="final"
                            domain="[('report_type', '=', 'final')]"/>
                    
                    <!-- Separador -->
                    <separator/>
                    
                    <!-- Filtros por fecha -->
                    <filter string="Hoy" 
                            name="today"
                            domain="[('report_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    
                    <filter string="Esta Semana" 
                            name="this_week"
                            domain="[('report_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    
                    <!-- Agrupaci√≥n -->
                    <group expand="0" string="Agrupar Por">
                        <filter string="Estado" 
                                name="group_state"
                                context="{'group_by': 'report_state'}"/>
                        <filter string="Tipo de Reporte" 
                                name="group_type"
                                context="{'group_by': 'report_type'}"/>
                        <filter string="Cliente" 
                                name="group_customer"
                                context="{'group_by': 'customer_id'}"/>
                        <filter string="Fecha" 
                                name="group_date"
                                context="{'group_by': 'report_date'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- ========== VISTA KANBAN ========== -->
        <record id="view_analysis_report_kanban" model="ir.ui.view">
            <field name="name">lims.analysis.report.kanban</field>
            <field name="model">lims.analysis.report</field>
            <field name="arch" type="xml">
                <kanban default_group_by="report_state" class="o_kanban_small_column">
                    <field name="report_code"/>
                    <field name="custody_chain_code"/>
                    <field name="customer_id"/>
                    <field name="report_type"/>
                    <field name="report_state"/>
                    <field name="is_authorized"/>
                    <field name="total_samples"/>
                    <field name="completed_parameters"/>
                    <field name="total_parameters"/>
                    <field name="quality_signature_name"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                
                                <!-- Header con c√≥digo y tipo -->
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_title">
                                        <strong><field name="report_code"/></strong>
                                        <span t-if="record.report_type.raw_value == 'preliminary'" 
                                              class="badge badge-warning">PRELIMINAR</span>
                                        <span t-if="record.report_type.raw_value == 'final'" 
                                              class="badge badge-success">FINAL</span>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="custody_chain_code"/>
                                    </div>
                                </div>
                                
                                <!-- Cliente -->
                                <div style="margin: 5px 0;">
                                    <strong>Cliente:</strong> <field name="customer_id"/>
                                </div>
                                
                                <!-- Progreso -->
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge badge-info">
                                        <field name="completed_parameters"/> / <field name="total_parameters"/> par√°metros
                                    </span>
                                    <span class="badge badge-secondary">
                                        <field name="total_samples"/> muestra(s)
                                    </span>
                                </div>
                                
                                <!-- Autorizaci√≥n -->
                                <div class="oe_kanban_bottom_right">
                                    <span t-if="record.is_authorized.raw_value" 
                                          class="badge badge-success">
                                        ‚úÖ <field name="quality_signature_name"/>
                                    </span>
                                    <span t-else="" class="badge badge-secondary">
                                        ‚è≥ Sin autorizar
                                    </span>
                                </div>
                                
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- ========== ACCI√ìN PRINCIPAL ========== -->
        <record id="action_analysis_reports" model="ir.actions.act_window">
            <field name="name">Reportes de An√°lisis</field>
            <field name="res_model">lims.analysis.report</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="view_analysis_report_search"/>
            <field name="context">{'search_default_ready': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay reportes de an√°lisis creados
                </p>
                <p>
                    Los reportes se crean autom√°ticamente desde los an√°lisis cuando tienen par√°metros listos.
                </p>
            </field>
        </record>
        
        <!-- ========== ACCI√ìN PARA REPORTES PENDIENTES DE AUTORIZACI√ìN ========== -->
        <record id="action_reports_pending_authorization" model="ir.actions.act_window">
            <field name="name">üìã Pendientes de Autorizaci√≥n</field>
            <field name="res_model">lims.analysis.report</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="view_analysis_report_search"/>
            <field name="context">{'search_default_ready': 1}</field>
            <field name="domain">[('report_state', '=', 'ready')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay reportes pendientes de autorizaci√≥n
                </p>
                <p>
                    Los reportes aparecer√°n aqu√≠ cuando est√©n listos para ser autorizados por el personal de calidad.
                </p>
            </field>
        </record>
        
        <!-- ========== ACCI√ìN PARA REPORTES AUTORIZADOS ========== -->
        <record id="action_reports_authorized" model="ir.actions.act_window">
            <field name="name">‚úÖ Reportes Autorizados</field>
            <field name="res_model">lims.analysis.report</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_analysis_report_search"/>
            <field name="context">{'search_default_authorized': 1}</field>
            <field name="domain">[('is_authorized', '=', True)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No hay reportes autorizados
                </p>
                <p>
                    Los reportes autorizados por el personal de calidad aparecer√°n aqu√≠.
                </p>
            </field>
        </record>

        <!-- ========== MEN√öS ========== -->
        <menuitem id="menu_analysis_reports_root" 
                  name="üìä Reportes de An√°lisis" 
                  parent="menu_lims_analysis_root" 
                  sequence="20"/>

        <menuitem id="menu_analysis_reports_all" 
                  name="Todos los Reportes" 
                  parent="menu_analysis_reports_root" 
                  action="action_analysis_reports" 
                  sequence="10"/>

        <menuitem id="menu_reports_pending_auth" 
                  name="Pendientes de Autorizaci√≥n" 
                  parent="menu_analysis_reports_root" 
                  action="action_reports_pending_authorization" 
                  sequence="20"/>

        <menuitem id="menu_reports_authorized" 
                  name="Reportes Autorizados" 
                  parent="menu_analysis_reports_root" 
                  action="action_reports_authorized" 
                  sequence="30"/>

    </data>
</odoo>