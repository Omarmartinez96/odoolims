        <!-- ========== VISTA DE B√öSQUEDA CON FILTROS ========== -->
        <record id="view_analysis_reports_search" model="ir.ui.view">
            <field name="name">lims.analysis.reports.search</field>
            <field name="model">lims.analysis</field>
            <field name="arch" type="xml">
                <search string="Buscar An√°lisis para Reportes">
