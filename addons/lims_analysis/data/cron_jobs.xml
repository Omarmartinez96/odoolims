<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job para limpiar registros huérfanos semanalmente -->
        <record id="cron_clean_orphan_records" model="ir.cron">
            <field name="name">Limpiar Registros Huérfanos LIMS</field>
            <field name="model_id" ref="model_lims_analysis"/>
            <field name="code">model.cron_clean_orphan_records()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>