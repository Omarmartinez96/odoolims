<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <!-- ========== ACCIÓN DEL REPORTE DE ANÁLISIS ========== -->
        <record id="action_report_analysis_results" model="ir.actions.report">
            <field name="name">Reporte de Resultados de Análisis</field>
            <field name="model">lims.analysis.report</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">lims_analysis.report_analysis_results_document</field>
            <field name="report_file">lims_analysis.report_analysis_results_document</field>
            <field name="print_report_name">
                'Reporte de Análisis - ' + (object.report_code or 'Sin código') + 
                ' (' + (object.report_type == 'preliminary' and 'Preliminar' or 'Final') + ')' + '.pdf'
            </field>
            <field name="paperformat_id" ref="lims_paperformat.paperformat_lims_letter"/>
            <field name="binding_model_id" ref="model_lims_analysis_report"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>